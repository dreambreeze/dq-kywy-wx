/* 卡图片 */
.card-box {
    height: 300rpx;
    text-align: center;
    background: url('https://note.youdao.com/yws/api/personal/file/WEB18806b97d9c5123256ee2a5a73ec6222?method=download&shareKey=2c42d11923842efcd03777d8be00138f') no-repeat;
    background-size: 100%;
    padding: 20rpx 0 0 0;
}

.none-tips{
    font-size:30rpx;
    color:#666;
    line-height: 100rpx;
    text-align: center;
}

.card-box image {
    width: 495rpx;
    height: 260rpx;
}
/* 卡信息 */
.card-info{
    width:460rpx;
    border-radius: 10rpx;
    margin:30rpx auto;
    box-shadow: 0 8rpx 8rpx rgba(0, 0, 0, 0.2);
}

.card-header{
    color:#fff;
    line-height: 1.6;
    background: #3b81d6;
    font-size:28rpx;
    padding:20rpx 25rpx; 
    border-radius:10rpx 10rpx 0 0;
}

.card-content{
    line-height:45rpx;
    color:#1684ff;
    font-size:26rpx;
    padding:10rpx 25rpx;
}


.flex-warp {
    margin:10rpx 0 0 0;
    display: flex;
}

.flex-warp text {
    flex: 1;
}


.info-input {
  margin-top: 10rpx;
  padding: 62rpx;
  background: #fff;
}

.input-item {
  margin-bottom: 28rpx;
  box-sizing: border-box;
}

.i-label {
  font-size: 28rpx;
  width: 166rpx;
  color: #666;
  line-height: 72rpx;
}

.i-label text {
  font-weight: bold;
  font-size: 28rpx;
  /* font-family: tahoma, verdana; */
  color: #ed0f10;
  vertical-align: bottom;
  display: inline-block;
  margin-right: 2px;
}

.i-input {
  border-bottom: 1rpx solid #ccc;
  flex: 1;
}

.i-input input, .verify-input input {
  line-height: 72rpx;
  font-size: 28rpx;
  height: 72rpx;
  padding: 0 20rpx;
}

.verify-input {
  width: 306rpx;
  border-bottom: 1rpx solid #ccc;
}

.get-verify {
  width: 164rpx;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  display: inline-block;
  border-radius: 3px;
  margin-left: 10rpx;
  height: 56rpx;
  line-height: 56rpx;
  margin-top: 10rpx;
  background: #3b81d6;
}

.get-verify.seconds {
  background-color: #aaa;
}

.radio {
  font-size: 28rpx;
  margin-right: 35rpx;
}

.dc-btn {
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  text-align: center;
  border-radius: 30px;
  margin: 60rpx auto;
  font-size: 30rpx;
  background: #3b81d6;
}

.getPhoneNumber {
  flex: 1;
  border-bottom: 1rpx solid #ccc;
}

.getPhoneNumber button {
  width: 150rpx;
  background-color: #51c332;
  color: #fff;
  margin: 0 0 0 70rpx;
  padding: 12rpx 10rpx;
  line-height: 1;
  font-size: 28rpx;
  border-radius: 3rpx;
  display: inline-block;
}

.again-reserve {
  text-align: center;
  padding: 34rpx 0;
}

.again-reserve button {
  display: inline-block;
  width: 238rpx;
  height: 74rpx;
  line-height: 74rpx;
  text-align: center;
  font-size: 30rpx;
  border: 1rpx solid #3b81d6;
  color: #3b81d6;
  border-radius: 37rpx;
}

.again-reserve button.active {
  background-color: #3b81d6;
  color: #fff;
  margin-left: 75rpx;
}

.transferee {
  text-align: center;
  padding-bottom: 22rpx;
}

.transferee view {
  display: inline-block;
  font-size: 30rpx;
  color: #a3a2a9;
}

.transferee view:nth-of-type(2) {
  margin-left: 30rpx;
}
