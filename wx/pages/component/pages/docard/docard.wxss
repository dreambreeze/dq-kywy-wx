@import "../../../common/storelist.wxss";
page{
    height: 100%;
}

.container {
    background: #fff;
    height: 100%;
}

/* 办卡顶部标题 */

.store-box {
    width: 180rpx!important;
    background: #3b81d6;
    height: 100%;
}

.apply-card {
    height: 100rpx;
    background: url('https://iservice.daqisoft.cn/Public/Home/images/newimages/apply-card.png') no-repeat center center;
    background-size: 64rpx;
}
/* 办卡下边选卡 */

.do-card {
    display: flex!important;
    overflow: hidden;
    height: 100%;
}

.d-cards, .d-cards scroll-view {
    height: 1000rpx;
}

.dc-select {
    flex: 1;
    height: 100%;
}

.dc-select .title {
    font-size: 30rpx;
    line-height: 80rpx;
    padding: 0 25rpx;
}

.store-info {
   line-height: 40rpx;
   margin: 0 0 22rpx 0;
   font-size:22rpx;
   color:#3b81d6;
   padding:0 25rpx;
}

.address{
    background: url('https://iservice.daqisoft.cn/Public/Home/images/newimages/index_address@2x.png') no-repeat left 10rpx;
    background-size: 20rpx;
    padding:0 0 0 30rpx;
}

.tel{
    background: url('https://iservice.daqisoft.cn/Public/Home/images/newimages/index_tel@2x.png') no-repeat left 10rpx;
    background-size: 20rpx;
    padding:0 0 0 30rpx;
}

.cards {
    position: relative;
    padding: 8rpx 0 0 0;
    margin: 0 0 30rpx;
}

.cards:last-child{
    margin: 0 0 60rpx;
}

.card-type {
    position: absolute;
    right: 65rpx;
    margin: -10rpx 0 0 0 !important;
    color: #fff;
    font-size: 30rpx;
    text-align: center;
    width: 133rpx;
    height: 74rpx;
    line-height: 55rpx;
    background: url('https://iservice.daqisoft.cn/Public/Home/images/newimages/label@2x.png') no-repeat center;
    background-size: 100%;
    padding: 0 0 0 10rpx;
    overflow: hidden;
}

.is-fyr {
    position: absolute;
    top: 0;
    right: 0;
    background: url(https://iservice.daqisoft.cn/Public/Home/images/fyr.png) no-repeat;
    background-size: contain;
    width: 105rpx;
    height: 105rpx;
    margin: 0 !important;
}

.cards image {
    display: block;
    margin: 0 auto;
    width: 493rpx;
    height: 260rpx;
    border-radius: 10rpx;
}

.rule-list{
    width:543rpx!important;
    height: 50rpx!important;
    background: #265389;
    margin:-10rpx auto 0!important;
    border-radius: 25rpx!important;
    line-height: 50rpx!important;
}

.rule-list .item {
    width:543rpx!important;
    height: 50rpx!important;
    line-height: 50rpx;
    font-size: 22rpx;
    color: #fff;
    text-align: center;
}
