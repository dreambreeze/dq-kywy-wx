@import "../../../common/storelist.wxss";

.container {
    background: #fff;
}

/* 办卡顶部标题 */

.store-box {
    width: 180rpx!important;
    background: #3b81d6;
    margin-bottom:-10000px;
    padding-bottom:10000px;
}

.apply-card {
    height: 100rpx;
    background: url('https://note.youdao.com/yws/api/personal/file/WEB2ac226ecbab38969930ede970a6fc48c?method=download&shareKey=513281fe8c52d6fb0047b385f1f201e5') no-repeat center center;
    background-size: 64rpx;
}

/* 办卡下边选卡 */
.do-card {
    display: flex!important;
    overflow: hidden;
}

.d-cards, .d-cards scroll-view {
    height: 910rpx;
}

.dc-select {
    flex: 1;
    padding: 0 25rpx;
    margin-bottom:-10000px;
    padding-bottom:10000px;
}

.dc-select .title {
    font-size: 30rpx;
    line-height: 80rpx;
}

.store-info {
   line-height: 40rpx;
   margin: 0 0 22rpx 0;
   font-size:22rpx;
   color:#3b81d6;
}

.address{
    background: url('https://note.youdao.com/yws/api/personal/file/WEB9385772b1ac4356f459170b01e3d69f2?method=download&shareKey=cf2f7587c0235b5e506a0e1de0dc5bda') no-repeat left 10rpx;
    background-size: 20rpx;
    padding:0 0 0 30rpx;
}

.tel{
    background: url('https://note.youdao.com/yws/api/personal/file/WEBb6c7e74a45b67253e4c9fd3cab156b6d?method=download&shareKey=1cd3ec2bc537f2c79b872edf18809935') no-repeat left 10rpx;
    background-size: 20rpx;
    padding:0 0 0 30rpx;
}

.cards {
    position: relative;
    padding: 8rpx 0 0 0;
    margin: 0 0 30rpx;
}

.card-type {
    position: absolute;
    right: 65rpx;
    margin: -10rpx 0 0 0 !important;
    color: #fff;
    font-size: 30rpx;
    text-align: center;
    width: 133rpx;
    height: 74rpx;
    line-height: 55rpx;
    background: url('https://note.youdao.com/yws/api/personal/file/WEBfdec213a57c79960a9f69847eab386cd?method=download&shareKey=03503e56337c37ff9beab76534de3f89') no-repeat center;
    background-size: 100%;
    padding: 0 0 0 10rpx;
}

.is-fyr {
    position: absolute;
    top: 0;
    right: 0;
    background: url(https://iservice.daqisoft.cn/Public/Home/images/fyr.png) no-repeat;
    background-size: contain;
    width: 105rpx;
    height: 105rpx;
    margin: 0 !important;
}

.cards image {
    display: block;
    margin: 0 auto;
    width: 493rpx;
    height: 260rpx;
    border-radius: 10rpx;
}

.docard-tips {
    width:543rpx;
    height: 50rpx;
    line-height: 50rpx;
    padding:0 25rpx;
    font-size: 22rpx;
    color: #fff;
    margin:-10rpx auto 0;
    background: #265389;
    border-radius: 25rpx;
}
