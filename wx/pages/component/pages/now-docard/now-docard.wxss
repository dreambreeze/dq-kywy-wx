@import "../../../common/amount.wxss";

.container {
    background: #fff;
}

.card-banner {
    text-align: center;
    padding: 15rpx 0;
    background: url('https://note.youdao.com/yws/api/personal/file/WEB18806b97d9c5123256ee2a5a73ec6222?method=download&shareKey=2c42d11923842efcd03777d8be00138f') no-repeat;
    background-size: 100%;
}

.card-banner image {
    width: 550rpx;
    height: 290rpx;
}

.card-info {
    background: #1684ff;
    color: #fff;
    font-size: 28rpx;
    width: 540rpx;
    padding: 10rpx 50rpx;
    margin: 30rpx auto;
    border-radius: 10rpx;
}

.card-info .amout-money {
    display: block;
    font-size: 28rpx;
    text-align-last: justify;
}

.store-name, .card-type {
    display: inline-block;
    width: 50%;
    font-size: 22rpx;
}

.card-type {
    text-align: right;
}

.discount-card-info .store-name, .discount-card-info .card-type {
    font-size: 28rpx;
}

.form-box {
    padding: 0 30rpx 25rpx;
    background: #fff;
}

.form-item {
    display: flex;
    box-sizing: border-box;
    padding: 15rpx 0;
}

.form-item label {
    min-width: 146rpx;
    line-height: 50rpx;
    color: #333;
    font-size: 28rpx;
    text-align: right;
    margin: 0 20rpx 0 0;
}

.form-item input {
    flex: 1;
    margin: 0 48rpx 0 0;
    line-height: 50rpx;
    font-size: 28rpx;
    border-radius: 25rpx;
    border: #999 1rpx solid;
    padding: 0 25rpx;
}

.form-item .picker, .form-item picker {
    box-sizing: border-box;
    line-height: 50rpx;
    font-weight: 400;
    flex: 1;
    font-size: 28rpx;
}

.form-item .picker {
    margin: 0 48rpx 0 0;
    border-radius: 25rpx;
    border: #999 1rpx solid;
    padding: 0 15rpx;
}

.form-item .unpicker {
    color: #808080;
}

.sex-box view {
    width: 70rpx;
    height: 70rpx;
    margin: 0 25rpx;
    border-radius: 50%;
    padding: 0;
}

.sex-box label {
    line-height: 70rpx;
}

.man {
    background: url('https://note.youdao.com/yws/api/personal/file/WEB1b72cae3c0a1bb855384bca4d25dfe9a?method=download&shareKey=8583939325fcea4bd572ac873d538831') no-repeat;
    background-size: 100%;
}

.man-checked {
    background: url('https://note.youdao.com/yws/api/personal/file/WEB0d34667c0c3aecac77a0753b4327aa8b?method=download&shareKey=a1488bca523372fceeba074f9677c23e') no-repeat;
    background-size: 100%;
}

.women {
    background: url('https://note.youdao.com/yws/api/personal/file/WEB962d7e4de9a65cd40d83d483e3b58a83?method=download&shareKey=045961d509772542cda87221723d1562') no-repeat;
    background-size: 100%;
}

.women-checked {
    background: url('https://note.youdao.com/yws/api/personal/file/WEB3fe81726d12849fd7279f121dbe78924?method=download&shareKey=613097117343c31562f9bd6fc1c6c1e0') no-repeat;
    background-size: 100%;
}

.verify-box button {
    width: 185rpx;
    background: #1684ff;
    color: #fff;
    font-size: 28rpx;
    line-height: 50rpx;
    padding: 0;
    border-radius: 25rpx;
    margin: 0 48rpx 0 0;
}

.verify-box input {
    margin: 0 15rpx 0 0;
}

.amount-box {
    display: block;
}

.amount-box label {
    display: blcok;
}

.amount-list {
    overflow: hidden;
    padding: 0 15rpx 0 25rpx;
    margin: 0 0 0 -35rpx;
}

.amount-list .item {
    width: 192rpx;
    text-align: center;
    border: #1684ff 2rpx solid;
    color: #333;
    padding: 10rpx;
    border-radius: 10rpx;
    float: left;
    margin: 20rpx 0 20rpx 35rpx;
}

.amount-list .current {
    background: #1684ff;
    color: #fff;
}

.amount-list .item text {
    display: block;
}

.amount-list .item text:nth-of-type(1) {
    font-size: 32rpx;
    line-height: 42rpx;
}

.amount-list .item text:nth-of-type(2) {
    font-size: 22rpx;
    line-height: 32rpx;
}

.cardRules{
  font-size:22rpx;
  line-height:60rpx;
}

.cardRules .check{
  width:20rpx;
  height:20rpx;
  background: url('https://note.youdao.com/yws/api/personal/file/WEBdc52d7c2cbe2973ea0c6ed5ae594c769?method=download&shareKey=dc44f824c47b0fe09a40532034fa66f2') no-repeat;
  background-size: 100%;
  margin:20rpx 0 0 0;
}

.cardRules .checked{
  background: url('https://note.youdao.com/yws/api/personal/file/WEBdc52d7c2cbe2973ea0c6ed5ae594c769?method=download&shareKey=dc44f824c47b0fe09a40532034fa66f2') no-repeat;
  background-size: 100%;
}

.openingRules{
  color:#1684ff;
  padding:0 20rpx;
}

.sure-btn {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    color: #fff;
    text-align: center;
    border-radius: 40rpx;
    margin: 10rpx auto 40rpx;
    font-size: 34rpx;
    background: #1684ff;
}
