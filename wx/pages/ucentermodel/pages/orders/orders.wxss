@import "/pages/common/lib/animate.wxss";

.top-type {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index:2;
    background: #fff;
}

.main-type {
    display: flex;
    box-sizing: border-box;
    position: relative;
    color:#666;
    font-size:26rpx;
    justify-content: space-around;
    align-items: center;
    z-index:3;
}

.main-item {
    line-height: 40rpx;
    text-align: center;
    position: relative;
    padding: 20rpx 5rpx;
}

.main-item.active{
    color: #3b81d6;
}

.main-item.active:before{
    content:'';
    width:100%;
    height: 4rpx;
    border-radius: 2rpx;
    background: #3b81d6;
    position: absolute;
    bottom:16rpx;
    left: 0;
}

.main-item:nth-of-type(2):after{
    display:block;
    content:'';
    border-width:10rpx;
    border-style:solid;
    border-color:#666 transparent transparent transparent;
    position: absolute;
    right:-25rpx;
    top:50%;
    margin:-5rpx 0 0 0;
    transform: rotate(0deg);
    transition: all 0.8s;
}

.main-item.active:nth-of-type(2):after{
    border-color:#3b81d6 transparent transparent transparent;
}

.main-item.current:nth-of-type(2):after{
    transform: rotate(-180deg);
    margin:-16rpx 0 0 0;
}


.type-order-mask{
    display: block;
    position: fixed;
    top:80rpx;
    right:0;
    left:0;
    bottom:0;
    background: rgba(0, 0, 0, 0.6);
}

.type-order {
    position: absolute;
    left: 0;
    top: 80rpx;
    width: 100%;
    z-index: 2;
    background: #fff;
    padding: 10rpx 30rpx 30rpx; 
}

.type-item {
    float: left;
    height: 46rpx;
    width:150rpx;
    line-height: 44rpx;
    text-align: center;
    color:#3b81d6;
    border-radius: 23rpx;
    border:#3b81d6 1rpx solid;
    margin:20rpx 40rpx 0;
}

.type-item.active{
