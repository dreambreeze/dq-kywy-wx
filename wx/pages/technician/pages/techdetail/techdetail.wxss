.amcontainer{
  height: 100%;
}
.container .swiper{
  height: 450rpx;
  background: #acdcff;
}
.swiper swiper{
  height: 430rpx;
}
.swiper swiper-item{
  display: flex;
  justify-content: center;
  align-items: center;
  /* padding-right:32rpx; */
}
.swiper image{
  width: 320rpx;
  height: 350rpx;
  opacity: 0.5;
  z-index: 2;
}
.swiper .active{
  width: 338rpx;
  height: 385rpx;
	border-radius: 10rpx;
  transition:all .2s ease-in-out 0.3s;
  opacity: 1;
  z-index: 3;
}

.techinfo{
	display:flex;
	flex-direction:column;
	justify-content:center;
	align-items:center;
	padding:36rpx;
	width: 560rpx;
  height: 107rpx;
	margin: 40rpx auto 45rpx;
	color: #fff;
	background: #3b81d6;
  border-radius:10rpx; 
}
.techinfo .t-no{
  height: 36rpx;
  font-size:32rpx;
  font-weight:bold;
}
.techinfo .t-no text{
  margin-left: 27rpx;
}

.techinfo .t-qualification{
  color: #f8ab11;
  display: flex;
  align-items: center;
  padding: 12rpx 0 20rpx 0; 
  visibility:hidden; 
}
.t-qualification image{
  width: 23rpx;
  height: 27rpx;
  margin-right: 10rpx;
}
.techinfo .t-describable{
  font-size: 22rpx;
}

.td-line{
  height: 20rpx;
  background-color: #eee;
}
.techdetail{
  display: flex;
  flex-direction:column;
  margin: 0 auto;
  padding-bottom: 200rpx;
  width: 690rpx;
  height: 320rpx;
  box-shadow: 0rpx 6rpx 8rpx 4rpx rgba(0, 0, 0, 0.1);
  
}
.td-intro{

  padding: 28rpx 20rpx 18rpx 20rpx;
}
.td-head{
  height:36rpx;
  font-size: 30rpx;
  font-weight: bold;
  display: flex;
  align-items: left;
}
