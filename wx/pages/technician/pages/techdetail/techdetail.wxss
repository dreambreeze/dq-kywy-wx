@import "/pages/common/lib/animate.wxss";

.container{
  padding: 0 0;
  width: 100%;
}
/* 轮播图 start*/

.container .swiper {
  width: 100%;
  height: 450rpx;
  background: #acdcff;
}

.swiper swiper {
  height: 430rpx;
}

.swiper swiper-item {
  display: flex;
  justify-content: center;
  align-items: center;
}

.swiper image {
  width: 320rpx;
  height: 350rpx;
  opacity: 0.5;
  z-index: 2;
}

.swiper .active {
  width: 338rpx;
  height: 385rpx;
  border-radius: 10rpx;
  transition: all 0.2s ease-in-out 0.3s;
  opacity: 1;
  z-index: 3;
}
.largeImg-box{
  position: absolute;
  top: 0;
  left: 0;
 width: 100%;
  height: 100%;
  z-index: 10
}
.largeImg-box .largeImg{
  width: 100%;
  height: 100%;
}

/* 轮播图 end*/

/* 技师信息 start */

.techinfo {
  width: 560rpx;
  height: 107rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin: 40rpx auto 45rpx;
  padding: 36rpx;
  align-items: center;
  color: #fff;
  background: #3b81d6;
}

.techinfo .t-no {
  height: 36rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.techinfo .t-no text {
  margin-left: 27rpx;
}

.techinfo .t-describable {
  font-size: 22rpx;
}

/* 技师信息 end */

/* 详情信息 start*/
.techdetail {
  display: flex;
  flex-direction: column;
  margin:0 5%;
  width: 90%;
  padding-bottom: 30rpx;
  box-shadow: 0rpx 6rpx 8rpx 4rpx rgba(0, 0, 0, 0.08);
}

.td-intro {
  padding: 28rpx 20rpx 18rpx 20rpx;
}

.td-head {
  display: flex;
  align-items: left;
  height: 36rpx;
  font-size: 30rpx;
  font-weight: bold;
}

.td-desc {
  margin-top: 10rpx;
  line-height: 36rpx;
  font-size: 22rpx;
  color: #333;
}

.td-swiper swiper {
  height: 332rpx;
}

.td-swiper swiper-item {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-right: 2rpx;
}

.td-swiper image {
  width: 228rpx;
  height: 297rpx;
}

/* 详情信息 end*/
