@import "../common/engin-nav.wxss";
/**vip-center.wxss**/
/* 轮播图 */
.container {
    background-color: #eee;
    min-height: 1182rpx;
}

.swiper {
    background: url('https://iservice.daqisoft.cn/Public/Home/images/newimages/tech_top_back.png') repeat-x;
    background-size: auto 340rpx;
    position: relative;
}

.no-data{
    line-height: 340rpx;
    text-align: center;
    position: absolute;
    left:0;
    right:0;
    bottom:0;
    top:0;
    font-size:30rpx;
    color:#666;
}

.swiper swiper {
    height: 340rpx;
}

.swiper swiper-item {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}

.swiper image {
    width: 350rpx !important;
    height: 161rpx;
    opacity: 0.7;
    z-index: 2;
    border-radius: 10rpx;
    margin:-10rpx 0 0 0;
}

.active  image {
    width: 423rpx !important;
    height: 245rpx;
    transition: all 0.2s ease-in-out 0.3s;
    opacity: 1;
    z-index: 3;
    margin:-20rpx 0 0 0;
}


.store-info{
    position: absolute;
    left:0;
    right:0;
    margin:-56rpx 0 0 0;
    display: flex;
    padding:0 156rpx;
    line-height: 56rpx;
    font-size: 24rpx;
}

.store-info view:first-child{
    flex:1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding:0 2rpx;
}

.store-info view:last-child{
    display: inline;
    text-align: right;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding:0 2rpx;
}

.card-type {
    position: absolute;
    left: 37rpx;
    top: 110rpx;
    background: url("https://iservice.daqisoft.cn/Public/Home/images/newimages/vip-card-name@2x.png") no-repeat;
    background-size: 89rpx 39rpx;
    transition: all 0.2s ease-in-out 0.3s;
    font-size: 18rpx;
    line-height: 39rpx;
    height: 39rpx;
    width: 89rpx;
    color: #fff;
    z-index: 4;
    text-align: center;
    overflow: hidden;
}

.active .card-type {
    left: 0rpx;
    top: 80rpx;
    background-size: 126rpx 55rpx;
    width: 126rpx;
    line-height: 55rpx;
    height: 55rpx;
    font-size: 26rpx;
}

/* 会员操作 */
.member-box{
    text-align: center;
}

.open-button {
    display: block;
    width: 480rpx;
    height: 70rpx;
    line-height: 70rpx;
    margin: 40rpx auto;
    background: #1684ff;
    background-size: 480rpx 86rpx;
    padding: 0;
    text-align: center;
    color: #fff;
    font-size: 32rpx;
    outline: 0;
    border: 0;
    border-radius:35rpx;
    box-shadow: 4rpx 6rpx 8rpx rgba(0,0,0,0.2);
}

.go-icon {
    display: inline-block;
    width: 30rpx;
    font-size: 30rpx;
}

.handle-list {
    overflow: hidden;
    margin: 0 55rpx 0 85rpx;
}

.handle-box {
    float: left;
    width:276rpx;
    height: 276rpx;
    margin:0 30rpx 30rpx 0;
    border-radius: 10rpx;
    background: #fff;
    padding:60rpx 0;
}

.handle-box image {
    display: block;
    width: 95rpx;
    height: 95rpx;
    margin: 0 auto;
}

.handle-box text {
    font-size: 24rpx;
    color: #333;
    line-height: 76rpx;
}

/* 会员折扣列表 */

.discount-list {
    padding: 0 65rpx 120rpx;
}

.title {
    text-align: center;
    font-size: 38rpx;
    display: flex;
    position: relative;
    line-height: 118rpx;
}

.title text {
    display: inline-block;
    color: #333;
    padding: 0 24rpx;
}

.line {
    display: inline-block;
    flex: 1;
    height: 2rpx;
    background: #b0d5ff;
    position: relative;
    top: 58rpx;
}

