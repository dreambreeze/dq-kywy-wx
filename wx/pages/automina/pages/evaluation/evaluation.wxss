@import "../public/tpl/starest.wxss"; 
.amcontainer{
  padding-bottom: 100rpx
}
.e-item{
  background-color: #fff;
  color: #333;
  position:relative;
}

.e-item .e-head{
display: flex;
padding: 20rpx;
align-items: center;
font-size: 26rpx;
}
.e-head .e-name{
  flex:1;

}
.e-head .e-img{
  width: 84rpx;
  height: 84rpx;
  margin: 0 20rpx 0 16rpx;
}

.e-content{
  width: 100%;
  display: flex;
  justify-content: center;
}
.e-content textarea{
  width: 710rpx;
  margin: 0 20rpx;
  border: 1rpx solid rgba(0,0,0,0.2);
  border-radius: 4rpx;
  padding: 16rpx 20rpx 184rpx 20rpx;
  font-size: 24rpx ;
  color: #333;
  margin-bottom: 30rpx;
  height: 86rpx
}
.e-content textarea .txclass{
  font-size: 24rpx ;
  color: #999;
}

.photo{
display:flex;
position:absolute;
height:auto;
bottom:64rpx;
left:42rpx;
}
.photo  .tempimgview{
  display: flex;
  flex-wrap:wrap;
} 
.photo  .temp{
  display: flex;
  justify-content: center;
  align-items: center;
}
.photo .tempimg{
  width: 120rpx;
  height: 120rpx;
  margin-right: 18rpx;
}
