
.forscroll{
  height: 100%;
  width: 100%;
}
.forscroll scroll-view{
   height: 100%;
}
.storeimg{
  width: 27rpx;
  height:24rpx;
}
.torightimg{
width: 18rpx;
height: 27rpx;
}
.head{
  height: 90rpx;
  background-color: #353535;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  color: #caa876;
  font-size: 30rpx;
  padding-bottom: 10rpx;
}
.head view{
  margin: 0 68rpx;
  height:54rpx;
}
.head .active::after{
content:" ";
display:block;
height:6px;
border-radius: 4rpx;
margin:-4px auto;
transition:width 0.3s ease 0s;
width:50%;
margin-top:0px;
border-bottom:7rpx solid #caa876;
}

.item{
  width: 100%;
  height: auto;
  background-color: #fff;
}
.item .i-head{
  display: flex;
  font-size: 28rpx;
  color: #333;
  height: 74rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.1);
}
.i-head .h-left{
  flex: 1;
  display: flex;
  align-items: center;
}
.item .storeimg{
  margin:0 10rpx 0 14rpx;
}
.item .torightimg{
  margin:0 16rpx 0 ;
}
.i-head .h-right{
  padding-right:20rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #fe762c;
}
.item .i-item{
display:flex;
margin-left:54rpx;
font-size:28rpx;
color:#666;
height:64rpx;
align-items:center;
}
.i-item .i-name{
  flex:1;
}
.i-item .i-num{
font-size:24rpx;
margin-right:46rpx;
}

.item .i-line{
  height: 12rpx ;
  background-color: #eee;
  width: 100%;
}

.item .i-foot{
  font-size: 24rpx;
  color: #666;
  display: flex;
  align-items: center;
  border-top: 1rpx solid rgba(0,0,0,0.08);
  flex-direction: row-reverse;
  height: 88rpx;
  margin-top: 16rpx 
}
.item .i-foot .i-del{
  width: 108rpx;
  height: 52rpx
}
.item .i-foot .i-onemore{
  width: 146rpx;
  height: 52rpx;
  margin: 0 20rpx;
  border: 1rpx solid rgba(0,0,0,0.1);
  border-radius: 4rpx; 
}
.item .i-foot .i-evaluation{
  width: 108rpx;
  color: #333;
  height: 52rpx;
  margin: 0 20rpx;
  border: 1rpx solid #D6BE97;
  border-radius: 4rpx; 
  background-color: rgba(214, 190, 151, 0.5)
}

.flexorder{
  display: flex;
  justify-content: center;
  align-items: center;
}


.noorder {
width:100%;
height:auto;
display:flex;
justify-content:center;
margin-top: 120rpx;
}
.noorder image{
height:150rpx;
width:346rpx;
}
.goshop{
width: 100%;
margin-top: 90rpx;
font-size:32rpx;
color:#fff;
font-weight:bold;
display:flex;
justify-content:center;
}
.goshop text{
width: 312rpx;
height: 88rpx;
display:flex;
justify-content:center;
align-items:center;
border-radius:46rpx;
background-image:-webkit-linear-gradient(to bottom right, #dfceb5 , #c59f68); 
