.scroll-view {
  height: 100%;
}

/* 订单信息 */

.userinfo {
  display: flex;
  margin: 5% 5%;
  width: 90%;
  height: 126rpx;
  border-radius: 10rpx;
  color: #fff;
  font-size: 24rpx;
  background: RGB(59, 129, 214);
}

.info_lt {
  padding-left: 8%;
}

.info_lt, .info_rt {
  flex: 1;
}

.info_lt view, .info_rt view {
  height: 63rpx;
  line-height: 63rpx;
}

/*选择支付方式 start */

.select-payway {
  display: flex;
  justify-content: space-between;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 5%;
  font-size: 28rpx;
  color: #333;
}

.select-payway .ssrt {
  padding: 0 10rpx 0 32rpx;
  line-height: 90rpx;
  text-align: center;
}

.ssrt .typeIcon {
  font-size: 40rpx;
  color: #07af12;
}

.ssrt .rt_type {
  font-size: 30rpx;
  padding: 0 10rpx;
}

.ssrt .sw_rt {
  font-size: 20rpx;
}

/*选择支付方式end  */

/* 项目信息 */

.content {
  height: auto;
  width: 90%;
  margin: 20rpx 5%;
  box-shadow: 0rpx 4rpx 8rpx 4rpx rgba(0, 0, 0, 0.2);
  text-align: center;
  align-items: center;
}

/* table head */

.content .c-head {
  display: flex;
  padding: 0 20rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  font-size: 28rpx;
  color: #333;
}

.c-head .t-msg {
  flex: 3;
  text-align: left;
}

.c-head  .t-num {
  flex: 1;
}

/* table list */

.content .c-item {
  display: flex;
  margin: 0 20rpx;
  height: 124rpx;
  line-height: 124rpx;
  font-size: 22rpx;
  color: #333;
}

.c-item .i-msg {
  display: flex;
  flex-direction: row;
  flex: 3;
}

.i-msg text {
  padding-left: 20rpx;
}

.c-item .i-img {
  width: 100rpx;
  height: 100rpx;
  line-height: 88rpx;
  border-radius: 10rpx;
  margin: 12rpx 0;
}

.i-img image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.c-item .i-num, .i-price, .i-total {
  flex: 1;
}

.i-total .oprice {
  text-decoration: line-through;
  color: #999;
  padding-left: 10rpx;
}

.i-sel, .t-sel {
  flex: 1;
  font-size: 40rpx;
  color: #3b81d6;
}

/* table footer */

.content  .c-foot {
  display: flex;
  height: 88rpx;
  line-height: 88rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  text-align: right;
  color: #666;
  font-size: 26rpx;
}

.c-foot .f-all {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

.c-foot .f-pay {
  padding: 0 50rpx;
}

.c-foot .f-red {
  color: #ea3838;
}

/* 订单详情 end */

/* 备注 */

.note {
  display: flex;
  justify-content: space-between;
  width: 90%;
  height: 88rpx;
  line-height: 88rpx;
  margin: 30rpx 5%;
  padding: 0 20rpx;
  box-shadow: 0rpx 4rpx 8rpx 4rpx rgba(0, 0, 0, 0.2);
  font-size: 26rpx;
  color: #333;
}

.n-desc {
  padding-left: 30rpx;
  color: #aaa;
}

.n-rt {
  color: #333;
  align-items: center;
}

.n-desc .n-note {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.note .n-lightimg {
  font-size: 20rpx;
  color: #333;
  padding-right: 20rpx;
}

/* 底部btn */

.topay {
  position: fixed;
  bottom: 0;
  height: 90rpx;
  width: 100%;
  display: flex;
  align-items: center;
  background-color: #fff;
  font-size: 32rpx;
  border-top: #b8b8b8 1rpx solid;
}

.topay .t-title {
  flex: 2;
  margin-left: 32rpx;
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
}

.t-title .t-total {
  color: #ea3838;
  padding-left: 30rpx;
}

.topay .t-sub {
  flex: 1;
  height: 100%;
  color: #fff;
}

.t-sub button {
  background: #3b81d6;
  color: #fff;
  border: none;
  border-radius: 0;
}

/*选择支付方式 ing */

.payway, .payway .mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.payway .mask {
  background: rgba(0, 0, 0, 0.7);
}

.payway .list {
  position: fixed;
  left: 0;
  bottom: 0rpx;
  width: 100%;
  background: #f7f7f7;
  padding: 0rpx 0 50rpx 0;
}

.list .head {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.head .ximg {
  position: absolute;
  left: 0rpx;
  width: 200rpx;
  height: 80rpx;
}

.ximg image {
  padding: 30rpx;
  width: 22rpx;
  height: 22rpx;
}

.head .desc {
  font-size: 32rpx;
  color: #333;
}

.list .price {
  height: 210rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 62rpx;
  color: #333;
}

.list .item {
  display: flex;
  display: -webkit-flex;
  align-items: center;
  height: 100rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  margin: 0 20rpx;
  font-size: 30rpx;
  color: #333;
}

.item .right {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.item .pwl-name {
  flex: 2;
}

.item .pwl-img {
  width: 62rpx;
  height: 48rpx;
  padding: 0 28rpx 0 12rpx;
}

.item .pwl-lightimg {
  width: 12rpx;
  height: 18rpx;
  position: absolute;
  right: 38rpx;
}

.item .pwl-lightimg.seleted-img {
  width: 26rpx;
  height: 26rpx;
}

.list .forcard {
  height: 128rpx;
}

.list .cardinfo {
  display: flex;
  display: -webkit-flex;
  align-items: center;
  margin: -30rpx 20rpx 0 20rpx;
  font-size: 22rpx;
  color: #dfceb5;
}

.list .cardinfo .cardno {
  margin: 0 10rpx 0 100rpx;
}

.payway .pw-sub {
  height: 96rpx;
  width: 100%;
  margin-top: 200rpx;
  display: flex;
  justify-content: center;
}

.pw-sub .blue {
  width: 660rpx;
  color: #fff;
  font-size: 34rpx;
  font-weight: bold;
  background-image: -webkit-linear-gradient(to bottom right, #dfceb5, #c59f68);
  background-image: linear-gradient(to bottom right, #dfceb5, #c59f68);
}

.wxpay {
  font-size: 18rpx;
  color: #caa876;
  border: 1rpx solid rgba(222, 204, 178, 0.8);
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  width: 126rpx;
  margin: 4rpx 0;
}
