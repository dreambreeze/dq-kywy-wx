@import "../common/engin-nav.wxss";
.container {
    padding: 0 0 100rpx 0;
}

.activity-list {
    border-top: 1rpx solid transparent;
}

.activity-box {
    margin: 30rpx;
    border-radius: 10rpx;
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.activity-box image {
    width: 100%;
    height: 250rpx;
    border-radius: 10rpx 10rpx 0 0;
}

.activity-box text {
    display: block;
    font-size: 30rpx;
    font-weight: 700;
    line-height: 1.5;
    padding: 18rpx 20rpx;
    color: #333;
}

.share-btn {
    position: fixed;
    width: 90rpx;
    height: 90rpx;
    background: url('https://note.youdao.com/yws/api/personal/file/WEB0a8d688dfebe3fa997bd86e946ba34f0?method=download&shareKey=1b9ec96483f857d6c0a74ca3552b7fe2') no-repeat center;
    background-size: 90rpx;
    z-index: 2;
}
