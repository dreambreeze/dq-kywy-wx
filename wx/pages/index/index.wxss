@import "../common/engin-nav.wxss";

.container {
  background-color: #eee;
  min-height: 1184rpx;
  padding-bottom: 100rpx;
}

.show-banner {
  height: 340rpx;
  position: relative;
}

.banner swiper {
  height: 340rpx;
}

.item-image, .show-banner image {
  width: 100%;
  height: 100%;
}

.container .swiper{
  height: 340rpx;
  padding:30rpx 0 0 0;
  background: url('https://note.youdao.com/yws/api/personal/file/WEB4b5fc02bb93552bbb11e6d740d7bacd0?method=download&shareKey=ae0d2887000c971eb19f90d85d7f81f3') repeat-x;
  background-size:auto 340rpx;
}

.swiper swiper{
  height: 340rpx;
}

.swiper swiper-item{
  display: flex;
  justify-content: center;
  align-items: center;
}
.swiper image{
  width: 320rpx;
  height: 272rpx;
  opacity: 0.5;
  z-index: 2;
}
.swiper .active{
  width: 374rpx;
  height: 245rpx;
  transition:all .2s ease-in-out 0.3s;
  opacity: 1;
  z-index: 3;
}

.function-list{
  display: flex;
  background: #fff;
  padding:30rpx;
  border-top:1rpx #f5f1f1 solid;
  font-size:22rpx;
}

.function-list .item{
  flex:1;
  text-align: center;
}

.function-list .item image{
  width:80rpx;
  height:80rpx;
  margin:0 0 20rpx 0; 
}

