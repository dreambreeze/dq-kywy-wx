/* nav */

.buy-nav {
  width: 100%;
  height: 98rpx;
  border-top: 1rpx solid #d6d6d6;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  box-sizing: border-box;
}

.nav-item {
  width: 33.3333%;
  text-align: center;
}

.nav-item image {
  margin-top: 17rpx;
}

.nav-item:nth-of-type(1) image {
  width: 35rpx;
  height: 38rpx;
}

.nav-item:nth-of-type(2) image {
  width: 34rpx;
  height: 36rpx;
}

.nav-item:nth-of-type(3) image {
  width: 38rpx;
  height: 34rpx;
}

.nav-item view {
  line-height: 1;
  color: #7d7d7d;
  font-size: 20rpx;
  margin-top: 8rpx;
}

.nav-item view.active {
  color: #bc9b6c;
}