.top-nav {
  box-sizing: border-box;
  background: #fff;
  padding: 26rpx 0;
  margin-bottom: 24rpx;
}

.nav-flex {
  height: 64rpx;
  line-height: 64rpx;
  padding: 0 112rpx;
  font-size: 32rpx;
}

.nav-coupons, .coupon-pack {
  width: 260rpx;
  text-align: center;
  border: 1rpx solid #caa876;
  color: #333;
}

.nav-coupons {
  border-right: none;
  border-radius: 4px 0 0 4px;
}

.nav-coupons.active ,.coupon-pack.active{
  background: #2e2e2e;
  color: #c2a273;
}

.coupon-pack {
  border-radius: 0 4px 4px 0;
}