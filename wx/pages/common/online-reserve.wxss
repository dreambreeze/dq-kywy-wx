/* 在线预约顶部公用 */
.top-store {
  background-color: #fff;
  padding: 22rpx 0 22rpx 22rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #ccc;
}

.store-img {
  width: 117rpx;
  height: 116rpx;
  margin-right: 28rpx;
}

.store-name {
  width: 392rpx;
}

.s-name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  padding: 6rpx 0;
}

.s-coupon {
  width: 350rpx;
  height: 52rpx;
  line-height: 52rpx;
  background-color: #faebeb;
  font-size: 24rpx;
  color: #f46262;
  border: 1rxp solid #f1c5c5;
  margin-top: 8rpx;
}

.s-coupon image {
  width: 27rpx;
  height: 27rpx;
  margin: -4rpx 17rpx 0 10rpx;
  vertical-align: middle;
}

.change-store {
  flex: 1;
  text-align: right;
}

.change-store-btn {
  display: inline-block;
  width: 192rpx;
  height: 67rpx;
  line-height: 67rpx;
  border-radius: 80rpx 0 0 80rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(199, 156, 98, 0.5);
  margin-top: 24rpx;
}

.change-store-btn image {
  width: 16rpx;
  height: 17rpx;
  margin-left: 12rpx;
  vertical-align: middle;
}

.top-store-address {
  line-height: 36rpx;
  font-size: 24rpx;
  color: #666;
  padding: 22rpx 0 22rpx 22rpx;
  background: #fff;
  border-bottom: 22rpx solid #e5e5e5;
}

.address {
  width: 420rpx;
}

.address image {
  width: 18rpx;
  height: 24rpx;
  margin-right: 10rpx;
  vertical-align: middle;
  margin-top: -6rpx;
}

.location {
  padding: 0 20rpx;
  border-right: 1rpx solid #e5e5e5;
  border-left: 1rpx solid #e5e5e5;
}

.location image {
  width: 40rpx;
  height: 36rpx;
}

.telphone {
  flex: 1;
  text-align: center;
}

.telphone image {
  width: 34rpx;
  height: 36rpx;
}

.reserve-tab {
  padding: 22rpx 0;
  background-color: #fff;
  border-bottom: 1rpx solid #e5e5e5;
}

.tab-con {
  flex: 1;
  padding: 0 38rpx;
}

.tab-con .flex-wrp{
  border: 1rpx solid #c6a16b;
  border-radius: 40rpx;
}

.tab-item {
  flex: 3;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  border-right: 1rpx solid #c6a16b;
}

.tab-item:first-child{
  border-radius: 38rpx 0 0 38rpx;
}

.tab-item:last-child{
  border-right: none;
  border-radius: 0 38rpx 38rpx 0;
}

.tab-item.active{
  background-color: #c6a16b;
  color: #fff;
}

.tab-search {
  width: 95rpx;
  height: 80rpx;
  background: url(https://iservice.daqisoft.cn/Public/Home/images/tab_search.png) no-repeat center center;
  background-size: 40%;
  border-left: 1rpx solid rgb(235, 235, 235);
}
