@import "../common/shop-nav.wxss";
page{
  height: 100%;
  overflow: hidden
}
.page-head{
  width: 100%;
  height: 140rpx;
}
.page-head .h-red{
  height: 70rpx;
  background-color: #cf0100
}
.page-head .h-white{
  height: 70rpx;
  background-color: #fff
}
.page-head .h-search{
  height: 80rpx;
  width: 590rpx;
  margin: -118rpx 80rpx;
  box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.1);
  border-radius: 40rpx;
  background-color: #fff;
  justify-content: space-between
}
 .h-search .searchimg{
   width: 58rpx;
   justify-content: flex-end
 }
 .h-search image{
   width: 28rpx;
   height: 28rpx
 }
 .h-search input{
   width: 364rpx
 }
 .h-search .searchsubmit{
  height:80rpx;
  width:128rpx;
  background-color:#eee;
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  font-weight: bold;
  color: #d21717;
 }

 /*page-body  */
 .page-body{
  height: 100%;
	display:-webkit-flex;
  box-sizing:border-box;
 }
 .sv-classify {
	width:168rpx;
	background:#eee ;
	height: 100%;
  font-weight: bold;
}
.classify {
	height: 86rpx;
  text-align: center;
  color: #666;
  font-size: 26rpx;
  line-height: 86rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.1);
}
.sv-classify  .line{height: 6rpx;width:100%;background-color: #eee}
.classify.active{
  color: #333;
  background-color: #fff;
  position: relative
}
.sv-classify .activeline{
width:8rpx;
height:100%;
background-color:red;
position:absolute;
}

.page-body .sv-goods {
  width: 560rpx;
  padding: 10rpx 20rpx;
}
.sv-goods .allcategory{
  width: 186rpx;
  height: 62rpx;
  border:1rpx solid rgba(0,0,0,0.1);
  border-radius: 40rpx;
  margin-left: 26rpx
}
.sv-goods .allcategory .desc{margin: 0 10rpx}
.sv-goods .allcategory image:first-child{
  width: 24rpx;height: 24rpx
}
.sv-goods .allcategory image:last-child{
  width: 15rpx;height: 15rpx
}

.sv-goods .catelist{
  flex-wrap: wrap;
  justify-content: flex-start;
  font-size: 24rpx
}
 .catelist .categoryitem{
  height: 206rpx;
  width: 32%;
  flex-direction: column
 }
 .catelist .categoryitem image{
   height: 48rpx;
   width: 48rpx;
   padding: 20rpx
 }

 .jszc{
  position:absolute;
  bottom:140rpx;
  left:146rpx;
 }