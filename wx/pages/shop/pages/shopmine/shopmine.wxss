@import "../common/shop-nav.wxss";
page{height: 100%;background-color: #eee;}
.page-head{
  width: 100%;
  height: 182rpx;
  color: #fff;
  font-size: 26rpx;
  background-image: linear-gradient(to bottom left,#e3431c,#cf0100);
  justify-content: flex-start
}
.page-head .avatar{
  width: 124rpx;
  height: 124rpx;
  border-radius: 50%;
  margin: 0 20rpx 0 38rpx;
  display: block;
  overflow: hidden;
}
.page-head .m-userinfo{font-size: 30rpx;flex: 1}
.page-head .m-userinfo .u-phone{
  margin-top: 12rpx;
  font-size: 26rpx
}
.page-head .m-member{
  width: 154rpx;
  height: 60rpx;
  background-image: linear-gradient(to bottom right,#dfcfb5,#c8a472);
  border-top-left-radius: 40rpx;
  border-bottom-left-radius: 40rpx
}
.page-head .m-member text{margin-left: 16rpx}

.tologin{
  height: 100%;
  width: 100%
}
.tologin .logintitle{
  font-size: 32rpx;
  height: 50%;
  display: flex;
  justify-content: flex-end;
  flex-direction: column;
  padding: 0 26rpx;
}
.tologin .logindesc{
  height: 50%;
  padding: 0 26rpx
}

.page-body .myorder{
  background-color: #fff;
}
.page-body .myorder .m-otitle{
  padding: 0 38rpx;
  height: 86rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.1)
}
.m-otitle .ot-desc{
  font-size: 30rpx;
  width: 120rpx;
  flex: 1
}
.m-otitle .lookmore{
  height: 86rpx;
  font-size: 24rpx;
  color: #666;
}
.m-otitle .lookmore image{
  width: 9rpx;
  height: 16rpx;
  margin-left: 20rpx;
}

.m-oall{
  padding: 36rpx 0;
  justify-content: space-around;
  font-size: 26rpx;
  color: #666
}
.m-oall .o-item{
  position: relative;
  flex-direction: column;
  width: 25%
}
.m-oall .o-item .count{
position:absolute;
left:100rpx;
top:-16rpx;
font-size:26rpx;
width: 32rpx;
height: 32rpx;
color:#fff;
background:#cf0100;
border-radius:50%;
}
.m-oall .o-item image{
  width: 42rpx;
  height: 35rpx;
  margin-bottom: 14rpx
}

/*优惠券 收货地址  */
.config{
  background-color: #fff;
  /* height: 298rpx; */
  border-top: 20rpx solid #eee;
}
.config .c-coupon{
  padding: 0 32rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid rgba(0,0,0,.1); 
}
.config .c-takeway{
  border-bottom: 10rpx solid #eee;
}
.config .sc-title{
  flex:1;
  margin-left: 20rpx
}
.config .sc-num{
  width: 100rpx;
  height: 32rpx;
  color: #f1540f;
  justify-content: flex-end;
  border-radius: 4rpx;
  font-size: 22rpx
}
.c-coupon .sc-right{
  display: flex;
  align-items: center;
}
.c-coupon .minecoupon{
  width: 26rpx;
  height: 20rpx
}
.c-coupon .mineaddr{
  width: 26rpx;
  height: 25rpx;
}
.c-coupon .minecus{
  width: 26rpx;
  height: 28rpx;
}
.c-coupon .sc-right image{
  width: 14rpx;
  height: 26rpx;
  margin-left: 14rpx
}

.config .cus-phone{
  height: 100%;
  width: 190rpx;
  font-size: 28rpx;
  font-weight: bold;
}
.bigline{
  margin-top: 96rpx;
  border-bottom: 190rpx solid #eee;
}

.loginout{
  height: 86rpx;
  font-size: 26rpx;
  color: #666;
  margin-top: 190rpx;
  background-color: #fff;
}

.jszc{
  margin-top: 32rpx;
}