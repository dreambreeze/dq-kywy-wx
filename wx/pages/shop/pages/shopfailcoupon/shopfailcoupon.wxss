page{
  height: 100%;
  background: #eee;
}
.shopcontainer{
  padding: 0 20rpx
}
.shopcontainer .c-item{
  background-color: rgba(255,255,255,0.7);
  margin-top: 24rpx;
  height: auto;
  border-radius: 8rpx;
  color: #d5d5d5
}
.shopcontainer .c-item .body{
  padding: 0 8rpx 0 26rpx;
  height:146rpx; 
  justify-content: flex-start;
  position: relative;
}
.c-item .body .facevalue{
  font-size: 54rpx;
  font-weight: bold;

}
.body .facevalue text{font-size: 30rpx;}
.body .name{
  font-size: 32rpx;
  margin: 0 24rpx;
  flex: 1
}
.body .touse{
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  width: 125rpx;
  height: 125rpx;
}
.body .touse image{
  width: 125rpx;
  height: 125rpx;
}
.dateanddesc {
  height: 52rpx;
  font-size: 24rpx;
  padding: 0 0 0 26rpx;
  border-top: 2rpx dashed rgba(0,0,0,0.1)
}
.dateanddesc .date{
  justify-content: flex-start;
  flex: 1
}
.dateanddesc .desc{
  width: 140rpx;
  height: 52rpx;
}
.dateanddesc .desc image{
width: 19rpx;
height: 11rpx;
margin-left: 8rpx;
}
.c-item .descdetail{
  font-size: 24rpx;
  padding: 10rpx 26rpx;
  position: relative;
}
.descdetail .cir-left,.descdetail .cir-right{
  position: absolute;
  width: 24rpx;
  height: 24rpx;
  background-color: #eee;
  top: -64rpx;
  border-radius: 50%
}
.descdetail .cir-left{
  left: -12rpx;
}
.descdetail .cir-right{
  right: -12rpx;
}
.dateanddesc .upimg{
  transform:rotate(180deg);
  -ms-transform:rotate(180deg); 	/* IE 9 */
  -moz-transform:rotate(180deg); 	/* Firefox */
  -webkit-transform:rotate(180deg); /* Safari å’Œ Chrome */
  -o-transform:rotate(180deg); 	/* Opera */
}

.failure{
  margin-top: 64rpx;
  font-size: 24rpx;
  color: #666;
}
.failure .fnotice{
  padding: 0 8rpx;
  border-right: 1rpx solid #666;
}
.failure .fcoupon{
  padding: 0 8rpx;
  color: #f56708;
}