.page-head .icon{
  width: 750rpx;
  padding-top: 200rpx
}
.icon image{
  width: 128rpx;
  height: 128rpx;
}
.page-head .name{
  font-size: 30rpx
}

.page-body{
  margin: 40rpx;
  border-top: 1rpx solid rgba(0,0,0,0.1);
}
.page-body .title{
  margin-top: 20rpx
}
.page-body .info{
  font-size: 22rpx;
  color: #666;
}
.page-body .info .item{
  margin: 20rpx
}

.page-operate {
  justify-content: space-around
}
.page-operate .operate{
  padding: 14rpx 80rpx;
  border-radius: 8rpx;
  border: 1rpx solid rgba(0,0,0,0.1);
  color: #555;
}
.page-operate .allow{
  color: #fff;
  border: none;
  background-image: linear-gradient(to bottom right,#e3431c,#cf0100);
}