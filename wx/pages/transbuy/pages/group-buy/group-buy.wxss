@import "../../../common/project.wxss";
@import "../../../common/buy-nav.wxss";
.container {
  padding-bottom: 98rpx;
  min-height: 1086rpx;
}

.top-search {
  background: #fff;
  position: relative;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.searchs {
  width: 690rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  margin: 30rpx auto;
  background: #e5e5e5;
  font-size: 26rpx;
  text-align: left;
  padding:0 30rpx;
  color: #a6a6a6;
}

.store-box{
    width:690rpx;
    background: #fff;
    box-shadow: 0rpx 4rpx 8rpx 4rpx rgba(0, 0, 0, 0.2);
    margin:30rpx auto;
    border-radius: 10rpx;
    padding:0 30rpx 20rpx;
}

.store-info{
    display: flex;
    line-height: 70rpx;
}

.store-name{
    display: inline-block;
    width:200rpx;
    padding: 0 10rpx 0 0;
    font-size:28rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space:nowrap;
}


/* 联系方式 */
.contact-tools {
    flex:1;
    display: flex;
    color: #656565;
    border-radius: 10rpx;
    font-size: 22rpx;
}

.address{
    flex:1;
    display: flex;
}

.address-icon {
    display: inline-block;
    width: 30rpx;
    height: 70rpx;
    background: url('https://note.youdao.com/yws/api/personal/file/WEB330ac01fc77c8bb32e84cb60c35ead81?method=download&shareKey=b31d7812be7686a3519fb7fdaeadc73f') no-repeat center left;
    background-size: 22rpx;
}

.address text:nth-of-type(1) {
    flex: 1;
    padding:0 10rpx 0 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.nav-icon {
    display: inline-block;
    width: 40rpx;
    height: 70rpx;
    background: url('https://note.youdao.com/yws/api/personal/file/WEB6afc3b4cf94f96b65bd55ba80fa769fe?method=download&shareKey=84ac7821f01df125479b4b2748f6fe93') no-repeat center;
    background-size: 22rpx;
}

.tel-icon {
    display: inline-block;
    width: 40rpx;
    height: 70rpx;
    background: url('https://note.youdao.com/yws/api/personal/file/WEBa516da57a01247147f37437f62dee584?method=download&shareKey=cb8e52113991cd5c2cfdd5e2529efeec') no-repeat center;
    background-size: 22rpx;
}

/* 项目列表 */
.projcet-list{
    display: flex;
    justify-content:space-between;
    margin:0 0 0 -30rpx;
}

.project-box{
    flex:1;
    margin:0 0 0 30rpx;
    position: relative;
}

.discount-label{
    position: absolute;
    left:0;
    top:0;
    width:77rpx;
    height: 77rpx;
}

.project-image{
    width:100%;
    height: 210rpx;
    border-radius: 10rpx;
}

.project-box .flex-wrap{
    display: flex;
    line-height: 40rpx;
}

.project-box .flex-wrap view{
    flex:1;
}

.project-box .flex-wrap view:last-child{
    text-align: right;
}

.project-name{
    font-size:22rpx;
    color:#333;
}

.project-length{
    font-size:22rpx; 
    color:#999;
}

.discount-price{
    font-size:22rpx;
    color:#999;
    text-decoration: line-through;
}

.project-box  .shop-price{
    font-size:26rpx;
    color:#ff1e00;
    margin: 0;
}

.more-project{
    text-align:center;
    font-size:22rpx;
    color:#999;
    padding:20rpx 0 0 0;
}

/* 单个项目时项目展示 */
.single-project{
    padding:0;
    position: relative;
    border-top:1rpx solid transparent;
}

.single-project .project-box navigator{
    display: flex;
}

.single-project .project-image{
    width:370rpx;
    height: 300rpx;
    border-radius: 10rpx 0 0 10rpx;
}

.single-project .project-info{
    flex:1;
    margin:190rpx 0 0 0;
    padding:0 20rpx;
}

.single-project .store-info{
    position: absolute;
    right: 20rpx;
    left:390rpx;
    top:0;
    display: block;
}

.single-project .contact-tools{
    display:block;
    line-height: 50rpx;
}

.single-project .store-name{
    display:block;
    width:100%;
    padding:0;
}

.single-project .address-icon{
    height: 50rpx;
}

.single-project .nav-icon{
    height: 50rpx;
}

.single-project .tel-icon{
    height: 50rpx;
}

.single-project .contact-tools .flex-wrap{
    line-height: 50rpx;
    display: flex;
}

.single-project .contact-tools .flex-wrap text,
.single-project .contact-tools .flex-wrap view{
    vertical-align: middle;
}

.single-project .contact-tools .flex-wrap text:first-child{
    flex:1;
}


