@import "../../../common/project.wxss";

page {
    background: #fff;
}

.container {
    padding-bottom: 98rpx;
}

/* 商店列表 */

.store-list {
    width: auto;
    padding: 30rpx;
    font-size: 34rpx;
    overflow: hidden;
    height: 110rpx;
    white-space: nowrap;
}

.store-name {
    display: inline-block;
    padding: 0 60rpx 0 0;
    color: #999;
    width: auto !important;
}

.store-name.current {
    color: #3b81d6;
}

/* 联系方式 */

.contact-tools {
    display: flex;
    margin: 0 30rpx 30rpx;
    color: #656565;
    line-height: 80rpx;
    border: 1rpx #ddd solid;
    border-radius: 10rpx;
    padding: 0 15rpx;
    font-size: 22rpx;
}

.address {
    flex: 1;
    display: flex;
}

.address-icon {
    display: inline-block;
    width: 40rpx;
    height: 80rpx;
    background: url('https://note.youdao.com/yws/api/personal/file/WEB330ac01fc77c8bb32e84cb60c35ead81?method=download&shareKey=b31d7812be7686a3519fb7fdaeadc73f') no-repeat center;
    background-size: 22rpx;
}

.address text:nth-of-type(1) {
    flex: 1;
    padding: 0 10rpx 0 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.nav-icon {
    display: inline-block;
    width: 40rpx;
    height: 80rpx;
    background: url('https://note.youdao.com/yws/api/personal/file/WEB6afc3b4cf94f96b65bd55ba80fa769fe?method=download&shareKey=84ac7821f01df125479b4b2748f6fe93') no-repeat center;
    background-size: 22rpx;
}

.tel-icon {
    display: inline-block;
    width: 40rpx;
    height: 80rpx;
    background: url('https://note.youdao.com/yws/api/personal/file/WEBa516da57a01247147f37437f62dee584?method=download&shareKey=cb8e52113991cd5c2cfdd5e2529efeec') no-repeat center;
    background-size: 22rpx;
}

/* 我的订单按钮 */

.myorder {
    position: fixed;
    top: 210rpx;
    right: 0;
    width: 180rpx;
    height: 68rpx;
    color: #fff;
    font-size: 26rpx;
    border-top-left-radius: 40rpx;
    border-bottom-left-radius: 40rpx;
    background-image: linear-gradient(to right bottom, #469aff, #0073ff);
}

/* 拼团活动 */

.group-activity {
    margin: 30rpx auto;
    width: 690rpx;
    height: 300rpx;
    border-radius: 10rpx;
    box-shadow: 2rpx 2rpx 2rpx 2rpx rgba(0, 0, 0, 0.1);
    display: flex;
    overflow: hidden;
}

.group-activity image {
    width: 360rpx;
    height: 300rpx;
    border-radius: 10rpx 0 0 10rpx;
}

.info-box {
    flex: 1;
    padding: 0 0 0 14rpx;
}

.gourp-shop-title {
    display: block;
    font-size: 32rpx;
    color: #333;
    line-height: 60rpx;
}

.tips {
    width: 300rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 24rpx;
    color: #999;
}

.user-image-list {
    position: relative;
    display: flex;
    padding: 10rpx 0 0 0;
}

.user-image-list image {
    width: 50rpx;
    height: 50rpx;
    margin: 0 0 0 -18rpx;
    border-radius: 50%;
}

.user-image-list image:first-child {
    margin: 0;
}

.goods-num {
    font-size: 18rpx;
    padding: 10rpx;
    color: #999;
}

.price {
    position: relative;
    padding: 10rpx 0;
}

.price button {
    display: inline-block;
    font-size: 22rpx;
    color: #fff;
    width: 90rpx;
    line-height: 40rpx;
    background: url("https://note.youdao.com/yws/api/personal/file/WEB075d8efc644f5fac8889b5e5df78f53d?method=download&shareKey=219dac81bfc7d6280b9d5c1da557b0d3") no-repeat;
    background-size: 90rpx 40rpx;
    text-align: center;
    outline: 0;
    padding: 0;
    position: absolute;
    right: 5rpx;
    top: 20rpx;
}

.people-num {
    display: inline-block;
    font-size: 18rpx;
    border: #0092fa 1rpx solid;
    border-radius: 6rpx;
    line-height: 30rpx;
    padding: 0 8rpx;
    color: #0092fa;
    margin: 4rpx 10rpx 0 0;
    text-align: center;
    position: absolute;
    right: 5rpx;
    top: 25rpx;
}

.price text:nth-of-type(1) {
    display: inline-block;
    font-size: 28rpx;
    line-height: 50rpx;
    padding: 0 8rpx 0 0;
    color: #f60001;
    text-align: center;
}

.price text:nth-of-type(2) {
    display: inline-block;
    font-size: 22rpx;
    line-height: 50rpx;
    color: #999;
    text-decoration: line-through;
}

.user-range {
    font-size: 22rpx;
    color: #999;
    line-height: 40rpx;
}
