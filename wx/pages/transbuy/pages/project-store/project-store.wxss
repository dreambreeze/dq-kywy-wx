@import "../../../common/assess.wxss";

/* 门店信息 */

.store-box {
    display: flex;
    padding: 20rpx 0 20rpx 30rpx;
    overflow: hidden;
}

.store-name {
    flex: 1;
    font-size: 34rpx;
    color: #3b81d6;
    font-weight: bold;
}

.change-store {
    width: 148rpx;
    line-height: 50rpx;
    background-size: 148rpx 50rpx;
    color: #fff;
    font-size: 28rpx;
    padding: 0 0 0 20rpx;
    text-align: center;
    border-radius: 25rpx 0 0 25rpx;
    background-image: linear-gradient(to right bottom ,#469aff, #0073ff);
}

/* 联系方式 */

.contact-tools {
    display: flex;
    margin: 0 30rpx 30rpx;
    color: #656565;
    line-height: 80rpx;
    border: 1rpx #ddd solid;
    border-radius: 10rpx;
    padding: 0 15rpx;
    font-size: 22rpx;
}

.address {
    flex: 1;
    display: flex;
}

.address-icon {
    display: inline-block;
    width: 40rpx;
    height: 80rpx;
    background: url('https://note.youdao.com/yws/api/personal/file/WEB330ac01fc77c8bb32e84cb60c35ead81?method=download&shareKey=b31d7812be7686a3519fb7fdaeadc73f') no-repeat center;
    background-size: 22rpx;
}

.address text:nth-of-type(1) {
    flex: 1;
    padding: 0 10rpx 0 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.nav-icon {
    display: inline-block;
    width: 40rpx;
    height: 80rpx;
    background: url('https://note.youdao.com/yws/api/personal/file/WEB6afc3b4cf94f96b65bd55ba80fa769fe?method=download&shareKey=84ac7821f01df125479b4b2748f6fe93') no-repeat center;
    background-size: 22rpx;
}

.tel-icon {
    display: inline-block;
    width: 40rpx;
    height: 80rpx;
    background: url('https://note.youdao.com/yws/api/personal/file/WEBa516da57a01247147f37437f62dee584?method=download&shareKey=cb8e52113991cd5c2cfdd5e2529efeec') no-repeat center;
    background-size: 22rpx;
}

/* 项目列表 */

.project-list {
    margin: 30rpx 0 0 0;
}

.project-box navigator {
    width:690rpx;
    border-radius:10rpx;
    margin:20rpx auto;
    box-shadow: 0rpx 4rpx 8rpx 4rpx rgba(0, 0, 0, 0.2);
    display: flex;
}

.project-image {
    width: 200rpx;
    height: 150rpx;
    border-radius: 10rpx 0 0 10rpx;
}

.project-info {
    flex: 1;
    padding: 0 0 0 20rpx;
}

.flex-wrap {
    display: flex;
}

.flex-wrap view {
    padding: 0 20rpx 0 0;
    line-height: 50rpx;
}

.discount-price {
    font-size: 30rpx;
    color: #f00;
}

.shop-price {
    font-size: 22rpx;
    color: #aaa;
}

.project-name {
    line-height: 60rpx;
    color: #333;
    font-size: 28rpx;
}

.project-tips {
    line-height: 40rpx;
    font-size: 22rpx;
    color: #777;
    width:470rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.look-all {
  width: 180rpx;
  height: 46rpx;
  line-height: 46rpx;
  text-align: center;
  font-size: 24rpx;
  color: #3697fd;
  border: 1rpx solid #3697fd;
  background: #fff;
  margin: 70rpx auto;
  border-radius: 6rpx;
}
