@import "../../../common/store-address.wxss";
@import "../../../common/assess.wxss";

.banner {
    height: 340rpx;
}

.item-image {
    width: 100%;
    height: 100%;
}

.project-info {
    padding: 25rpx 20rpx 0;
    margin-bottom: 12rpx;
    background: #fff;
    line-height: 60rpx;
}

.project-name {
    font-size: 32rpx;
    color: #333;
}

.label {
    display: inline-block;
    color: #333;
    font-size: 24rpx;
    background: #ffe400;
    border-radius: 4rpx;
    line-height: 40rpx;
    padding: 0 10rpx;
    position: relative;
}

.label:before {
    content: '';
    width: 0;
    height: 0;
    border-right: #ffe400 10rpx solid;
    border-top: transparent 10rpx solid;
    border-bottom: transparent 10rpx solid;
    position: absolute;
    left: -8rpx;
    top: 10rpx;
}

.project-price text:nth-of-type(1) {
    font-size: 38rpx;
    color: #e30101;
}

.project-price text:nth-of-type(1) text {
    font-size: 30rpx;
    margin-right: 8rpx;
}

.project-price text:nth-of-type(2) {
    font-size: 24rpx;
    color: #919090;
    margin-left: 22rpx;
}

.project-price text:nth-of-type(3) {
    float: right;
    font-size: 26rpx;
    color: #919090;
}

/* 联系方式 */

.contact-tools {
    display: flex;
    color: #656565;
    line-height: 88rpx;
    border-radius: 10rpx;
    font-size: 22rpx;
    border-top: 1rpx #d2d2d2 solid;
}

.address {
    flex: 1;
    display: flex;
}



.address text:nth-of-type(1) {
    flex: 1;
    padding: 0 10rpx 0 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}



.tel-icon {
    display: inline-block;
    width: 40rpx;
    height: 88rpx;
    background: url('https://note.youdao.com/yws/api/personal/file/WEBa516da57a01247147f37437f62dee584?method=download&shareKey=cb8e52113991cd5c2cfdd5e2529efeec') no-repeat center;
    background-size: 22rpx;
}

/* 项目介绍 */

.project-dil {
    background: #fff;
    padding: 0 20rpx;
    margin: 12rpx 0;
}

.dil-title {
    font-size: 32rpx;
    color: #3b81d6;
    line-height: 70rpx;
    display: flex;
    align-items: center;
    font-weight: bold;
    position: relative;
    padding: 0 10rpx;
}

.dil-title:before {
    content: '';
    width: 10rpx;
    height: 32rpx;
    background: #3b81d6;
    position: absolute;
    left: -20rpx;
    top: 50%;
    transform: translateY(-52%);
}

.dil-content {
    font-size: 24rpx;
    color: #333;
    padding-bottom: 20rpx;
}

.look-all {
    width: 180rpx;
    height: 46rpx;
    line-height: 46rpx;
    text-align: center;
    font-size: 24rpx;
    color: #cdaa78;
    border: 1rpx solid #cdaa78;
    background: #fff;
    margin: 70rpx auto 180rpx;
    border-radius: 6rpx;
}

.buy-bar {
    width: 100%;
    line-height: 97rpx;
    background: #fff;
    position: fixed;
    bottom: 0;
    left: 0;
    border-top: 1rpx solid #dbdbdb;
    box-sizing: border-box;
    text-align: center;
}

.buy-car {
    position: relative;
    width: 33.3333%;
    text-align: center;
    font-size: 32rpx;
    color: #3b81d6;
}
.counterIcon{
  font-size: 35rpx;
  padding-right: 10rpx;
}
.cartIcon,.qianIcon{
  font-size: 35rpx;
  color: #fff;
}
.now-buy {
    width: 32rpx;
    height: 32rpx;
    margin-top: 32rpx;
}

.num-tips {
    position: absolute;
    top: 8rpx;
    right: 10rpx;
    background: #fe0000;
    padding: 2px 5px;
    font-size: 22rpx;
    border-radius: 200rpx;
    line-height: 1;
    color: #fff;
}

.push-car, .buys {
    width: 33.3333%;
    font-size: 30rpx;
    color: #fff;
}

.buys {
    background: #ea3838;
    color: #fff;
}

.push-car{
    background: #ff8400;
    color: #fff;
}

.buy-number {
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 10;
    width: 100%;
    height: 260rpx;
    background: #fff;
    transform: translateY(170px);
    animation-duration: 0.3s;
    -webkit-animation-duration: 0.3s;
    animation-fill-mode: forwards;
    -webkit-animation-fill-mode: forwards;
}

.buy-num-out {
    animation-name: buynum-out;
    -webkit-animation-name: buynum-out;
}

@keyframes buynum-out {
    0% {
        transform: translateY(0);
        -webkit-transform: translateY(0);
        opacity: 1;
    }

    100% {
        transform: translateY(170px);
        -webkit-transform: translateY(170px);
        opacity: 0;
    }
}

@-webkit-keyframes buynum-out {
    0% {
        transform: translateY(0);
        -webkit-transform: translateY(0);
        opacity: 1;
    }

    100% {
        transform: translateY(170px);
        -webkit-transform: translateY(170px);
        opacity: 0;
    }
}

.buy-num-in {
    animation-name: buynum-in;
    -webkit-animation-name: buynum-in;
}

@keyframes buynum-in {
    0% {
        transform: translateY(170px);
        -webkit-transform: translateY(170px);
        opacity: 0;
    }

    100% {
        transform: translateY(0px);
        -webkit-transform: translateY(0px);
        opacity: 1;
    }
}

@-webkit-keyframes buynum-in {
    0% {
        transform: translateY(170px);
        -webkit-transform: translateY(170px);
        opacity: 0;
    }

    100% {
        transform: translateY(0px);
        -webkit-transform: translateY(0px);
        opacity: 1;
    }
}

.close-btn {
    position: absolute;
    top: -37.5rpx;
    left: 34rpx;
    width: 75rpx;
    height: 75rpx;
    text-align: center;
    line-height: 75rpx;
    border-radius: 50%;
    box-shadow: 0 4rpx 4rpx rgba(0, 0, 0, 0.2);
    background: #fff;
    color: #333;
    font-size: 30rpx;
}

.select-buy-num {
    height: 172rpx;
}

.num-con {
    padding: 82rpx 30rpx 0;
}

.num-title {
    float: left;
    font-size: 30rpx;
    color: #333;
}

.num-fun {
    float: right;
}

.funs {
    display: inline-block;
    width: 60rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 6rpx;
    background: #e5e5e5;
    color: #333;
    font-size: 30rpx;
    text-align: center;
}

.nums {
    font-size: 30rpx;
    margin: 0 26rpx;
}

.determine {
    height: 88rpx;
    line-height: 88rpx;
    background: #cdaa78;
    text-align: center;
    color: #fff;
    font-size: 32rpx;
    font-weight: bold;
}
