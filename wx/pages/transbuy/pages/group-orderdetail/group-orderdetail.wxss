@import "/pages/common/lib/animate.wxss";
.qrcode-content {
    padding: 30rpx;
}

.con-box {
    background-color: #fff;
    border-radius: 10rpx;
    box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.2);
}

.head-info {
    padding: 28rpx 30rpx;
    border-bottom: 1rpx dashed #ccc;
}

.head-info image {
    width: 148rpx;
    height: 148rpx;
    margin-right: 36rpx;
    border-radius: 10rpx;
}

.infos {
    flex: 1;
}

.ptitle {
    font-size: 32rpx;
    color: #333;
    font-weight: 500;
    margin-bottom: 20rpx;
}

.pstore {
    font-size: 24rpx;
    color: #666;
    margin-bottom: 4rpx;
}

.qrcode-box {
    padding: 20rpx 30rpx 30rpx;
    position: relative;
    text-align: center;
}

.useed {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.8) url(https://iservice.daqisoft.cn/Public/Home/images/used.png) no-repeat 480rpx 28rpx;
    background-size: 25% 25%;
}

.qrcode-box image {
    display: block;
    width: 232rpx;
    height: 232rpx;
    margin: 0 auto;
}

.sumption-tips {
    display: inline-block;
    padding: 0 25rpx;
    margin: 0 auto;
    height: 60rpx;
    line-height: 60rpx;
    background-color: #3b81d6;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    margin-top: 15rpx;
    border-radius: 10rpx;
}

.verify-code {
    font-size: 34rpx;
    color: #333;
    font-weight: 500;
    width: 600rpx;
    text-align: center;
    margin-top: 30rpx;
}

.order-infos {
    border-radius: 10rpx;
    box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.2);
    margin:0 30rpx 30rpx;
    background-color: #fff;
}

.order-title {
    height: 73rpx;
    line-height: 73rpx;
    border-bottom: 1rpx solid #ccc;
    padding: 0 30rpx;
    font-size: 28rpx;
    color: #333;
}

.order-info-con {
    font-size: 28rpx;
    color: #333;
    padding: 17rpx 30rpx;
    line-height: 52rpx;
}

.order-info-con view:first-child {
    color: #f47c08;
}

.order-info-con text {
    display: inline-block;
    min-width:140rpx;
    text-align: right;
    color: #666;
}

.top-store-address {
    line-height: 36rpx;
    font-size: 24rpx;
    color: #666;
    padding: 17rpx 30rpx;
    background: #fff;
    margin: 0  30rpx 20rpx;
    border-radius: 10rpx;
    box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.2);
}

.address {
    width: 420rpx;
    font-size: 25rpx;
    color: #666;
}

.address image {
    width: 18rpx;
    height: 24rpx;
    margin-right: 10rpx;
    vertical-align: middle;
    margin-top: -6rpx;
}

.location {
    padding: 0 10rpx;
    border-right: 1rpx solid #e5e5e5;
    border-left: 1rpx solid #e5e5e5;
}

.location image {
    width: 32rpx;
    height: 32rpx;
}

.telphone {
    flex: 1;
    text-align: center;
}

.telphone image {
    width: 32rpx;
    height: 32rpx;
}

.store-name {
    font-size: 32rpx;
    color: #333;
    line-height: 1;
    margin-bottom: 26rpx;
}

.ad-box image {
    width: 100%;
    height: 230rpx;
}

.again-reserve {
    text-align: center;
    margin: 34rpx 0;
}

.again-reserve view {
    display: inline-block;
    width: 238rpx;
    height: 74rpx;
    line-height: 74rpx;
    text-align: center;
    font-size: 30rpx;
    border: 1rpx solid #caa876;
    color: #333;
    border-radius: 6rpx;
}

.again-reserve view.active {
    background-color: #caa876;
    color: #fff;
    margin-left: 75rpx;
}
.showLarge{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background-size: cover;
		opacity: 0.5;
		z-index: 8;
		background: #d6d6d5;
    display: flex;
    justify-content: center;
    align-items: center
}

