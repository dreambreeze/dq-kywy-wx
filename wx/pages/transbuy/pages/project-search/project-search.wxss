/* 项目搜索 */

.container {
    padding: 30rpx;
    background-color: #fff;
}

.search-box {
    background: #fff;
    overflow: hidden;
    margin: 0 0 30rpx;
    display: flex;
}

.search-input {
    flex: 1;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 40rpx 0 0 40rpx;
    background: #eee;
    color: #999;
    padding: 0 150rpx 0 40rpx;
    font-size: 30rpx;
}

.search-btn {
    color: #fff;
    line-height: 80rpx;
    height: 80rpx;
    border-radius: 0 40rpx 40rpx 0;
    background: linear-gradient(to right bottom, #79b2ff, #0b72ff);
    padding: 0 40rpx;
    font-size: 30rpx;
    font-weight: 700rpx;
}

.project-box{
    margin: 0 0 30rpx;
}

.hot-project {
    padding: 0 0 0 40rpx;
    background: url(https://iservice.daqisoft.cn/Public/Home/images/hot_search.png) no-repeat left center;
    background-size: 26rpx 30rpx;
    font-size: 28rpx;
    line-height: 50rpx;
}

.his-project {
    padding: 0 0 0 40rpx;
    background: url(https://iservice.daqisoft.cn/Public/Home/images/his_search1.png) no-repeat center left;
    background-size: 30rpx 26rpx;
    font-size: 28rpx;
    line-height: 50rpx;
}

.project-item {
    display: inline-block;
    line-height: 45rpx;
    border-radius: 22rpx;
    border: 1rpx solid #999;
    color: #999;
    font-size: 24rpx;
    padding: 0 24rpx;
    margin: 15rpx 20rpx 15rpx 0;
}
