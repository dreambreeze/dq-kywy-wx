.container {
  background-color: #eee;
  overflow: hidden;
  min-height: 1182rpx;
}

.success-box {
  margin: 26rpx 36rpx 24rpx;
  background: #fff;
  text-align: center;
  padding: 12rpx 0 42rpx;
  border-radius: 15rpx;
}

.success-box image {
  width: 126rpx;
  height: 138rpx;
}

.pay-tips{
  font-size: 32rpx;
  color: #333;
  line-height: 1;
  margin: 40rpx 0 44rpx;
}

.tips{
  font-size: 28rpx;
  color: #ff8b24;
  line-height: 1;
}

.oper-btn{
  text-align: center;
}

.oper-btn view{
  display: inline-block;
  width: 246rpx;
  height: 70rpx;
  line-height: 70rpx;
  border: 1rpx solid #a6a6a6;
  color: #666666;
  font-size: 28rpx;
  border-radius: 10rpx;
}

.oper-btn view.continue-booking{
  border-color: #be9e70;
  background: #e9e6e1;
  margin-left: 80rpx;
}

.ad-box{
  margin-top: 104rpx;
}

.ad-box image{
  width: 100%;
  height: 230rpx;
}