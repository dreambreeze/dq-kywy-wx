/* 顶部轮播图 */
.container .swiper{
  height: 430rpx;
  background: #abdcff;
}
.swiper swiper{
  height: 430rpx;
}
.swiper swiper-item{
  display: flex;
  justify-content: center;
  align-items: center;
  /* padding-right:32rpx; */
}
.swiper image{
  width: 70%;
  height: 70%;
  opacity: 0.5;
  z-index: 2;
  border-radius:10rpx;
}
.swiper .active{
  width: 338rpx;
  height: 385rpx;
  border-radius: 10rpx;
  transition:all .0s ease-in-out 0.3s; 
  opacity: 1;
  z-index: 3;
}

/* 项目信息 */
.project-info {
  padding: 10rpx 20rpx;
  margin-bottom: 12rpx;
  background: #fff;
}

.project-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 24rpx;
  font-weight: bold;
}
.project-name .pro_price{
  color: #f34444;
  margin-left: 27rpx 
}
.project-time{
  color: #b6b6b6;
  font-size: 28rpx;
}
.project-time .pro_time{
  margin-left: 27rpx
}

/* 项目介绍 */
.project-dil {
  display: flex;
  flex-direction:column;
  margin: 20rpx auto;
  padding: 5rpx 18rpx;
  width: 690rpx;
  border-radius: 10rpx;
  box-shadow: 0rpx 6rpx 8rpx 4rpx rgba(0, 0, 0, 0.1);
  background: #fff;
}

.dil-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  height: 90rpx;
  line-height: 90rpx;
}

.dil-content {
  font-size: 22rpx;
  color: #7a7a7a;
  padding-bottom: 20rpx;
}

/* 底部返回 */
.buy-bar {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: #3b81d6;
  position: fixed;
  bottom: 0;
  left: 0;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
}