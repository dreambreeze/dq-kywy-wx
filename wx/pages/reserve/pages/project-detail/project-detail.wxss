.project-info {
  padding: 10rpx 20rpx;
  margin-bottom: 12rpx;
  background: #fff;
}

.project-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 24rpx;
  font-weight: bold;
}
.project-name .pro_price{
  color: #f34444;
  margin-left: 27rpx 
}
.project-time{
  color: #b6b6b6;
  font-size: 28rpx;
}
.project-time .pro_time{
  margin-left: 27rpx
}
.project-price text:nth-of-type(1) {
  font-size: 38rpx;
  color: #e30101;
}

.project-price text:nth-of-type(1) text {
  font-size: 30rpx;
  margin-right: 8rpx;
}

.project-price text:nth-of-type(2) {
  font-size: 24rpx;
  color: #919090;
  margin-left: 22rpx;
  text-decoration: line-through;
}

.project-price text:nth-of-type(3) {
  float: right;
  font-size: 26rpx;
  color: #919090;
  margin-top: 10rpx;
}

.project-dil {
  display: flex;
  flex-direction:column;
  margin: 0 auto;
  padding-bottom: 200rpx;
  width: 690rpx;
  height: 320rpx;
  box-shadow: 0rpx 6rpx 8rpx 4rpx rgba(0, 0, 0, 0.1);
  padding: 5rpx 18rpx;
  background: #fff;
  border-radius: 10rpx;
}

.dil-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  height: 90rpx;
  line-height: 90rpx;
}

.dil-content {
  font-size: 22rpx;
  color: #7a7a7a;
  padding-bottom: 20rpx;
}

.look-all {
  width: 180rpx;
  height: 46rpx;
  line-height: 46rpx;
  text-align: center;
  font-size: 24rpx;
  color: #cdaa78;
  border: 1rpx solid #cdaa78;
  background: #fff;
  margin: 70rpx auto 180rpx;
  border-radius: 6rpx;
}

.buy-bar {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: #3b81d6;
  position: fixed;
  bottom: 0;
  left: 0;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
}