
.container .swiper{
  height: 430rpx;
  background: #abdcff;
}
.swiper swiper{
  height: 430rpx;
}
.swiper swiper-item{
  display: flex;
  justify-content: center;
  align-items: center;
  /* padding-right:32rpx; */
}
.swiper image{
  width: 70%;
  height: 70%;
  opacity: 0.5;
  z-index: 2;
  border-radius:10rpx;
}
.swiper .active{
  width: 338rpx;
  height: 385rpx;
  border-radius: 10rpx;
  transition:all .0s ease-in-out 0.3s; 
  opacity: 1;
  z-index: 3;
}
