@import "../common/engin-nav.wxss";

.contianer {
  background: #eee;
  min-height: 1182rpx;
}

.head-img-box {
  height: 182rpx;
  background-image: -webkit-linear-gradient(280deg, #dac5a4 20%, #d7bf9b 40%, #cba979 60%, #c59f69 80%, #c59f69 100%);
  background-image: -o-linear-gradient(280deg, #dac5a4 20%, #d7bf9b 40%, #cba979 60%, #c59f69 80%, #c59f69 100%);
  background-image: -moz-linear-gradient(280deg, #dac5a4 20%, #d7bf9b 40%, #cba979 60%, #c59f69 80%, #c59f69 100%);
  background-image: -ms-linear-gradient(280deg, #dac5a4 20%, #d7bf9b 40%, #cba979 60%, #c59f69 80%, #c59f69 100%);
  position: relative;
}

.head-img {
  width: 100%;
  position: absolute;
  top: 58rpx;
  left: 0;
  text-align: center;
}

.head-img image 
,.getUInfo{
  width: 162rpx;
  height: 162rpx;
  border-radius: 50%;
  box-shadow: 1rpx 4rpx 20rpx rgba(197, 159, 104, 0.5);
}

.nickname {
  font-size: 30rpx;
  color: #c59f68;
  line-height: 1;
  margin-top: 24rpx;
}

.nickname::after{
  border: none;
}

.center-nav {
  background: #fff;
  box-sizing: border-box;
  padding-bottom: 85rpx;
}

.center-nav.active{
  padding: 212rpx 0 85rpx;
}

.cnav-item {
  width: 33.3333%;
  border-right: 1rpx solid #e8e8e8;
  text-align: center;
  font-size: 26rpx;
  color: #333;
}

.cnav-item view {
  line-height: 1;
}

.cnav-item image {
  height: 47rpx;
}

.cnav-item:nth-of-type(1) image, .cnav-item:nth-of-type(2) image {
  width: 42rpx;
  margin-bottom: 20rpx;
}

.cnav-item:nth-of-type(3) image {
  width: 46rpx;
  height: 40rpx;
  margin-top: 7rpx;
  margin-bottom: 20rpx;
}

.jishu-zhichi{
  position: fixed;
  bottom: 110rpx;
  left: 0;
  width: 100%;
}

.getUInfo{
  background: url(https://iservice.daqisoft.cn/Public/DaqiAdmin/images/default_po.png) no-repeat;
  background-size: cover;
}

.getUInfo::after{
  border: none;
}