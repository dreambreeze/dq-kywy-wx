
//获取应用实例
const app = getApp();
//会员卡数据
var cmArr = [{
  img: 'https://iservice.daqisoft.cn/Public/Home/images/docard1.png',
  balance: 10120.00,
  consume: 2102.52,
  cardtype: '银卡',
  cardnum: '524175210362'
},
{
  img: 'https://iservice.daqisoft.cn/Public/Home/images/docard2.png',
  balance: 200.00,
  consume: 2202.52,
  cardtype: '铂金卡',
  cardnum: '215475210362'
},
{
  img: 'https://iservice.daqisoft.cn/Public/Home/images/docard3.png',
  balance: 300.00,
  consume: 2302.52,
  cardtype: '金卡',
  cardnum: '96521010362'
},
{
  img: 'https://iservice.daqisoft.cn/Public/Home/images/docard2.png',
  balance: 652.00,
  consume: 3000.52,
  cardtype: '铂金卡',
  cardnum: '2000005210362'
}
];

Page({
  data: {
    //顶部会员卡数据
    cardUrls: cmArr,
    indicatorDots: false,
    autoplay: false,
    interval: 5000,
    duration: 200,
    balance: cmArr[0].balance,
    consume: cmArr[0].consume,
    cardIdx: 0,
    funClassName: '',
    //图片地址前缀
    showImgUrl: app.globalData.showImgUrl
  },
  //监听滑动顶部会员卡事件
  topCardChange: function (e) {
    this.setData({
      balance: cmArr[e.detail.current].balance,
      consume: cmArr[e.detail.current].consume,
      cardIdx: e.detail.current
    });
  },

  //监听下拉刷新
  onPullDownRefresh: function () {
    wx.showLoading({
      mask: true,
      title: "加载中",
      success: function () {
        setTimeout(function () {
          wx.stopPullDownRefresh();
          wx.hideLoading();
        }, 1000);
      }
    });
  },

  /**
   * 用户分享事件
   */
  onShareAppMessage: function () {
    return {
      title: '客源无忧',
      success: function (res) {
        // 转发成功
      },
      fail: function (res) {
        // 转发失败
      },
      fail: function (res) {

      }
    }
  },
  /**
   * 页面加载事件
   */
  onLoad: function () {
    var _this = this;
    //获取分配的功能
    wx.request({
      url: 'https://iservice.daqisoft.cn/index.php/Api/Base/getAppletFun',
      data: {
        'authorizerId': app.globalData.authorizerId
      },
      method: 'POST',
      header: {
        'content-type': 'application/json'
      },
      success: function (res) {
        wx.hideLoading();
        if (res.data.status == 0) {
          wx.showModal({
            title: '提示',
            content: res.data.info,
          })
        } else {
          console.log(res.data.info);
          _this.setData({
            navArr: res.data.info.nav
          });
        }
      }
    });
  },
  /**
   * 点击底部导航
   */
  enginNav: function (e) {
    var url = e.currentTarget.dataset.url;
    var isOpen = e.currentTarget.dataset.isopen;
    if (isOpen == 0) {
      wx.showToast({
        title: '功能暂未开通',
        icon: 'none',
        mask: true
      });
    } else {
      wx.redirectTo({
        url: url,
      });
    }
  }
});