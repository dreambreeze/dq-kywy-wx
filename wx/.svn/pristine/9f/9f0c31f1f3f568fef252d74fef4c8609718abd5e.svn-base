var pushImg = [];
var starState = ['非常不满意', '不满意', '一般', '比较满意', '非常满意'];
var star = [
  'https://iservice.daqisoft.cn/Public/Home/images/star.png',
  'https://iservice.daqisoft.cn/Public/Home/images/star.png',
  'https://iservice.daqisoft.cn/Public/Home/images/star.png',
  'https://iservice.daqisoft.cn/Public/Home/images/star.png',
  'https://iservice.daqisoft.cn/Public/Home/images/star.png'
];
var star_check = [
  'https://iservice.daqisoft.cn/Public/Home/images/star_check.png',
  'https://iservice.daqisoft.cn/Public/Home/images/star_check.png',
  'https://iservice.daqisoft.cn/Public/Home/images/star_check.png',
  'https://iservice.daqisoft.cn/Public/Home/images/star_check.png',
  'https://iservice.daqisoft.cn/Public/Home/images/star_check.png'
];
var textareaVal = '';
Page({

  /**
   * 页面的初始数据
   */
  data: {
    pushImg: [],
    star: star,
    starStatus: '请对项目进行评价'
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    pushImg = [];
  },
  /**
   * 评价上传图片
   */
  pushImg: function () {
    if (pushImg.length >= 5) {
      wx.showModal({
        title: '提示',
        content: '最多上传5张图片',
        showCancel: false
      });
      return false;
    }
    var _this = this;
    wx.chooseImage({
      count: 5,
      success: function (res) {
        console.log(res);
        for (var i = 0; i < res.tempFilePaths.length; i++) {
          pushImg.push(res.tempFilePaths[i]);
        }
        if (pushImg.length > 5){
          pushImg.splice(5);
        }
        _this.setData({
          pushImg: pushImg
        });
      }
    })
  },
  /**
   * 删除显示的图片
   */
  closeImg: function (e) {
    var idx = e.currentTarget.dataset.idx;
    pushImg.splice(idx, 1);
    this.setData({
      pushImg: pushImg
    });
  },
  /**
   * 点击评论星星
   */
  star: function (e) {
    var _star = [];
    var idx = e.currentTarget.dataset.idx;
    for (var i = 0; i <= idx; i++) {
      _star.push(star_check[i]);
    }
    for (var i = idx; i < star.length - 1; i++) {
      _star.push(star[i]);
    }
    this.setData({
      star: _star,
      starStatus: starState[idx]
    });
  }
})