@import "../../../common/storelist.wxss";
.container {
  background: #fff;
}

/* 办卡顶部标题 */

.dc-title {
  height: 100rpx;
  line-height: 100rpx;
}

.t-l {
  float: left;
  font-size: 32rpx;
  color: #caa876;
}

.t-l view {
  display: inline-block;
  width: 6px;
  height: 16px;
  vertical-align: -2rpx;
  background: #caa976;
  margin-right: 10px;
}

.t-r {
  float: right;
  font-size: 22rpx;
  color: #999;
  margin-right: 36rpx;
}

.t-r icon {
  line-height: 10rpx;
  vertical-align: middle;
  margin-right: 8rpx;
}

/* 办卡下边选卡 */
.do-card{
  overflow: hidden;
}

.d-cards, .d-cards scroll-view {
  height: 910rpx;
}

.dc-select {
  width: 70%;
  float: left;
}

.s-info {
  height: 170rpx;
}
.s-info-c{
  padding: 20rpx;
}
.s-info-b {
  border: 1px solid #b2b2b2;
  padding: 16rpx;
  font-size: 24rpx;
  color: #8a8a8a;
}

.cards {
  width: 332rpx;
  margin: 0 auto 32rpx;
}

.cards image {
  width: 332rpx;
  height: 198rpx;
}

.cards view {
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
}

.rules {
  position: fixed;
  top: 50%;
  left: 50%;
  z-index: 99999;
  width: 600rpx;
  height: 900rpx;
  margin-top: -450rpx;
  margin-left: -300rpx;
  background: #fff;
  border-radius: 3px;
  box-shadow: 0 0 25px rgba(0, 0, 0, 0.2);
  animation-name: notice;
  -webkit-animation-name: notice;
  animation-duration: 0.3s;
  -webkit-animation-duration: 0.3s;
  animation-fill-mode: both;
  -webkit-animation-fill-mode: both;
}

@keyframes notice {
  0% {
    opacity: 0.3;
    -ms-transform: scale(0.5);
    transform: scale(0.5);
  }

  100% {
    opacity: 1;
    -ms-transform: scale(1);
    transform: scale(1);
  }
}

@-webkit-keyframes notice {
  0% {
    opacity: 0.3;
    -webkit-transform: scale(0.5);
  }

  100% {
    opacity: 1;
    -webkit-transform: scale(1);
  }
}

.rules scroll-view {
  height: 900rpx;
}

.rules-con {
  padding: 0 30rpx 30rpx;
}

.close-r {
  line-height: 50rpx;
  text-align: right;
  color: #333;
  font-size: 46rpx;
  padding: 0 16rpx;
}

.rules-t {
  font-size: 32rpx;
  margin: 20rpx 0;
  color: #000;
}

.rules-c {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}
