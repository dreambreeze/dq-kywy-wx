<import src="../common/engin-nav.wxml" />
<view class="container" style="min-height:{{minHeight}}">
  <view class="banner">
    <block wx:if="{{banner.length <= 1}}">
      <view class="show-banner">
        <image src="{{banner[0]}}"></image>
        <view class="to-website">
          <view class="to">走进和毅
            <view class="to-website-icon"></view>
          </view>
        </view>
      </view>
    </block>
    <block wx:else>
      <view class="show-banner">
        <swiper indicator-dots="true" autoplay="true" interval="3000" duration="400" indicator-color="rgba(255, 255, 255, .5)" indicator-active-color="#3697fd">
          <block wx:for="{{banner}}">
            <swiper-item>
              <image src="{{item}}" class="item-image"></image>
            </swiper-item>
          </block>
        </swiper>
        <view class="to-website">
          <view class="to">走进和毅
            <view class="to-website-icon"></view>
          </view>
        </view>
      </view>
    </block>
  </view>

  <view class="announcement-box">
    <view class="announcement">
      <view class="ann-row text-ellipsis">
        <text>公告：</text>雪佛兰新款迈锐宝新消息 锐宝新消息 锐宝新消息 将一季度发布</view>
    </view>
  </view>

  <view class="top-bar-box">
    <view class="top-bar">
      <view class="flex-wrp">
        <view class="top-bar-item">
          <image src="https://iservice.daqisoft.cn/Public/Home/images/self_orders_icon.png"></image>
          <text>自助点单</text>
        </view>
        <view class="top-bar-item">
          <image src="https://iservice.daqisoft.cn/Public/Home/images/pay_online_icon.png"></image>
          <text>在线买单</text>
        </view>
      </view>
    </view>
  </view>

  <view class="grid-nav">
    <view class="flex-wrp">
      <view class="nav-item">
        <navigator>
          <image src="https://iservice.daqisoft.cn/Public/Home/images/yue_jishi_icon.png"></image>
          <view>约技师</view>
        </navigator>
      </view>
      <view class="nav-item">
        <navigator url="../reserve/pages/reserve-room/reserve-room">
          <image src="https://iservice.daqisoft.cn/Public/Home/images/book_rooms_icon.png"></image>
          <view>订房间</view>
        </navigator>
      </view>
      <view class="nav-item">
        <navigator url="../reserve/pages/reserve-project/reserve-project">
          <image src="https://iservice.daqisoft.cn/Public/Home/images/yue_project.png"></image>
          <view>约项目</view>
        </navigator>
      </view>
    </view>
    <view class="flex-wrp">
      <view class="nav-item">
        <navigator url="../reserve/pages/reserve-project/reserve-project">
          <image src="https://iservice.daqisoft.cn/Public/Home/images/project_intr_icon.png"></image>
          <view>项目介绍</view>
        </navigator>
      </view>
      <view class="nav-item" bindtap="showService">
        <image src="https://iservice.daqisoft.cn/Public/Home/images/call_service_icon.png"></image>
        <view>呼叫服务</view>
      </view>
      <view class="nav-item">
        <!-- <navigator> -->
        <image src="https://iservice.daqisoft.cn/Public/Home/images/online_shop_icon.png"></image>
        <view>在线商城</view>
        <!-- </navigator> -->
      </view>
    </view>
  </view>
  <!-- 分享按钮 -->
  <view class="share-box">
    <button hover-class="none" open-type="share">
      <text>分享</text>
    </button>
  </view>

  <view class="jishu-zhichi" bindtap="jishuzhichi">技术支持：大旗软件</view>
</view>

<!-- 导航公用模版 -->
<template is="engin-nav" data="{{type: 0,navArr: navArr,showImgUrl: showImgUrl}}" />

<!-- 呼叫服务mask -->
<view class="mask" style="display:{{maskDisplay}}" bindtap="hideService"></view>

<!-- 呼叫服务 -->
<view class="call-service" style="display:{{maskDisplay}}">
  <view class="donald-duck {{donaldshowIn}}">
    <image src="https://iservice.daqisoft.cn/Public/Home/images/donald_duck.png" lazy-load></image>
  </view>
  <view class="donald-duck-con {{donaldconshowIn}}">
    <image src="https://iservice.daqisoft.cn/Public/Home/images/donald_duck_title.png" lazy-load class="donald_duck_title"></image>
    <view class="service-box">
      <view class="service-list">
        <view>茶水服务</view>
        <view>茶水服务</view>
        <view>茶水服务</view>
        <view>茶水服务</view>
        <view>茶水服务</view>
      </view>
    </view>
  </view>
</view>