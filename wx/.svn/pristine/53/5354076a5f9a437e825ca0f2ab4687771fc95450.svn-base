.top-type {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}

.main-type {
  background: #2e2e2e;
  padding: 20rpx 0;
  box-sizing: border-box;
  position: relative;
}

.main-item {
  height: 46rpx;
  line-height: 46rpx;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  width: 50%;
  position: relative;
}

.main-item:nth-of-type(1) {
  border-right: 1rpx solid #6d6d6d;
}

.main-item.active .line {
  width: 182rpx;
  height: 2rpx;
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  margin-left: -91rpx;
  background-color: #fff;
}

.type-order {
  position: absolute;
  left: 0;
  bottom: -180rpx;
  width: 100%;
  background-color: #2e2e2e;
  display: none;
}

.type-item {
  float: left;
  height: 88rpx;
  line-height: 88rpx;
  width: 248rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  border-bottom: 1rpx solid #6d6d6d;
  border-right: 1rpx solid #6d6d6d;
}

.type-item:nth-child(3n) {
  border-right: none;
}

.small-type {
  background: #3a3a3a;
  box-sizing: border-box;
}

.small-item {
  flex: 4;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #caa876;
  font-size: 28rpx;
  position: relative;
}

.small-item .line {
  position: absolute;
  left: 50%;
  bottom: 0;
  width: 38rpx;
  height: 8rpx;
  margin-left: -19rpx;
  border-radius: 15rpx;
}

.small-item.active .line {
  background-color: #caa876;
}

.orders-con {
  margin-top: 168rpx;
}

.order-item {
  border-top: 14rpx solid #eee;
  background-color: #fff;
  padding-top: 22rpx;
  box-sizing: border-box;
}

.order-item .flex-wrp {
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #e5e5e5;
  padding-left: 20rpx;
}

.order-pic {
  width: 95rpx;
  height: 95rpx;
  margin-right: 20rpx;
}

.order-info {
  width: 400rpx;
}

.name {
  font-size: 32rpx;
  line-height: 1;
  margin-bottom: 14rpx;
  font-weight:400;
}

.type-name {
  font-size: 24rpx;
  color: #666;
}

.order-right {
  flex: 1;
  text-align: right;
  padding-right: 20rpx;
}

.state-tips {
  padding-right: 20rpx;
  color: #fc6500;
  font-size: 24rpx;
}

.consum-btn {
  width: 185rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 34rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  border-radius: 32rpx;
  box-shadow: 0rpx 2rpx 12rpx rgba(198, 160, 106, 0.5);
  display: inline-block;
}

.total-price {
  padding-right: 34rpx;
  font-size: 24rpx;
  text-align: right;
  height: 70rpx;
  line-height: 70rpx;
}

.order-oper {
  text-align: right;
  padding: 0 20rpx;
  line-height: 84rpx;
}

.order-oper view {
  display: inline-block;
  font-size: 26rpx;
  text-align: center;
}

.del-order {
  padding: 0 58rpx;
}

.again-reserve {
  width: 144rpx;
  height: 56rpx;
  line-height: 56rpx;
  border: 1rpx solid #b2b2b2;
  border-radius: 6rpx;
}

.evaluation {
  width: 106rpx;
  height: 56rpx;
  line-height: 56rpx;
  border: 1rpx solid #caa876;
  border-radius: 6rpx;
  background-color: #f4eee4;
  margin-left: 40rpx;
}
