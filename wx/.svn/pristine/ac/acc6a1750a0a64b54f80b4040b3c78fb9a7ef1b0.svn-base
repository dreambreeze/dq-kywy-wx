.coupon-content {
  background: #fff;
  border-radius: 6rpx;
  margin-bottom: 40rpx;
  position: relative;
  background-clip: padding-box;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.coupon-content.active .coupon-money, .coupon-content.active .valid-period {
  color: #c0c0c0;
}

.coupon-noopen {
  padding: 50rpx 0 38rpx;
}

.coupon-money {
  float: left;
  font-size: 32rpx;
  color: #caa876;
  padding-left: 30rpx;
  width: 68%;
}

.coupon-money text {
  font-size: 53rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.now-use {
  width: 160rpx;
  height: 58rpx;
  line-height: 58rpx;
  border-radius: 80rpx 0 0 80rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(199, 156, 98, 0.5);
  float: right;
  margin-top: 12rpx;
}

.lines {
  height: 1px;
  width: 100%;
  background: url(https://iservice.daqisoft.cn/Public/Home/images/links.png) repeat-x;
  overflow: hidden;
}

.valid-period {
  color: #737373;
  font-size: 24rpx;
}

.expiration {
  float: left;
  padding: 15rpx 30rpx;
}

.look-detail {
  float: right;
  padding: 15rpx 30rpx;
}

.arrowdown, .arrowup {
  width: 16rpx;
  height: 9rpx;
  margin-left: 14rpx;
  display: inline-block;
  vertical-align: middle;
}

.arrowdown {
  background: url(https://iservice.daqisoft.cn/Public/Home/images/arrowdown.png) no-repeat;
  background-size: contain;
}

.arrowup {
  background: url(https://iservice.daqisoft.cn/Public/Home/images/arrowup.png) no-repeat;
  background-size: contain;
}

.coupon-info {
  padding: 20rpx;
  padding-top: 0;
  display: none;
}

.c-info-t {
  font-size: 26rpx;
  color: #332f2f;
  margin: 8rpx 0;
}

.c-info-content {
  color: #8f8f94;
  font-size: 24rpx;
  padding-left: 30rpx;
}

.status-box {
  position: absolute;
  right: 12rpx;
  top: 24rpx;
  width: 180rpx;
  height: 180rpx;
}

.status-endtime {
  background: url(https://iservice.daqisoft.cn/Public/Home/images/expired.png) no-repeat;
  background-size: contain;
}

.status-use {
  background: url(https://iservice.daqisoft.cn/Public/Home/images/used.png) no-repeat;
  background-size: contain;
}

.get_limit{
  margin-top: 20rpx;
  color: #999999;
  font-size: 26rpx
}

.Received{
  font-size: 30rpx;
  color: #8f8f94;
  text-align: center;
}