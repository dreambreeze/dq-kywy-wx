  balance: 652.00,
  consume: 3000.52,
  cardtype: '铂金卡',
  cardnum: '2000005210362'
}
];

Page({
  data: {
    //顶部会员卡数据
    cardUrls: cmArr,
    indicatorDots: false,
    autoplay: false,
    interval: 5000,
    duration: 200,
    balance: cmArr[0].balance,
    consume: cmArr[0].consume,
    cardIdx: 0,
    funClassName: '',
    //图片地址前缀
    showImgUrl: common.config.showImgUrl
  },
  //监听滑动顶部会员卡事件
  topCardChange: function (e) {
    this.setData({
      balance: cmArr[e.detail.current].balance,
      consume: cmArr[e.detail.current].consume,
      cardIdx: e.detail.current
    });
  },

  //监听下拉刷新
  onPullDownRefresh: function () {
    wx.showLoading({
      mask: true,
      title: "加载中",
      success: function () {
        setTimeout(function () {
          wx.stopPullDownRefresh();
          wx.hideLoading();
        }, 1000);
      }
    });
  },

  /**
   * 用户分享事件
   */
  onShareAppMessage: function () {
    return {
      title: '客源无忧',
      success: function (res) {
        // 转发成功
      },
      fail: function (res) {
        // 转发失败
      },
      fail: function (res) {

      }
    }
  },
  /**
   * 页面加载事件
   */
  onLoad: function () {
    var _this = this;
    //请求分配功能菜单
    var nav = wx.getStorageSync('nav');
    //不存在本地时请求云服务
    if (!nav) {
      wx.showLoading({
        title: '加载中',
        mask: true
      });
      //获取分配的功能
      wx.request({
        url: common.config.host + '/index.php/Api/Base/getAppletFun',
        data: {
          'authorizerId': app.globalData.authorizerId
        },
        method: 'POST',
        header: {
          'content-type': 'application/json'
        },
        success: function (res) {
          wx.hideLoading();
          if (res.statusCode != 200) {
            wx.showModal({
              title: '提示',
              content: '网络请求失败',
            });
          } else {
            if (res.data.status == 0) {
              wx.showModal({
                title: '提示',
                content: res.data.info,
              });
            } else {
              wx.setStorageSync('nav', res.data.info);
              // return res.data.info;
              _this.setData({
                navArr: res.data.info
              });
            }
          }
        }
      });
    } else {
      _this.setData({
        navArr: nav
      });
    }
  },
  /**
   * 点击底部导航
   */
  enginNav: function (e) {
    var url = e.currentTarget.dataset.url;
    var isOpen = e.currentTarget.dataset.isopen;
    if (isOpen == 0) {
      wx.showToast({
        title: '功能暂未开通',
        icon: 'none',
        mask: true
      });
    } else {
      wx.redirectTo({
        url: url,
      });
    }
  },
  /**
   * 技术支持跳转
   */
  jishuzhichi: function () {
    common.jishuzhichi();
  }
});