Page({

  /**
   * 页面的初始数据
   */
  data: {
    qrDisplay: 'none',
    arrow: 0
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {

  },
  /**
   * 点击查看卡券详情信息
   */
  lookDetail: function (e) {
    var idx = e.currentTarget.dataset.idx;
    var ishide = e.currentTarget.dataset.ishide;
    var query = wx.createSelectorQuery();
    var _this = this;
    query.selectAll('.coupon-info').boundingClientRect(function (e) {
      if (e[idx].height == 0) {
        _this.setData({
          ishide: true,
          arrow: 1
        });
      } else {
        _this.setData({
          ishide: false,
          arrow: 0
        });
      }
    }).exec();

    this.setData({
      display: idx
    });
  },
  /**
   * 点击关闭显示二维码
   */
  closeQrcode: function () {
    this.setData({
      qrDisplay: 'none'
    });
  },
  /**
   * 点击卡券立即使用
   */
  nowUse: function () {
    this.setData({
      qrDisplay: 'block'
    });
  },
  /**
   * 点击查看已失效的券
   */
  goExpired: function () {
    wx.navigateTo({
      url: '../expired-coupon/expired-coupon',
    })
  }
})