<view class="search-box">
  <view class="search-con">
    <input type="text" placeholder="请输入门店名称" confirm-type="search" bindconfirm="searchSubmit" bindinput="searchInput"></input>
    <text bindtap="searchSubmit">搜索</text>
  </view>
</view>

