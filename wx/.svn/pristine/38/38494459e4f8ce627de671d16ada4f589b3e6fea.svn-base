<view class="area-item">
  <!-- <view class="area-title">长沙地区</view> -->
  <block wx:if="{{!emptyMsg}}">
    <view class="area-con clear">
      <block wx:for="{{stores}}" wx:key="">
        <view class="{{index == sidx ? 'active' : '' }}" bindtap="changeStore" data-sidx="{{index}}">{{item.store_name}}</view>
      </block>
    </view>
  </block>
  <block wx:else>
    <view class="emptyMsg">{{emptyMsg}}</view>
  </block>
</view>