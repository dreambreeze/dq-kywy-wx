<view class="amcontainer">
  <view class='forscroll'>
  <view class='head'>
       <!-- <view class='choosedate'>
        {{}}2018年6月 
       </view>
       <view class='moneyinfo'>
        <view class='hleft'>支出 ￥ 699.47</view>
       </view> -->
       <!-- <view class='choosedate'>
        {{}}2018年6月 
       </view> -->
      <view class='moneyinfo'>
        <view class='htop '>{{date}} </view>
        <view class='hbottom'>支出 ￥ {{totalcount}}</view>
      </view>
      <view class='cardinfo' bindtap='changeshow'>
        <view class='ctop'>{{choosecard}}<image src='{{!showcard?xiePic:hldownPic}}'></image> </view>
        
      </view>
      <picker mode="date" class='choosedate' bindchange="bindDateChange" value="{{ym}}" start="2015-01-01" end="{{ym}}"  fields="month">
        <view class="picker">
          <image src='{{datePicurl}}'></image>
        </view>
      </picker>
       
  </view>
  <!--选择卡  -->
    <view class='cards' hidden='{{!showcard}}'>
    
      <view wx:for="{{cards}}"  wx:key="" bindtap='getcardtype' class="item {{item.selected?'active':''}}"
        data-id="{{index}}">{{item.showname}}</view>
    </view>
    <scroll-view scroll-y >
      
      <block wx:if="{{1>0}}" >
        <view class='hisinfos'>
          <view class='consumption-item' wx:for="{{bills}}"  wx:key="" bindtap='todetail' data-payno="{{item.PayNo}}" >
            <view class='shopPicurl'>
              <image src='{{datePicurl}}'></image>
            </view>
            <view class='cicenter'>
              <view class='cileft'>
                <view class='citop'>{{item.ShopName}}</view>
                <!-- <view class='cimiddle'>[养生足浴、养生足浴...]</view> -->
                <view class='citime'>{{item.PayTime}}</view>
              </view>
              <view class='ciright'>
                  - {{item.SSJE}}
              </view>
            </view>
          </view>

          
        </view>
      </block>

      <block wx:else>
         
          <view class='goshop' >
            <text>-- 暂无历史消费 --</text>
          </view>
      </block>
    </scroll-view>
  </view>

  <!--   -->
</view>