
.amcontainer{
  height: 100%;
}
.container .swiper{
  height: 450rpx;
  background: #353535;
}
.swiper swiper{
  height: 450rpx;
}
.swiper swiper-item{
  display: flex;
  justify-content: center;
  align-items: center;
  /* padding-right:32rpx; */
}
.swiper image{
  width: 70%;
  height: 70%;
  opacity: 0.5;
  z-index: 2;
  border-radius:2rpx;

}
.swiper .active{
  width: 90%;
  height: 80%;
  transition:all .0s ease-in 0.3s; 
  opacity: 1;
  z-index: 3;
}
