<view class="project-info">
  <view class="flex-wrp">
    <image class="p-img" src="https://iservice.daqisoft.cn/Public/Home/images/home_banner.png" lazy-load></image>
    <view class="p-info">
      <view class="p-name">棋牌房</view>
      <view class="p-time">
        <image src="https://iservice.daqisoft.cn/Public/Home/images/order_time_icon.png" lazy-load></image>
        <text space="nbsp" decode>今天01-25  17:00</text>
      </view>
      <view class="p-store">
        <image src="https://iservice.daqisoft.cn/Public/Home/images/order_store_icon.png" lazy-load></image>和毅足道滨江店</view>
    </view>
  </view>
</view>

<view class="input-box">
  <textarea maxlength="50" placeholder="备注：可将您其它要求告知我们" cursor-spacing="50" bindinput="remarks"></textarea>
  <view class="input-limit">{{inputLimit}}</view>
</view>

<view class="order-bar" bindtap="toSuccess">确定下单</view>