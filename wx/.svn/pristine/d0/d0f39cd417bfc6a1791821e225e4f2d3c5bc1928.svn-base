<import src="../../../common/amount.wxml" />
<view class="recharge-info">
  <view class="recharge-b">
    <view class="infos">
      <view class="infos-t">卡类型：{{rechargeCard.MembershipTypeName}}</view>
      <view class="c-white">卡号： {{rechargeCard.CardNo}}</view>
      <view class="c-white">姓名： {{rechargeCard.MemberName}}</view>
      <view class="c-white">手机： {{rechargeCard.phone}}</view>
      <view class="c-white">开卡门店： {{rechargeCard.ShopName}}</view>
      <view class="infos-b">当前余额：{{rechargeCard.Balance}}元</view>
    </view>
  </view>
</view>

<view class="info-input">
  <!-- 充值金额模版 -->
  <template is="amount" data="{{amountTitle: '充值金额（元）',amountIdx: amountIdx,amount: recharRules}}" />

  <view class="input-item">
    <view class="flex-wrp">
      <view class="i-label">推销员工号</view>
      <view class="i-input">
        <input type="number" bindinput="salesStaff"/>
      </view>
    </view>
  </view>
</view>

<view class="dc-btn btn-gradient" bindtap="handleCard">提交</view>