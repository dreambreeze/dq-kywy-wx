@import "../../../common/reserve-stime.wxss";
@import "../../../common/online-reserve.wxss";

.container {
  background: #e5e5e5;
}

/* 选择房间类型 */

.room-people {
  height: 92rpx;
  line-height: 92rpx;
  background: #353535;
  box-sizing: border-box;
  position: relative;
}

.room-num {
  flex: 1;
  overflow: hidden;
}

.room-num-more {
  width: 95rpx;
  background: #434343 url(https://iservice.daqisoft.cn/Public/Home/images/arrowdown3.png) no-repeat center center;
  box-shadow: -1rpx 1rpx 6rpx rgba(67, 67, 67, 0.2);
  background-size: 34%;
}

.room-num-more.active{
  background: #434343 url(https://iservice.daqisoft.cn/Public/Home/images/arrowup3.png) no-repeat center center;
  background-size: 34%;
}

.room-box {
  width: 1120rpx;
  position: relative;
  left: 0;
}

.room-box view {
  float: left;
  font-size: 26rpx;
  color: #fff;
  padding: 0 32rpx;
  position: relative;
}

.room-box view.active, .room-type .room-box view.active ,.rtype-item.active{
  color: #be9e70;
}

.room-box text {
  position: absolute;
  left: 50%;
  bottom: 0;
  width: 40rpx;
  height: 8rpx;
  border-radius: 10rpx;
  margin-left: -20rpx;
}

.room-box view.active text {
  background: #be9e70;
}

.room-type {
  height: 70rpx;
  line-height: 70rpx;
  background: #f0f0f0;
  position: relative;
}

.room-type .room-box view {
  color: #666;
}

.room-type .room-box text {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-left: -6rpx;
}

.room-type .room-num-more {
  box-shadow: -1rpx 1rpx 6rpx rgba(240, 240, 240, 0.2);
  background: #f0f0f0 url(https://iservice.daqisoft.cn/Public/Home/images/arrowdown2.png) no-repeat center center;
  background-size: 34%;
}

.room-type .room-num-more.active{
  background: #f0f0f0 url(https://iservice.daqisoft.cn/Public/Home/images/arrowup2.png) no-repeat center center;
  background-size: 34%;
}

.room-people-more, .room-type-more {
  height: 300rpx;
  width: 100%;
  position: absolute;
  bottom: -300rpx;
  left: 0;
  background: #353535;
  z-index: 999;
  box-shadow: 0 2rpx 6rpx rgba(67, 67, 67, 0.4);
}

.room-type-more {
  background: #f0f0f0;
}

.room-people-more-con {
  padding-top: 30rpx;
}

.rtype-item {
  width: 26%;
   margin: 0 0 36rpx 38rpx; 
  line-height: 1;
  padding: 12rpx 0; 
  font-size: 26rpx;
  border: 1rpx solid #B2B2B2;
  color: #fff;
  border-radius: 30rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.rtype-item.active{
  border-color: #be9e70;
}

.room-type-more .room-people-more-con view {
  /* border: 1rpx solid #353535;  */
  color: #353535;
}

.room-content {
  padding-top: 34rpx;
  background: #fff;
  padding-bottom: 150rpx;
}

.room-item {
  float: left;
  margin: 0 26rpx 48rpx;
}

.room-img {
  width: 322rpx;
  height: 238rpx;
  position: relative;
  border-radius: 8rpx;
}

.room-img image {
  width: 322rpx;
  height: 238rpx;
  border-radius: 8rpx;
}

.room-info{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: rgba(200, 165, 114, 0.8);
  font-size: 24rpx;
  font-weight: 500;
  color: #333;
  border-radius: 0 0 8rpx 8rpx;
}

.room-info text{
  display: block;
  padding: 12rpx 8rpx;
}

.reserve-room-p{
  text-align: center;
  padding-top: 20rpx;
  min-height: 60rpx;
}

.reserve-room-p icon{
  display: none;
}

.reserve-room-btn{
  display: inline-block;
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 10rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(199, 156, 98, 0.5);
}

.buy-bar {
  width: 100%;
  height: 97rpx;
  line-height: 97rpx;
  background: #be9e70;
  position: fixed;
  bottom: 0;
  left: 0;
  text-align: center;
  font-size: 34rpx;
  color: #fff;
  font-weight: 500;
}