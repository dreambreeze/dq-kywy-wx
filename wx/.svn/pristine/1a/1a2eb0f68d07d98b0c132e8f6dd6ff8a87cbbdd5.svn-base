.contianer {
  background: #fff;
}

.top-card {
  margin-bottom: 28rpx;
}

.card {
  height: 310rpx;
  background: #2e2e2e;
  text-align: center;
  overflow: hidden;
}

.card image {
  width: 562rpx;
  height: 290rpx;
  position: relative;
  bottom: -34rpx;
}

.card-info {
  height: 110rpx;
  line-height: 110rpx;
  font-size: 26rpx;
  color: #caa876;
  font-weight: bold;
  background: #fff;
  text-align: center;
}

.info-input {
  margin-top: 10rpx;
  padding: 62rpx;
  background: #fff;
}

.input-item {
  margin-bottom: 28rpx;
  box-sizing: border-box;
}

.i-label {
  font-size: 28rpx;
  width: 166rpx;
  color: #666;
  line-height: 72rpx;
}

.i-label text {
  font-weight: bold;
  font-size: 28rpx;
  /* font-family: tahoma, verdana; */
  color: #ed0f10;
  vertical-align: bottom;
  display: inline-block;
  margin-right: 2px;
}

.i-input {
  border-bottom: 1rpx solid #ccc;
  flex: 1;
}

.i-input input, .verify-input input {
  line-height: 72rpx;
  font-size: 28rpx;
  height: 72rpx;
  padding: 0 20rpx;
}

.verify-input {
  width: 306rpx;
  border-bottom: 1rpx solid #ccc;
}

.get-verify {
  width: 164rpx;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  display: inline-block;
  border-radius: 3px;
  margin-left: 10rpx;
  height: 56rpx;
  line-height: 56rpx;
  margin-top: 10rpx;
}

.get-verify.seconds{
  background-color: #ccc
}

.radio {
  font-size: 28rpx;
  margin-right: 35rpx;
}

.dc-btn {
  width: 576rpx;
  height: 90rpx;
  line-height: 90rpx;
  color: #fff;
  box-shadow: 0 0 14px rgba(189, 144, 85, 0.6);
  text-align: center;
  border-radius: 3px;
  margin: 176rpx auto 0;
  font-size: 34rpx;
  font-weight: bold;
}

.getPhoneNumber{
  flex: 1;
  border-bottom: 1rpx solid #ccc;
}

.getPhoneNumber button{
  width: 150rpx; 
  background-color: #51C332;
  color: #fff;
  margin: 0 0 0 70rpx;
  padding: 12rpx 10rpx;
  line-height: 1;
  font-size: 28rpx;
  border-radius: 3rpx;
  display: inline-block;
}

.again-reserve{
  text-align: center;
  padding: 34rpx 0;
  background-color: #fff;
  border-top: 1rpx solid #e8e8e8;
}

.again-reserve view{
  display: inline-block;
  width: 238rpx;
  height: 74rpx;
  line-height: 74rpx;
  text-align: center;
  font-size: 30rpx;
  border: 1rpx solid #caa876;
  color: #333;
  border-radius: 6rpx;
}

.again-reserve view.active{
  background-color: #caa876;
  color: #fff;
  margin-left: 75rpx;
}

.goHome{
  width: 576rpx;
  height: 90rpx;
  line-height: 90rpx;
  color: #a3a2a9;
  /* box-shadow: 0 0 14px rgba(81, 195, 50, 0.4); */
  text-align: center;
  border-radius: 3px;
  margin: 15rpx auto 0;
  font-size: 30rpx;
  /* font-weight: 400; */
  background-color: #fff;
}