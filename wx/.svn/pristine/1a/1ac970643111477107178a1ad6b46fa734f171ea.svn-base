<view class="top-head">
  <view class="head-info flex-wrp">
      <image src="http://nwx.daqisoft.cn/uploads/j/jmprxe1453369563/2/3/b/6/thumb_59f7ee1141ddc.jpg" lazy-load mode="aspectFill"></image>
      <view class="infos">
        <view class="ptitle">60分钟飘然若仙</view>
        <view class="pstore">门店：和毅足道滨江店</view>
        <view class="pstore">类型：购买项目</view>
      </view>
    </view>
</view>

<view class="star">
  <view class="flex-wrp">
    <view class="star-title">评价</view>
    <view class="stars">
      <block wx:for="{{star}}">
        <image src="{{item}}" data-idx="{{index}}" bindtap="star"></image>
      </block>
      <text>{{starStatus}}</text>
    </view>
  </view>
</view>

<view class="textarea">
  <textarea></textarea>
</view>

<view class="push-img clear">
  <view class="push-img-btn" bindtap="pushImg">
    <view>添加图片</view>
  </view>
  <block wx:for="{{pushImg}}">
    <view class="img-item">
      <image src="{{item}}"></image>
      <view class="close" bindtap="closeImg" data-idx="{{index}}">×</view>
    </view>
  </block>
</view>

<view class="assess-btn">提交</view>