@import "../../../common/top-nav.wxss";
@import "../../../common/coupons.wxss";

.container {
  background: #eee;
}

.coupon-box {
  margin: 24rpx;
  overflow: hidden;
  min-height: 980rpx;
}

.qrcode-box {
  width: 600rpx;
  height: 872rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  margin-top: -463rpx;
  margin-left: -300rpx;
  background: #fff;
  border-radius: 3px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
}

.qrcode-title {
  height: 118rpx;
  line-height: 118rpx;
  position: relative;
  text-align: center;
  color: #caa876;
  font-size: 32rpx;
}

.qrcode-title text {
  font-size: 54rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.lines {
  height: 1px;
  width: 100%;
  background: url(https://iservice.daqisoft.cn/Public/Home/images/links.png) repeat-x;
  overflow: hidden;
}

.close-qrcode {
  position: absolute;
  right: 0;
  top: 0;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 44rpx;
  color: #aaa9a9;
}

.qrcodes {
  padding: 40rpx 0;
  text-align: center;
}

.qr-t {
  font-size: 22rpx;
  color: #8f8f94;
}

.qrcodes image {
  width: 570rpx;
  height: 570rpx;
  margin: 20rpx 0;
}

.coupon-num {
  color: #333;
  font-size: 32rpx;
}

.look-expired{
  text-align: center;
  font-size: 24rpx;
  color: #969696;
  padding-bottom: 25rpx;
}
.look-expired text:nth-of-type(2){
  margin: 0 8rpx;
}
.go-expired{
  color: #D4A764
}

.empty-coupon{
  text-align: center;
  font-size: 32rpx;
  color: #999999;
  margin-top: 156rpx;
}

.empty-t{
  margin-top: 10rpx;
}

.empty-btn{
  width: 274rpx;
  height: 66rpx;
  line-height: 66rpx;
  margin: 90rpx auto 0;
  text-align: center;
  font-size: 30rpx;
  color: #caa876;
  border-radius: 6rpx;
  border: 1rpx solid #caa876;
}