// 引入腾讯地图SDK核心类
const QQMapWX = require('../../../../pages/common/lib/qqmap-wx-jssdk.min.js');
var qqmapsdk;
//全局配置
const common = require('../../../../common.js');
var downX = 0;
var oUlLeft = 0;
var roomPeopleNumW = 0;
var roomPeopleTouchW = 0;
var leftval = 0;

Page({

  /**
   * 页面的初始数据
   */
  data: {
    maskDisplay: 'none',
    //项目数据
    proData: [0, 1, 2,3,4],
    //项目分类拖拽初始left值
    roomPLeft: 0,
    //项目分类
    ptype: [
      '全部',
      'SPA',
      '中医',
      '泰式',
      '普足',
      'SPA',
      '中医',
      '泰式',
      '普足'
    ],
    //项目分类初始选中全部
    ptypeIdx: 0
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    var query = wx.createSelectorQuery();
    query.select('.category-project').boundingClientRect(function (rect) {
      roomPeopleNumW = rect.width;
    }).exec();

    query.select('.room-people-touch').boundingClientRect(function (rect) {
      roomPeopleTouchW = rect.width;
    }).exec();

    // 实例化腾讯地图API核心类
    qqmapsdk = new QQMapWX({
      key: common.config.QQMapWXKey
    });
    
  },
  /**
   * 跳转至项目详情页
   */
  navigatordetail: function (ev) {
    var id = ev.currentTarget.dataset.idx;
    wx.navigateTo({
      url: '../project-detail/project-detail?id=' + id,
    })
  },
  /**
   * 项目分类动画开始
   */
  categorystart: function (e) {
    console.log(e);
  },
  /**
   * 点击跳转项目搜索页
   */
  toSearchProject: function () {
    wx.navigateTo({
      url: '../search-project/search-project',
    });
  },
  /**
   * 点击立即预约显示选择时间
   */
  reserveBtnTime: function () {
    this.setData({
      showSelectTime: 'showIn',
      maskDisplay: 'block'
    });
  },

  /**
   * 点击预约选中预约项
   */
  reserveBtn: function (ev) {
    var idx = ev.currentTarget.dataset.idx;
    wx.setStorageSync('projectStorage', idx);
    this.setData({
      iconHide: 'display:block',
      reserveBtnHide: 'display:none',
      hideIdx: idx
    });
  },
  /**
   * 点击关闭选择时间
   */
  closeStime: function () {
    this.setData({
      maskDisplay: 'none',
      showSelectTime: 'showOut'
    });
  },
  /**
   * 点击跳转至选择门店
   */
  changeStoreBtn: function () {
    wx.navigateTo({
      url: '../select-store/select-store',
    });
  },
  /**
   * 跳转确认下单页
   */
  confirmBtn: function () {
    var _this = this;
    wx.navigateTo({
      url: '../room-order-confirm/room-order-confirm',
      success: function () {
        _this.setData({
          maskDisplay: 'none',
          showSelectTime: 'showOut'
        });
      }
    });
  },

  /**
   * 预约table选项卡导航跳转
   */
  onlineReserevTabJump: function (ev) {
    wx.redirectTo({
      url: ev.currentTarget.dataset.url,
    });
  },

  /**
   * 监听页面显示事件
   */
  onShow: function () {
    var projectStorage = wx.getStorageSync('projectStorage');
    if (projectStorage !== '') {
      this.setData({
        iconHide: 'display:block',
        reserveBtnHide: 'display:none',
        hideIdx: projectStorage
      });
    }
  },

  /**
   * 拖拽开始
   */
  roomPStart: function (ev) {
    downX = ev.touches[0].pageX;
    var query = wx.createSelectorQuery();
    query.select('.room-people-touch').boundingClientRect(function (rect) {
      oUlLeft = rect.left;
    }).exec();
  },
  /**
   * 拖拽
   */
  roomPMove: function (ev) {
    var touchs = ev.touches[0];
    leftval = touchs.pageX - downX + oUlLeft;
    if (leftval >= 0) {
      leftval = 0;
    } else if (leftval <= roomPeopleNumW - roomPeopleTouchW) {
      leftval = roomPeopleNumW - roomPeopleTouchW;
    }
    this.setData({
      roomPLeft: leftval + 'px'
    });
  },
  /**
   * 结束
   */
  roomPEnd: function (ev) {
    if (leftval >= 0) {
      this.setData({
        roomPLeft: '0px'
      });
    } else if (leftval <= roomPeopleNumW - roomPeopleTouchW) {
      this.setData({
        roomPLeft: roomPeopleNumW - roomPeopleTouchW + 'px'
      });
    }
  },

  /**
   * 点击切换项目分类
   */
  changePType: function(ev){
    var idx = ev.currentTarget.dataset.idx;
    wx.showLoading({
      title: '加载中',
      mask: true
    });
    this.setData({
      ptypeIdx: idx
    });
    setTimeout(function(){
      wx.hideLoading();
    },300);
  },

  /**
   * 拨打电话
   */
  phoneCall: function(ev){
    var phone = ev.currentTarget.dataset.phone;
    wx.makePhoneCall({
      phoneNumber: phone,
    });
  },

  /**
   * 地理位置
   */
  location: function(){
    wx.getSetting({
      success(res) {
        wx.showLoading({
          title: '加载中',
          mask: true
        });
        if (!res.authSetting['scope.userLocation']) {
          wx.authorize({
            scope: 'scope.userLocation',
            success(res) {
              // 用户已经同意
              qqmapsdk.geocoder({
                address: '湖南省长沙市芙蓉区宽寓大厦',
                success: function (res) {
                  wx.hideLoading();
                  if (res.status == 0) {
                    wx.openLocation({
                      latitude: res.result.location.lat,
                      longitude: res.result.location.lng,
                      name: '宽寓大厦',
                      address: '湖南省长沙市芙蓉区宽寓大厦'
                    });
                  } else {
                    wx.showModal({
                      title: '提示',
                      content: '地址解码失败',
                      showCancel: false
                    });
                  }
                },
                fail: function (res) {
                  wx.hideLoading();
                  wx.showModal({
                    title: '提示',
                    content: '地址解码失败',
                    showCancel: false
                  });
                }
              });
            },
            fail: function(){
              wx.hideLoading();
              wx.showModal({
                title: '提示',
                content: '已拒绝使用地理位置，现在去设置允许使用地理位置',
                success: function (res) {
                  if (res.confirm) {
                    wx.openSetting({
                      success: (res) => {
                        if (res.authSetting['scope.userLocation']){
                          wx.showLoading({
                            title: '加载中',
                            mask: true
                          });
                          qqmapsdk.geocoder({
                            address: '湖南省长沙市芙蓉区宽寓大厦',
                            success: function (res) {
                              wx.hideLoading();
                              if (res.status == 0){
                                wx.openLocation({
                                  latitude: res.result.location.lat,
                                  longitude: res.result.location.lng,
                                  name: '宽寓大厦',
                                  address: '湖南省长沙市芙蓉区宽寓大厦'
                                });
                              }else{
                                wx.showModal({
                                  title: '提示',
                                  content: '地址解码失败',
                                  showCancel: false
                                });
                              }
                            },
                            fail: function (res) {
                              wx.hideLoading();
                              wx.showModal({
                                title: '提示',
                                content: '地址解码失败',
                                showCancel: false
                              });
                            }
                          });
                        }
                      }
                    })
                  }
                }
              });
            }
          });
        }else{
          wx.showLoading({
            title: '加载中',
            mask: true
          });
          qqmapsdk.geocoder({
            address: '湖南省长沙市芙蓉区宽寓大厦',
            success: function (res) {
              wx.hideLoading();
              if (res.status == 0) {
                wx.openLocation({
                  latitude: res.result.location.lat,
                  longitude: res.result.location.lng,
                  name: '宽寓大厦',
                  address: '湖南省长沙市芙蓉区宽寓大厦'
                });
              } else {
                wx.showModal({
                  title: '提示',
                  content: '地址解码失败',
                  showCancel: false
                });
              }
            },
            fail: function (res) {
              wx.hideLoading();
              wx.showModal({
                title: '提示',
                content: '地址解码失败',
                showCancel: false
              });
            }
          });
        }
      }
    });
  }
})