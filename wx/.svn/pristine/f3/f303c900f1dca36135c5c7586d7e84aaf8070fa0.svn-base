@import "../common/shop-nav.wxss";
.banner{
  height: 350rpx;
}
.swiper {
  height: 350rpx;
}
.swiper swiper-item .slide-image{
  width: 750rpx;
  height: 350rpx;
}

.i-type{
  width: 100%;
  height: 196rpx;
  display: flex;
  justify-content: space-around;
}
.i-type .t-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 25%;
  height: 100%;
}
.i-type .t-item image{
  width: 104rpx;
  height: 104rpx;
}

.bcline{
  height: 20rpx; 
  background-color: #eee;
}

.i-new{
  padding: 0 20rpx; 
  color: #666;
}
.i-new .n-head{
width:100%;
height:96rpx;
font-size:30rpx;
display:flex;
align-items:center;
justify-content:center;
}
.n-head .n-title{
width:150rpx;
text-align:center;
}
.n-head .n-line{
  height: 2rpx;
  background-color: rgba(0,0,0,0.2);
  width: 150rpx;
}
.i-new .n-content{
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
.i-new .n-item{
  padding: 10rpx 20rpx;
  position: relative;
}
.n-item image{
  width: 310rpx;
  height: 286rpx;
}
.n-item .t-iteminfo{
  position: absolute;
  width: 292rpx;
  height: 110rpx;
  background: rgba(255,255,255,0.9);
  bottom:34rpx;
  left:28rpx;
  text-align: center;
}
.t-iteminfo view:first-child{
  font-size:32rpx;
  font-weight: bold;
  color: #333;
  padding-top: 16rpx;
}

.i-hot{
  padding:0 10rpx 100rpx 10rpx;

}
.h-content{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-bottom: 50rpx
}
.h-content .h-item{
  margin: 9rpx ; 
}
.h-item image{
  width: 345rpx;
  height: 334rpx;
}
.h-item .t-hinfo {
  margin-top: -14rpx;
  border: 1rpx solid rgba(0,0,0,0.1);
  padding-bottom: 10rpx;
}
.t-hinfo view:first-child{
 padding: 14rpx 10rpx 6rpx 10rpx;
}
.t-hinfo  view:last-child{
  padding: 0 10rpx;
  color: #db0000;
}

.customer{
  width: 96rpx;
  height: 96rpx;
  position: fixed;
  right: 10rpx;
  bottom: 126rpx;
  border-radius: 50%;
  z-index: 1;
  border: 1rpx solid #d21717;
  background-color: rgba(255,255,255,0.7);
  display: flex;
  justify-content: center;
  align-items: center;
}
.customer image{
  width: 48rpx;
  height: 52rpx;
}

.nomore{
  margin:-78rpx 0 160rpx  0;
  color: #666;
  font-size: 24rpx;
}