var app = getApp();
var navArr = '';
var homeArr = '';
Page({

  /**
   * 页面的初始数据
   */
  data: {
    banner: [
      'https://iservice.daqisoft.cn/Public/Home/images/home_banner.png'
    ],
    maskDisplay: 'none',
    //图片地址前缀
    showImgUrl: app.globalData.showImgUrl
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    //自动屏幕高
    var query = wx.createSelectorQuery();
    var minHeight = 0,
      _this = this,
      setHeightTimer = null;
    query.selectViewport().boundingClientRect(function (rect) {
      minHeight = rect.height;
    }).exec();

    clearTimeout(setHeightTimer);
    setHeightTimer = setTimeout(function () {
      _this.setData({
        minHeight: minHeight + 'px'
      });
    }, 1000);
    
    //获取分配的功能
    wx.request({
      url: 'https://iservice.daqisoft.cn/index.php/Api/Base/getAppletFun',
      data: {
        'authorizerId': app.globalData.authorizerId
      },
      method: 'POST',
      header: {
        'content-type': 'application/json'
      },
      success: function (res) {
        if (res.data.status == 0) {
          wx.showModal({
            title: '提示',
            content: res.data.info,
          });
        } else {
          console.log(res.data.info);
          _this.setData({
            navArr: res.data.info.nav
          });
        }
      }
    });

  },
  /**
   * 监听页面分享
   */
  onShareAppMessage: function () {

  },
  /**
   * 点击显示呼叫服务
   */
  showService: function () {
    this.setData({
      maskDisplay: 'block',
      donaldshowIn: 'donaldshowIn',
      donaldconshowIn: 'donaldconshowIn'
    });
  },
  /**
   * 点击隐藏呼叫服务
   */
  hideService: function () {
    this.setData({
      maskDisplay: 'none',
      donaldshowIn: 'donaldshowOut',
      donaldconshowIn: 'donaldconshowOut'
    });
  },
  /**
   * 点击底部导航
   */
  enginNav: function (e) {
    var url = e.currentTarget.dataset.url;
    var isOpen = e.currentTarget.dataset.isopen;
    if (isOpen == 0) {
      wx.showToast({
        title: '功能暂未开通',
        icon: 'none',
        mask: true
      });
    } else {
      wx.redirectTo({
        url: url,
      });
    }
  }
})