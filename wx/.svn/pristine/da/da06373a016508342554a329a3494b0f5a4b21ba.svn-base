@import "../../../common/amount.wxss";
.container {
  background: #eee;
}

.card-info {
  height: 158rpx;
  padding: 18rpx 0;
  background: #2e2e2e;
}

.flex-item {
  width: 50%;
}

.info-l {
  width: 264rpx;
  height: 158rpx;
  margin: 0 auto;
  position: relative;
}

.info-l image {
  width: 100%;
  height: 100%;
}

.info-l view {
  position: absolute;
  left: 63rpx;
  color: #fff;
}

.card-type {
  font-size: 24rpx;
  top: 19rpx;
}

.card-num {
  font-size: 22rpx;
  top: 48rpx;
  width: 174rpx;
}

.info-r view {
  font-size: 26rpx;
  color: #fff;
  margin-top: 16rpx;
}

.info-input {
  margin-top: 10rpx;
  padding: 25rpx 42rpx;
  background: #fff;
}

.input-item {
  margin-bottom: 28rpx;
  box-sizing: border-box;
}

.i-label {
  font-size: 28rpx;
  width: 156rpx;
  color: #666;
  line-height: 72rpx;
}

.i-label text {
  font-weight: bold;
  font-size: 28rpx;
  /* font-family: tahoma, verdana; */
  color: #ed0f10;
  vertical-align: bottom;
  display: inline-block;
  margin-right: 2px;
}

.i-input {
  border-bottom: 1rpx solid #ccc;
  flex: 1;
}

.i-input input, .verify-input input {
  line-height: 72rpx;
  font-size: 28rpx;
  height: 72rpx;
  padding: 0 20rpx;
}

.verify-input {
  width: 306rpx;
  margin-left: 156rpx;
  border-bottom: 1rpx solid #ccc;
}

.get-verify {
  width: 164rpx;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  display: inline-block;
  border-radius: 3px;
  margin-left: 10rpx;
  height: 56rpx;
  line-height: 56rpx;
  margin-top: 10rpx;
}

.radio {
  font-size: 28rpx;
  margin-right: 35rpx;
}

.dc-btn {
  width: 576rpx;
  height: 90rpx;
  line-height: 90rpx;
  color: #fff;
  box-shadow: 0 0 14px rgba(189, 144, 85, 0.6);
  text-align: center;
  border-radius: 3px;
  margin: 61rpx auto 0;
  font-size: 34rpx;
  font-weight: bold;
}
