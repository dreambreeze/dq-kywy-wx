var buyNum = 1;
Page({

  /**
   * 页面的初始数据
   */
  data: {
    nums: buyNum
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
  },
  /**
   * 购买数量减减
   */
  lessNum: function () {
    buyNum--;
    if (buyNum <= 1) {
      buyNum = 1;
    }
    this.setData({
      nums: buyNum
    });
  },
  /**
   * 购买数量加加
   */
  addNum: function () {
    buyNum++;
    this.setData({
      nums: buyNum
    });
  }
})