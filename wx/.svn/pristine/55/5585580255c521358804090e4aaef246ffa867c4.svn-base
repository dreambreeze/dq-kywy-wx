/* 充值金额公用样式 */
.amount-t {
  width: 100%;
  font-size: 28rpx;
  color: #666;
  line-height: 72rpx;
}
.amount-t text {
  font-weight: bold;
  font-size: 28rpx;
  /* font-family: tahoma, verdana; */
  color: #ed0f10;
  vertical-align: bottom;
  display: inline-block;
  margin-right: 2px;
}
.amount-b {
  box-sizing: border-box;
  margin-left: 14rpx;
}

.amount-item {
  width: 183rpx;
  height: 96rpx;
  line-height: 96rpx;
  border: 1rpx solid #ccc;
  border-radius: 6rpx;
  text-align: center;
  color: #333;
  font-size: 34rpx;
  float: left;
  margin-bottom: 15rpx;
  position: relative;
}
.amount-item .active{
  border: 1rpx solid #e5d4bb;
}
.amount-item.active {
  border-color: #e5d4bb;
}
.amount-item view{
  display: inline-block;
  width: 0;
  height: 0;
  position: absolute;
  bottom: 0;
  right: 0;
}

.amount-item.active view {
  width: 40rpx;
  height: 40rpx;
  background: url(https://iservice.daqisoft.cn/Public/Home/images/check_bg.png) no-repeat;
  background-size: contain;
  bottom: -4rpx;
}

.amount-item:nth-child(3n-1) {
  margin: 0 40rpx 15rpx;
}
.amount-item:last-child{
  border: none;
}
.amount-item input {
  width: 100%;
  height: 100%;
  font-size: 34rpx;
  border: 1rpx solid #ccc;
  border-radius: 6rpx;
}