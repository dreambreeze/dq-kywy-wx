<view class="amcontainer">
  <view class='forscroll'>
  <view class='head'>
       <!-- <view class='choosedate'>
        {{}}2018年6月 
       </view>
       <view class='moneyinfo'>
        <view class='hleft'>支出 ￥ 699.47</view>
       </view> -->
       <!-- <view class='choosedate'>
        {{}}2018年6月 
       </view> -->
      <view class='moneyinfo'>
        <view class='htop '>{{date}} </view>
        <view class='hbottom'>支出 ￥ {{totalcount}}</view>
      </view>
      <view class='cardinfo' bindtap='changeshow'>
        <view class='ctop'>{{choosecard.showname}}<image src='{{!showcard?xiePic:hldownPic}}'></image> </view>
        
      </view>
      <picker mode="date" class='choosedate' bindchange="bindDateChange" value="{{ym}}" start="2015-01-01" end="{{endmonth}}"  fields="month">
        <view class="picker">
          <image src='{{datePicurl}}'></image>
        </view>
      </picker>
         <!--选择卡  -->
    <view class='cards' hidden='{{!showcard}}'>
      <view wx:for="{{cards}}"  wx:key="" bindtap='getcardtype' class="item {{item.CardNo==choosecard.CardNo?'active':''}}"
        data-id="{{index}}">{{item.showname}}</view>
    </view>
  </view>

    <scroll-view scroll-y >
      <block wx:if="{{bills.length>0}}" >
        <view class='hisinfos'>
          <view class='consumption-item' wx:for="{{bills}}"  wx:key="" bindtap='todetail' data-index="{{index}}" >
            <view class='shopPicurl'>
              <image src='{{item.picurl?showImgUrl:""}}{{item.picurl?item.picurl:hisPicurl}}'></image>
            </view>
            <view class='cicenter'>
              <view class='cileft'>
                <view class='citop'>{{item.ShopName}}</view>
                <!-- <view class='cimiddle'>[养生足浴、养生足浴...]</view> -->
                <view class='citime'>{{item.PayTime}}</view>
              </view>
              <view class='ciright'>
                   {{item.SSJE?"- "+item.SSJE*1.0:"+"+100}}
              </view>
            </view>
          </view>

          
        </view>
        <view class='nomore'>没有更多了~</view>
      </block>

      <block wx:else> 
          <view class='hisinfos' hidden>
          <view class='consumption-item' >
            <view class='shopPicurl'>
              <image src='{{item.picurl?showImgUrl:""}}{{item.picurl?item.picurl:hisPicurl}}'></image>
            </view>
            <view class='cicenter'>
              <view class='cileft'>
                <view class='citop'>测试A店</view>
                <!-- <view class='cimiddle'>[养生足浴、养生足浴...]</view> -->
                <view class='citime'>2018-07-08 20：20：22</view>
              </view>
              <view class='ciright'>
                   {{item.SSJE?"-"+item.SSJE:"+"+100}}
              </view>
            </view>
          </view>

          
        </view>
          <view class='goshop' >
            <text>-- 当前月份暂无消费 --</text>
          </view>
      </block>
    </scroll-view>
  </view>

  <!--   -->
</view>

<!-- 返回首页按钮 -->
<view class="backhome-btn">
  <view>
    <navigator url="/pages/index/index" hover-class="none" open-type="reLaunch">
      <text>返回首页</text>
    </navigator>
  </view>
</view>