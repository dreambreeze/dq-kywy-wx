page {
	height: 100%;
	overflow: hidden;
}
.container {
	height: 100%;
	overflow: hidden;
  background-color: #eee;
  font-family: '华文细黑';
}

.head {
  width: 92%;
  padding: 0 4%;
  margin: 0;
}
.head image{
   width: 100%;
   height: 292rpx;
   margin: 0 0 -10rpx 0;
}

.info{
  height: 150rpx;
  background-color: #fff;
  font-size:34rpx;
  position: relative;
}
.info .i-name{
  color: #333;
  height: 82rpx;
  display: flex;
  align-items: center;
  margin-left: 38rpx;
}
.info .i-price{
  display: flex;
  align-items: center;
  color: #db0000;
  height: 68rpx;
  margin-left: 38rpx;
}
 .info .i-add{
display: flex;
display: -webkit-flex;
width: 310rpx;
height: 72rpx;
position: absolute;
right: 0;
top:46rpx;
justify-content:flex-end;
}
.i-add .reduce{
  width: 72rpx;

  display: flex;
  align-items: center;
  transition: width 3s ease-in-out 3s;
}
.i-add .num{
flex: 1;
display:flex;
align-items:center;
}
.i-add .a-img{
    width: 200rpx;
  height: 72rpx;
  }
 .i-add .a-add{

width:200rpx;
height:64rpx;
color:#fff;
font-size:30rpx;
display:flex;
align-items:center;
justify-content:center;
background-image:linear-gradient(to bottom right,#dfceb5,#c59f68);
border-top-left-radius:48rpx;
border-bottom-left-radius:48rpx;
 }
.addimg{
  width: 57rpx;
	height: 57rpx;
}

 .fline{
   height: 20rpx;
   color: #eee;
 }
 .introduce{
   padding: 30rpx ;
   background-color: #fff;
   min-height: 120rpx;
   font-size: 28rpx;
 }
  .introduce view:first-child{
    color: #666;
    margin-bottom: 14rpx;
  }

 .sline{
   height: 10rpx;
   color: #eee;
 }

.evaluation{
  background-color: #fff;
  padding: 30rpx 30rpx 120rpx 30rpx;
}
.evaluation .ehead{
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.ehead text:first-child{
  flex: 1;
  font-size: 28rpx;
  color: #666;
}
.ehead .seeall{
  font-size: 22rpx;
  color: #999;
  margin-right: 10rpx;
}

.userimg{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 18rpx;
}
.c-head{
  display: flex; 
  align-items: center;
  font-size: 24rpx;
  margin-bottom: 10rpx;
  margin-top: 20rpx;
}
.c-head .userstar{
  flex: 1;
}
.c-head .usertime{
  color: #999;  
}
.c-content{
  padding-bottom: 24rpx;
}
.c-content{
  font-size: 26rpx;
  color: #333;
  border-bottom: 1rpx solid rgba(0,0,0,0.1);
}

/*购物车  */
.cart-detail, .cart-detail .mask {
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
}
.cart-detail .mask {
	background: rgba(0,0,0,0.7);
}
.cart-detail .list {
	position: absolute;
	left: 0;
	bottom: 100rpx;
	width: 100%;
	background: #f7f7f7;
	padding: 0rpx 0 30rpx 0;
}
.cart-detail .list .item {
	display: -webkit-flex;
  align-items:center;
	color: #333;
	font-size: 36rpx;
	line-height: 50rpx;
  height: 98rpx;
	padding: 0rpx 36rpx;
  border-bottom: 1rpx rgba(0,0,0,0.1) solid;
}
.cart-detail .list .item .name {
	-webkit-flex: 1;
  font-size: 32rpx;
}
.cart-detail .list .item .total {
	width: 120rpx;
  font-size: 32rpx;
}
.cart-detail .list .item .reduce,
.cart-detail .list .item .add {
	font-size: 50rpx;
	/* background:  #1E90FF; */
	width: 57rpx;
	height: 57rpx;
	text-align: center;
  color: #fff;
	border-radius: 50%; 
}
.cart-detail .list .item .addimg{
  width: 57rpx;
	height: 57rpx;
}
.cart-detail .list .item .num {
	width: 50rpx;
	text-align: center;
  font-size: 28rpx;
	margin: 0 5rpx;
}

.cart-detail .clear {
  height: 88rpx;
  display: flex;
  display: -webkit-flex;
   align-items: center;
   padding: 0rpx 36rpx;
   color: #666;
   font-size: 24rpx;
   background-color: #eee;
  
} 
.clear  .clearimg{
  width: 28rpx;
  height: 28rpx;
  margin-right: 6rpx;
}
.clear .desc{
 -webkit-flex: 1;
 flex: 1;
}

.cart {
	display: -webkit-flex;
	position: absolute;
	left: 0;
	bottom: 0;
	width: 100%;
	height: 100rpx;
	background: #fff;
  box-shadow: 0rpx 5rpx 50rpx rgba(0,0,0,0.1);
}
.cart .data {
	-webkit-flex: 1;

}
.cart .data .icon {
	position: absolute;
	left: 40rpx;
	top: -20rpx;
	width: 100rpx;
	height: 100rpx;
	/* background:  #1E90FF; */
	border-radius: 50%;
}
.cart .data .icon image {
	position: absolute;
	left:-4rpx;
  top:-2rpx;
  width:110rpx;
  height:110rpx;
}
.cart .data .icon .count {
	position: absolute;
	left: 70rpx;
	top: -10rpx;
	font-size: 30rpx;
	line-height: 40rpx;
	padding: 0 12rpx;
	color: #fff;
	background: #f45044;
	border-radius: 20rpx;
}
.cart .data .total {
	color: #f45044;
	font-size: 34rpx;
	line-height: 100rpx;
	padding-left: 160rpx;
  font-weight: bold;
} 
.cart button {
  border-radius:0px; 
  border: none;
	width: 240rpx;
	height: 100%;
  line-height: 100rpx;
	font-size: 34rpx;
}

.torightimg{
width: 18rpx;
height: 27rpx;
}

button.blue {
	color: #caa876;
	background: #353535;
}
button.blue:after {
	border-color: rgba(255, 133, 111, 0.3);
}
button.blue.hover {
	background: #353535;
}
button.blue.disabled {
  color: #fff;
  font-size: 34rpx;
	background:#b4b4b4;
}