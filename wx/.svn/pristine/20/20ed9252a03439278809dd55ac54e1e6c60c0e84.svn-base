@import "../../../common/amount.wxss";

.recharge-info {
  height: 440rpx;
  background: #eee;
  overflow: hidden;
}

.recharge-b {
  width: 630rpx;
  height: 354rpx;
  margin: 0 auto;
  background: #2e2e2e;
  margin-top: 44rpx;
  border-left: 8rpx solid #c9a875;
}

.infos {
  padding: 20rpx 40rpx;
}

.infos-t, .c-white {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.infos-t {
  color: #bb9c6f;
}

.c-white {
  color: #fff;
}

.infos-b {
  font-size: 24rpx;
  color: #bb9c6f;
  font-weight: bold;
}

.info-input {
  padding: 25rpx 42rpx;
}

.input-item {
  margin-top: 28rpx;
  box-sizing: border-box;
}

.i-label {
  font-size: 28rpx;
  width: 156rpx;
  color: #666;
  line-height: 72rpx;
}

.i-label text {
  font-weight: bold;
  font-size: 28rpx;
  /* font-family: tahoma, verdana; */
  color: #ed0f10;
  vertical-align: bottom;
  display: inline-block;
  margin-right: 2px;
}

.i-input {
  border-bottom: 1rpx solid #ccc;
  width: 72%;
}

.i-input input {
  line-height: 72rpx;
  font-size: 28rpx;
  height: 72rpx;
  padding: 0 20rpx;
}

.dc-btn {
  width: 576rpx;
  height: 90rpx;
  line-height: 90rpx;
  color: #fff;
  box-shadow: 0 0 14px rgba(189, 144, 85, 0.6);
  text-align: center;
  border-radius: 3px;
  margin: 61rpx auto 0;
  font-size: 34rpx;
  font-weight: bold;
}
