@import "../../../common/assess.wxss";

.container {
  background: #eee;
  padding-top: 110rpx;
}

.top-nav {
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  border-bottom: 1rpx solid #eee;
}

.nav-item {
  width: 25%;
  text-align: center;
}

.nav-item text {
  display: inline-block;
  width: 144rpx;
  height: 56rpx;
  line-height: 56rpx;
  color: #333;
  font-size: 32rpx;
  border-radius: 30rpx;
}

.nav-item text.active {
  background-image: -webkit-linear-gradient(300deg, #e9c28a 20%, #e1b880 40%, #d0a76d 60%, #c5995f 80%, #bc9055 100%) !important;
  background-image: -o-linear-gradient(300deg, #e9c28a 20%, #e1b880 40%, #d0a76d 60%, #c5995f 80%, #bc9055 100%) !important;
  background-image: -moz-linear-gradient(300deg, #e9c28a 20%, #e1b880 40%, #d0a76d 60%, #c5995f 80%, #bc9055 100%) !important;
  background-image: -ms-linear-gradient(300deg, #e9c28a 20%, #e1b880 40%, #d0a76d 60%, #c5995f 80%, #bc9055 100%) !important;
  color: #fff;
  box-shadow: 0 4rpx 10rpx rgba(205, 170, 120, 0.4);
}

.assess {
  padding-bottom: 30rpx;
}

.assess-item:last-child {
  border: none;
}
