<import src="../../../common/project.wxml" />
<import src="../../../common/buy-nav.wxml" />
<view class="container">
  <view class="top-search">
    <view class="region">长沙
      <view></view>
    </view>
    <view class="searchs">
      <navigator url="../project-search/project-search" hover-class="none">
        <view></view>请输入关键词</navigator>
    </view>
  </view>

  <block wx:for="{{storeProject}}" wx:for-index="idx" wx:for-item="store">
    <view class="store-item">
      <view class="store-title" bindtap="goProjectStore">
        <text class="store-ico"></text>
        <text class="store-name">{{store.store}}</text>
        <text class="jump-ico"></text>
        <text class="distance">667m</text>
      </view>

      <!-- 项目模版 -->
      <template is="project" data="{{isHeight: true,projectArr: store.project,sIdx: idx,heightIdx: heightIdx,heightOff: heightOff,height: height}}" />

      <view class="look-more" bindtap="lookMore" data-idx="{{idx}}">{{heightIdx == idx && heightOff ? '收起' : '查看全部6个团购'}}
        <view class="{{heightIdx == idx && heightOff ? 'arrowup' : 'arrowdown'}}"></view>
      </view>
    </view>
  </block>

</view>

<!-- 导航模版公用 -->
<template is="buy-nav" data="{{buyNavType: 'home'}}"/>