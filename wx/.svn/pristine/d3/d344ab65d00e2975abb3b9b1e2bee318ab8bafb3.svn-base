<template name="amount">
  <view class="amount-t">
    <text>*</text>{{amountTitle}}</view>
  <view class="amount-b">
    <view class="clear">
    <block wx:for="{{amount}}">
      <view class="amount-item {{amountIdx == index ? 'active' : ''}}" data-idx="{{index}}" data-am="{{item.am}}" data-gift="{{item.gift}}" bindtap="changeAmount">
        <view class="am-amount" data-idx="{{index}}" data-am="{{item.am}}" data-gift="{{item.gift}}" bindtap="changeAmount">{{item.am}}元</view>
        <view class="gift-amount" data-idx="{{index}}" data-am="{{item.am}}" data-gift="{{item.gift}}" bindtap="changeAmount">赠送{{item.gift}}</view>
        <view class="amount-check"></view>
      </view>
    </block>
    </view>
  </view>
</template>