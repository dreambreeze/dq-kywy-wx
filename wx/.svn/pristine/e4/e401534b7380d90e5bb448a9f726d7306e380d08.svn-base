<view class="contianer">
  <view class="top-card">
    <view class="card">
      <image src="{{!transCard.PicUrl ? cardPicUrl : showImgUrl + transCard.PicUrl}}" lazy-load></image>
    </view>

    <view class="card-info">
      <text space="nbsp" decode>{{transCard.MembershipTypeName}}     卡号: {{transCard.CardNo}}     余额: {{transCard.Balance}}元</text>
    </view>
  </view>
  <form bindsubmit="formSubmit" report-submit="report-submit">
  <view class="info-input">
    <view class="input-item">
      <view class="flex-wrp">
        <view class="i-label">您的手机</view>
        <view class="i-input" style="border: none">
          <input type="number" value="{{transCard.phone}}" disabled name="phone"/>
        </view>
      </view>
    </view>
    
    <view class="input-item">
      <view class="flex-wrp">
        <view class="i-label">受赠人手机</view>
        <view class="i-input">
          <input type="number" name="szphone"/>
        </view>
      </view>
    </view>

    <button class="dc-btn btn-gradient" form-type="submit">确定</button>
  </view>
  </form>
</view>