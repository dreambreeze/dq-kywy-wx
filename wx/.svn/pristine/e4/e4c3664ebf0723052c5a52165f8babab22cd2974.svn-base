<import src="../../../common/store-address.wxml" />
<import src="../../../common/assess.wxml" />
<view class="container">
  <view class="banner">
    <swiper indicator-dots="true" autoplay="true" interval="3000" duration="400" indicator-color="rgba(255, 255, 255, .5)" indicator-active-color="#caa876">
      <block wx:for="{{banner}}">
        <swiper-item>
          <image src="{{item}}" class="item-image" mode="aspectFill" />
        </swiper-item>
      </block>
    </swiper>
  </view>

  <view class="project-info">
    <view class="project-name">
      <text>{{storeProject[0].project_name}}</text>（{{storeProject[0].project_time}}分钟）</view>
    <view class="project-price">
      <block wx:if="{{storeProject[0].discount_price > 0}}">
        <text><text>¥</text>{{storeProject[0].discount_price}}</text>
        <text>门市价 ¥ {{storeProject[0].shop_price}}</text>
      </block>
      <block wx:else>
        <text><text>¥</text>{{storeProject[0].shop_price}}</text>
      </block>

      <text>已售{{storeProject[0].sales + storeProject[0].true_sales}}笔</text>
    </view>
  </view>

  <!-- 门店地址模版 -->
  <template is="store-address" data="{{storename: storeProject[0].store_name,storeaddress: storeProject[0].address_detail, tel: storeProject[0].tel}}" />

  <view class="project-dil">
    <view class="dil-title">项目介绍</view>
    <view class="dil-content">
      <text>{{storeProject[0].description}}</text>
    </view>
  </view>

  <view class="project-dil">
    <view class="dil-title">购买须知</view>
    <view class="dil-content">
      <text>{{storeProject[0].notice}}</text>
    </view>
  </view>

  <view class="assess">
  
    <block wx:if="{{assesData}}">
      <view class="assess-title clear">
        <text>用户评论</text>
        <view bindtap="lookAllAssess">查看全部
          <image src="https://iservice.daqisoft.cn/Public/Home/images/arrowright1.png"></image>
        </view>
      </view>
      <!-- 评论模版 -->
      <template is="assess" data="{{assess: assesData}}" />

      <view class="look-all" bindtap="lookAllAssess">查看全部</view>
    </block>
    <block wx:else>
      <view class="empty-assess">无评价内容</view>
    </block>

  </view>

  <view class="buy-bar">
    <view class="flex-wrp">
      <view class="buy-car">
        <image src="https://iservice.daqisoft.cn/Public/Home/images/carteach1.png"></image>
        <view class="buy-car-t">至购物车结算</view>
        <block wx:if="{{cartNum}}">
          <view class="num-tips">{{cartNum}}</view>
        </block>
      </view>
      <view class="push-car btn-gradient" bindtap="pushCar">加入购物车</view>
      <view class="buys" bindtap="buys">立即购买</view>
    </view>
  </view>

  <view class="mask" style="display:{{maskDisplay}}" bindtap="closeBuy"></view>
  <view class="buy-number {{buyAnimation}}">
    <view class="close-btn" bindtap="closeBuy">×</view>
    <view class="select-buy-num">
      <view class="num-con clear">
        <view class="num-title">购买数量</view>
        <view class="num-fun">
          <text class="funs" bindtap="lessNum">－</text>
          <text class="nums">{{nums}}</text>
          <text class="funs" bindtap="addNum">＋</text>
        </view>
      </view>
    </view>
    <view class="determine" data-url="../buy-car/buy-car" bindtap="determine">确定</view>
  </view>
</view>