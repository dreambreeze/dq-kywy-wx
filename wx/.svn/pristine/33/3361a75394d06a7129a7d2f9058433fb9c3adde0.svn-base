
<view class='amcontainer'>
  <view class="e-item">
    <view class='e-head'>
      <image class='e-img' src="{{pic}}"></image>
      <view class='e-name'>红烧肉</view>
      <view class="e-star">
             <view class='starest'>
            <block wx:for="{{estar}}"  wx:for-index="idx" wx:for-item="itemName"  wx:key="id">
              <image class="estar-image" bindtap='selected' data-id="{{idx+1}}"  style="left: {{idx*150}}rpx" src="{{ekey > idx ? esfullSrc : egraySrc}}">
              </image>
            </block>
            <text class="evaluation">{{evaluation}}</text> 
          </view> 
        
      </view>
    </view>

    <view class='e-content'>
    <textarea placeholder="给些建议哦" auto-height placeholder-class="txclass"></textarea>
    </view>

    <view class='photo'>
      <view class="tempimgview">
        <block wx:for="{{imageList}}" wx:for-item="image">
          <view class="temp">
            <image class="tempimg" src="{{image}}" data-src="{{image}}" bindtap="previewImage"></image>
          </view>
        </block>
      </view>
      <view class="takephoto" bindtap="chooseImage">
          <view class=  >
            <view class='add' >
              <image src="{{camera}}"></image>
              添加图片
            </view>
          </view>
      </view>
    </view>
    <view class='e-line'></view>
  </view>



   

  <view class='e-submit'>
   <button class="blue" formType="submit" >提 交</button>
  </view>
</view>
