<view class="container">
  <view class="top-search">
    <!-- <view class="region">长沙
      <view></view>
    </view> -->
    <view class="searchs">
      <input type="text" focus confirm-type="search" bindconfirm="pSearch" placeholder="项目名称"/>
    </view>
  </view>

  <view class="search-tips">
    <block wx:if="{{searchHot}}">
      <view class="tips-item">
        <view class="tips-title">
          <view class="hot-search"></view>热门推荐</view>
        <view class="tips-con clear">
          <view wx:for="{{searchHot}}">
            <navigator url="../project-detail/project-detail?pid={{item.id}}&nodeid={{item.nodeid}}" hover-class="none">{{item.project_name}}</navigator>
          </view>
        </view>
      </view>
    </block>

    <block wx:if="{{historySearch}}">
      <view class="tips-item">
        <view class="tips-title">
          <view class="his-search"></view>历史搜索</view>
        <view class="tips-con clear">
          <view>美丽佳人</view>
        </view>
      </view>
    </block>
  </view>
</view>