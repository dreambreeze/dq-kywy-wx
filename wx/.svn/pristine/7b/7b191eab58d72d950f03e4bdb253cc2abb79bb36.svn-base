/**app.wxss**/

/* 文字禁止换行公用类 */

.text-ellipsis, .fun-title, .s-info-b view {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 横向布局 */

.flex-wrp {
  display: flex;
  flex-direction: row;
}

image {
  vertical-align: top;
}

/* zhz */

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.3);
}

.btn-gradient {
  background-image: -webkit-linear-gradient(300deg, #dfceb5 20%, #ddcaaf 40%, #d0b389 60%, #c7a26d 80%, #c59f68 100%) !important;
  background-image: -o-linear-gradient(300deg, #dfceb5 20%, #ddcaaf 40%, #d0b389 60%, #c7a26d 80%, #c59f68 100%) !important;
  background-image: -moz-linear-gradient(300deg, #dfceb5 20%, #ddcaaf 40%, #d0b389 60%, #c7a26d 80%, #c59f68 100%) !important;
  background-image: -ms-linear-gradient(300deg, #dfceb5 20%, #ddcaaf 40%, #d0b389 60%, #c7a26d 80%, #c59f68 100%) !important;
}

/* 清除浮动 */

.clear:after, .clear:before {
  content: "";
  display: table;
}

.clear:after {
  clear: both;
}

/* 分享按钮公用 */

.share-box {
  position: fixed;
  right: 0;
  bottom: 126rpx;
  text-align: center;
}

.share-box text {
  display: inline-block;
  line-height: 1;
  margin-top: 66rpx;
}

.share-box button {
  display: inline-block;
  width: 116rpx;
  height: 116rpx;
  text-align: center;
  font-size: 26rpx;
  color: #c7b498;
  border-radius: 50%;
  font-weight: bold;
  border: none;
  padding: 0;
  box-sizing: initial;
  box-shadow: 0 2px 6px rgba(88, 88, 88, 0.3);
  background: #585858 url(https://iservice.daqisoft.cn/Public/Home/images/share_icon.png) no-repeat center 20rpx;
  background-size: 34%;
}

.share-box button::after {
  content: normal;
}

/* 技术支持大旗软件 */

.jishu-zhichi {
  text-align: center;
  font-size: 24rpx;
  color: #9e9e9e;
}



/*自助点单 在线商城  */
.amcontainer {
	height: 100%;
	overflow: hidden;
  background-color: #fff;
  font-family: '华文细黑';
}
/*特殊按钮 #1E90FF*/
button.blue {
	color: #caa876;
	background: #353535;
}
button.blue:after {
	border-color: rgba(255, 133, 111, 0.3);
}
button.blue.hover {
	background: #353535;
}
button.blue.disabled {
  color: #fff;
  font-size: 34rpx;
	background:#b4b4b4;
}
