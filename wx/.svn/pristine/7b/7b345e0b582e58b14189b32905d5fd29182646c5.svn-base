.amcontainer{
  height: 100%;
}
.container scroll-view{
  height:1080rpx;
  
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.t-info{
width: 100%;
height: auto;
padding: 30rpx 0rpx;
display:flex;
flex-wrap:wrap;
justify-content:center;

}
.t-info .t-item{
  width: 344rpx;
  height: 442rpx;
  border: 1rpx solid rgba(0,0,0,0.1);
  margin: 10rpx;
  border-top-right-radius: 10rpx;
  border-top-left-radius: 10rpx;
  position: relative;
}
.t-item:last-child{
  padding-bottom: 100rpx;
}
.t-item .i-img image{
  width: 346rpx;
  height: 343rpx;
  transition: opacity 1s linear 2s;
}
.t-item .i-no{
  font-weight:bold;
  font-size:28rpx;
  padding: 0rpx 8rpx;
}
.t-item .i-detail{
  color: #caa876;
  font-size: 24rpx;
  padding: 5rpx 10rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.t-item .i-today{
  height: 48rpx;
  width: 112rpx;
  position: absolute;
  top: 0;
  font-size: 26rpx;
  color: #fff;
  background-image: linear-gradient(to top left ,#dfceb5 , #c59f68);
  background-image:-webkit-linear-gradient(to top left ,#dfceb5 , #c59f68);
  text-align: center;
  line-height: 48rpx;
  border-radius: 10rpx;
}

