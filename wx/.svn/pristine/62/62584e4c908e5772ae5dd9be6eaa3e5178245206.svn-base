<template name="order-item">
  <block wx:if="{{order.length > 0}}">
    <view class="order-item" wx:for="{{order}}">
      <view class="order-title">
        <image src="https://iservice.daqisoft.cn/Public/Home/images/store_ico1.png" lazy-load></image>
        <text>和毅滨江店</text>
      </view>

      <view class="order-info" catchtap="orderDilTo" data-idx="{{index}}">
        <view class="flex-wrp">
          <view class="oi-img">
            <image src="https://iservice.daqisoft.cn/Uploads/img/2017-08-15/59925c54d0bfd150276411697520.jpg" lazy-load></image>
          </view>

          <view class="oi-dil">
            <view class="oi-name">中医足浴</view>
            <view class="oi-time">90分钟</view>
            <view class="oi-price">
              <text>¥</text>239.00
              <text>×1</text>
            </view>
          </view>

          <view class="oi-btn">
            <text class="btn-gradient {{index == 0 && onoff ? '' : 'active'}}" catchtap="{{index == 0 && onoff ? 'showConsume' : ''}}">{{index == 0 && onoff ? '消费' : '交易完成'}}</text>
          </view>
        </view>
      </view>

      <view class="order-oper clear">
        <view class="oper-l {{index == 0 && onoff ? '' : 'active'}}">{{index == 0 && onoff ? '有效期至：2017-09-27' : '删除'}}</view>
        <view class="oper-r" style="display:{{index == 0 && onoff ? 'none' : 'block'}}">
          <text bindtap="againBuy">再次购买</text>
          <text bindtap="assess">评价</text>
        </view>
      </view>
    </view>
  </block>
  <block wx:else>
    <view class="empty-order">
      <image src="https://iservice.daqisoft.cn/Public/Home/images/empty_order.png" lazy-load></image>
      <view class="empty-tips">您暂时没有相关订单哦</view>
      <view class="empty-buy btn-gradient"><navigator url="../group-buy/group-buy" hover-class="none" open-type="redirect">立即下单</navigator></view>
    </view>
  </block>

  <view class="mask" style="display:{{qrDisplay}}"></view>

  <view class="qrcode-box animatedSelf zoomIn" style="display:{{qrDisplay}}">
    <view class="qrcode-title">
      <view>中医足浴</view>
      <view>￥20.00</view>
      <view class="close-qrcode" bindtap="closeQrcode">×</view>
    </view>
    <view class="qrcodes">
      <view class="qr-t">请出示二维码或券码</view>
      <image src="https://iservice.daqisoft.cn/Public/Home/images/coupon.png" mode="aspectFit"></image>
      <text class="coupon-num" space="nbsp" decode>2011 5210 2352</text>
    </view>
  </view>
</template>