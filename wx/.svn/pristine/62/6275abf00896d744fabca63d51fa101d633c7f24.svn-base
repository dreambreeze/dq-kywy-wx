<view class='amcontainer'>

 <scroll-view class='sv' scroll-y="true"  >
  <view class='head'>
      <view class='black'></view>
      <view class='white'></view>
      <view class='h-content'>
          <view class='userinfo'>
              <view class="addr">{{addr}}</view>
              <view class="info">
                <view class='c-flex'>
                  {{userinfo.username}}
                  {{userinfo.userphone}}
                </view>
              </view>
               <image class='torightimg'  src="{{toright}}"></image>
          </view>
          <view class='arrivetime'>
           <view style='flex:1;'>大约{{arrivetime}}分钟送达</view>
          </view>
      </view>
  </view>

  <view class='content'>
    <view class='c-head'>
        <image class='c-img' src="{{store}}"> </image>
        养生足浴
        <image class='c-img1' src="{{toright}}"> </image>
    </view>
    <view class='c-list' >
        <view class='c-item'  wx:for="{{cart.list}}" wx:for-index="id" wx:for-item="num" wx:key="c-id">
            <image class='i-img' src = "{{goods[id].pic}}"></image>
            <view class='i-name'>{{goods[id].name}}</view>
            <view class="i-num">x {{num}}</view>
            <view class="i-total">￥{{goods[id].price*cart.list[id]}}</view>
        </view>
    </view>
    <view class='c-foot'>
        <view class='f-all'>共{{cart.count}}件商品</view>
        <view class='f-pay '>应付：<text class='f-money'>￥{{cart.total}}</text></view>
    </view>
  </view>

  <view class='line'></view>
  <view class='note'>
      <view class='n-title'>备注：</view>
      <view class='n-desc' bindtap='tonote'>
        <view class='n-note'>{{noteword==''?note:noteword}}</view>
        <image class='n-lightimg' src='{{light}}'></image>
      </view>
  </view>
  <view class='lastline'></view>

</scroll-view>

  <view class='topay'>
    <view class='t-title'>
      <view class='t-desc'>合计:
        <text class='t-total'>￥{{cart.total}}</text>
      </view>
    </view>
    <view class='t-sub'>
    	<form bindsubmit="submit" report-submit="true">
			  <button class="blue" formType="submit" >提 交</button>
		  </form>
    </view>
  </view>
  
    <!-- 选择结账方式界面 -->
  <view class="payway" hidden="{{!showPayWay}}">
		<view class="mask" bindtap="hidePayWay"></view>
		<view class="list">
      <view class="head">
          <image class="ximg" src='{{x}}' bindtap="hidePayWay"></image>
          <view class="desc">确认付款</view>
      </view>

      <view class="price">
         ￥{{cart.total}}
      </view>
<!-- 
			<view class="item" wx:for="{{payWayList}}" wx:for-index="id" wx:for-item="payWayList" wx:key="pwlid"  bindtap="selectPayWay" data-id="{{payWayList.id}}">
          <image src='{{payWayList.pic}}' class="pwl-img"></image>
          <view class='pwl-name'>{{payWayList.name}}</view>
          <image class="pwl-lightimg  {{pwseleted==payWayList.id?'seleted-img':''}}" src="{{pwseleted==payWayList.id?seletedimg:light}}"></image>
			</view> -->
      <radio-group bindchange="selectPayWay">
        <label class="item" wx:for="{{payWayList}}" wx:key="{{item.id}}">
          <image src='{{item.pic}}' class="pwl-img"></image>
          <view class='pwl-name'>{{item.name}}</view>
          <view class="pwl-select">
            <radio value="{{item.id}}" checked="{{item.id==pwseleted}}"/>
          </view>
         
        </label>
      </radio-group>

      <view class='pw-sub'>
        <form bindsubmit="paysubmit" report-submit="true">
          <button class="blue" formType="submit" >付款</button>
        </form>
      </view>
		</view>
	</view>

</view>
                    