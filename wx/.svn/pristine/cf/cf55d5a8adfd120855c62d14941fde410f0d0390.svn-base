        <view class="type-name">门店：和毅足道滨江店</view>
      </view>

      <view class="order-right">
        <view class="state-tips">待评价</view>
        <!-- <view class="consum-btn btn-gradient">立即消费</view> -->
      </view>
    </view>

    <view class="total-price">合计：￥280.00</view>
    <view class="order-oper">
      <view class="del-order">删除</view>
      <view class="again-reserve">再次预约</view>
      <view class="evaluation" bindtap="evaluation">评价</view>
    </view>
