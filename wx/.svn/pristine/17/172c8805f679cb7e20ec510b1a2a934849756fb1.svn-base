@import "/pages/common/lib/animate.wxss";

.forscroll{
  height: 100%;
  width: 100%;
}
.forscroll scroll-view{
   height: 100%;
   padding-top: 100rpx
}
.storeimg{
  width: 27rpx;
  height:24rpx;
}
.torightimg{
width: 18rpx;
height: 27rpx;
}
.head{
  display: flex;
  height: 100rpx;
  background-color: #f7f7f7;
  align-items: center;
  color: #333;
  font-size: 28rpx;
  position:fixed;
  top:0;
  width:100%;
  z-index: 1
}

.head .htop{
  padding: 16rpx 0 0 0 ;
}

.head .moneyinfo{
align-items:center;
height:100rpx;
flex:1;
padding: 0 0rpx 0 34rpx
}
.head .moneyinfo .hbottom{
  font-size: 22rpx;
  color: #999;
  padding-top: 4rpx
}
.head .choosedate{
  height: 100rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  width: 200rpx;
  padding: 0 34rpx
}
.head .choosedate image{
  width: 42rpx;
  height: 42rpx
}

/* 没有历史消费的情况  */
.goshop{
width: 100%;
margin-top: 90rpx;
font-size:26rpx;
color:#999;
display:flex;
justify-content:center;
}
.goshop text{
width: 312rpx;
height: 88rpx;
display:flex;
justify-content:center;
align-items:center;

}

/* 历史消费项目 展示  */
.hisinfos{
  padding: 10rpx 0
}
.hisinfos .consumption-item{
  display: flex;
  justify-content: space-around;
  align-items: center; 
  padding:  0 20rpx; 
 height: 190rpx;
 font-size: 28rpx
}

.hisinfos .consumption-item .shopPicurl image{
  width: 72rpx;
  height: 72rpx
}
.consumption-item .cicenter{
  width: 600rpx;
  height:160rpx;
  display:flex;
  justify-content:flex-start;
  border-bottom:1rpx solid rgba(0,0,0,0.1);
}
.consumption-item .cicenter .cileft{
  margin: 10rpx 0;
  width: 460rpx
}
.consumption-item .cicenter .cileft .citop{
  padding:20rpx 0 20rpx 10rpx;
}
.consumption-item .cicenter .cileft .cimiddle{
  padding: 0 0 12rpx 10rpx;
  font-size: 26rpx
}
.consumption-item .cicenter .cileft .citime{
  padding:0 0 0 10rpx;
  font-size: 24rpx;
  color: #999
}
.consumption-item .cicenter .ciright{
   display:flex;
  justify-content:flex-end;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  flex: 2;
  width: 140rpx
}

/* 历史消费选择会员卡 */
.cardinfo{
  width: 320rpx;
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size:30rpx;

}
.cardinfo image{
width: 12rpx;
height: 12rpx;
margin:22rpx 0rpx 0 20rpx;

}
.cards{
margin-top:130rpx;
position:absolute;
display:flex;
justify-content:space-around;
align-items:center;
background-color:#fff;
border-bottom:1rpx solid #c19d68;
width:692rpx;
z-index:12;
font-size:26rpx;
padding:30rpx 34rpx;
flex-wrap:wrap;
animation: cards 0.3s;
}
.cards .item{
width:210rpx;
display:flex;
justify-content:center;
height:70rpx;
align-items:center;
/* border:1rpx solid #c19d68; */
border:1rpx solid rgba(0,0,0,0.1);
border-radius:8rpx;
flex-wrap:wrap;
margin-bottom: 24rpx
}

.cards .item.active{
  border:1rpx solid #c19d68;
}

.nomore{
font-size:22rpx;
color:#999;
margin:20rpx;
display:flex;
justify-content:center;
}