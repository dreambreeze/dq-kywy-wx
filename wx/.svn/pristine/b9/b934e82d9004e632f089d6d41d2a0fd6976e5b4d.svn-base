<view class="amcontainer">
  <view class='forscroll'>
    <scroll-view scroll-y >
      <view class='head'>
        <view data-id="1" class="{{orderstatus=='1'?'active':''}}" catchtap='activeorder'>全部</view>
        <view data-id="2" class="{{orderstatus=='2'?'active':''}}" catchtap='activeorder'>待评价</view>
        <view data-id="3" class="{{orderstatus=='3'?'active':''}}" catchtap='activeorder'>已完成</view>
      </view>
      
        <block wx:if="{{orderstatus=='1'}}">
      <view class='item' bindtap='toorderdetail' >
      
          <view class='i-head'>
            <view class="h-left" >
              <image class='storeimg' src='{{storeimg}}'></image>
              {{store}}养生足浴
              <image class='torightimg' src='{{toright}}'></image>
            </view>
            <view class='h-right'>已接单，准备中...</view>
          </view>
          <view class='i-item' >
            <view class='i-name'>{{goods[id].name}}红烧肉</view>
            <view class="i-num">x {{num}}2</view>
          </view>

         <view class='i-line'></view> 

      </view>
        <view class='item' >
          <view class='i-head'>
            <view class="h-left" >
              <image class='storeimg' src='{{storeimg}}'></image>
              {{store}}养生足浴
              <image class='torightimg' src='{{toright}}'></image>
            </view>
            <view class='h-right'>已接单，准备中...</view>
          </view>
          <!-- wx:for="{{cart.list}}" wx:for-index="id" wx:for-item="num" wx:key="oi-id"  -->
          <view class='i-item' >
            <view class='i-name'>{{goods[id].name}}红烧肉</view>
            <view class="i-num">x {{num}}2</view>
          </view>

          <view class='i-line'></view>
        </view>
        </block>

        <block wx:elif="{{orderstatus=='2'}}">
          <view class='noorder'>
            <image src="{{noorder}}"> </image>
          </view>
          <view class='goshop' bindtap='goshop'>
            <text>立即下单</text>
          </view>
        </block>

        <block wx:else="{{orderstatus=='3'}}">
          <view class='item' >
          <view class='i-head'>
            <view class="h-left" >
              <image class='storeimg' src='{{storeimg}}'></image>
              {{store}}养生足浴
              <image class='torightimg' src='{{toright}}'></image>
            </view>
            <view class='h-right'>已完成</view>
          </view>
          <!-- wx:for="{{cart.list}}" wx:for-index="id" wx:for-item="num" wx:key="oi-id"  -->
          <view class='i-item' >
            <view class='i-name'>{{goods[id].name}}红烧肉</view>
            <view class="i-num">x {{num}}2</view>
          </view>
          <view class='i-line'></view>
          </view>
        </block>
    </scroll-view>
  </view>
</view>