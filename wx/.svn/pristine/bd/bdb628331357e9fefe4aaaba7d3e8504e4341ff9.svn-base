var common = require('../../common.js');
var app = getApp();
Page({

  /**
   * 页面的初始数据
   */
  data: {
    //图片地址前缀
    showImgUrl: common.config.showImgUrl
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    var query = wx.createSelectorQuery();
    var minHeight = 0,
      _this = this,
      setHeightTimer = null;
    query.selectViewport().boundingClientRect(function (rect) {
      minHeight = rect.height;
    }).exec();

    clearTimeout(setHeightTimer);
    setHeightTimer = setTimeout(function () {
      _this.setData({
        minHeight: minHeight + 'px'
      });
    }, 1000);

    //请求分配功能菜单
    var nav = wx.getStorageSync('nav');
    //不存在本地时请求云服务
    if (!nav) {
      wx.showLoading({
        title: '加载中',
        mask: true
      });
      //获取分配的功能
      wx.request({
        url: common.config.host + '/index.php/Api/Base/getAppletFun',
        data: {
          'authorizerId': app.globalData.authorizerId
        },
        method: 'POST',
        header: {
          'content-type': 'application/json'
        },
        success: function (res) {
          wx.hideLoading();
          if (res.statusCode != 200) {
            wx.showModal({
              title: '提示',
              content: '网络请求失败',
            });
          } else {
            if (res.data.status == 0) {
              wx.showModal({
                title: '提示',
                content: res.data.info,
              });
            } else {
              wx.setStorageSync('nav', res.data.info);
              // return res.data.info;
              _this.setData({
                navArr: res.data.info
              });
            }
          }
        }
      });
    } else {
      _this.setData({
        navArr: nav
      });
    }

    _this.setData({
      wXUserInfo: !app.globalData.wXUserInfo ? {
        'avatarUrl': common.config.host + '/Public/DaqiAdmin/images/default_po.png',
        'nickName': false
      } : app.globalData.wXUserInfo
    });

  },
  /**
   * 监听页面分享
   */
  onShareAppMessage: function () {
    return {
      title: '客源无忧微信营销平台'
    }
  },
  /**
   * 点击底部导航
   */
  enginNav: function (e) {
    var url = e.currentTarget.dataset.url;
    var isOpen = e.currentTarget.dataset.isopen;
    if (isOpen == 0) {
      wx.showToast({
        title: '功能暂未开通',
        icon: 'none',
        mask: true
      });
    } else {
      wx.redirectTo({
        url: url,
      });
    }
  },
  /**
   * 点击功能导航
   */
  ucenterNav: function (e) {
    var url = e.currentTarget.dataset.url;
    wx.navigateTo({
      url: url,
    });
  },
  /**
   * 技术支持跳转
   */
  jishuzhichi: function () {
    common.jishuzhichi();
  },

  /**
   * 打开用户设置
   */
  goSettimg: function () {
    var _this = this;
    var openid = wx.getStorageSync('openid');
    wx.openSetting({
      success(res) {
        if (res.authSetting['scope.userInfo']) {
          wx.getUserInfo({
            withCredentials: true,
            success: function (res) {
              app.globalData.wXUserInfo = res.userInfo;
              wx.request({
                url: common.config.host + '/index.php/Api/Base/saveUserInfo',
                data: {
                  'openid': openid,
                  'authorizerId': app.globalData.authorizerId,
                  'encryptedData': res.encryptedData,
                  'iv': res.iv,
                  'type': 1
                },
                method: 'POST',
                header: {
                  'content-type': 'application/json'
                },
                success: function (res) {
                  if (res.statusCode == 200 && res.data.status == 0) {
                    wx.showModal({
                      title: '提示',
                      content: res.data.info,
                      showCancel: false
                    });
                  }
                }
              });

              _this.setData({
                wXUserInfo: res.userInfo
              });
            }
          });
        }
      }
    });
  },

  /**
   * 个人资料设置
   * ../ucentermodel/pages/infobind
   */
  infobind: function(){
    wx.navigateTo({
      url: '../ucentermodel/pages/infobind/infobind',
    });
  }
})