<import src="../../../common/assess.wxml" />
<view class="top-nav">
  <view class="flex-wrp">
    <view class="nav-item">
      <navigator url="../all-assess/all-assess?type=all" hover-class="none" open-type="redirect">
        <text class="{{navType == 'all' || navType == '' ? 'active' : ''}}">全部</text>
      </navigator>
    </view>
    <view class="nav-item">
      <navigator url="../all-assess/all-assess?type=good" hover-class="none" open-type="redirect">
        <text class="{{navType == 'good' ? 'active' : ''}}">好评</text>
      </navigator>
    </view>
    <view class="nav-item">
      <navigator url="../all-assess/all-assess?type=average" hover-class="none" open-type="redirect">
        <text class="{{navType == 'average' ? 'active' : ''}}">中评</text>
      </navigator>
    </view>
    <view class="nav-item">
      <navigator url="../all-assess/all-assess?type=bad" hover-class="none" open-type="redirect">
        <text class="{{navType == 'bad' ? 'active' : ''}}">差评</text>
      </navigator>
    </view>
  </view>
</view>

<view class="container">
  <view class="assess">

    <!-- 评论模版 -->
    <template is="assess" data="{{assess: [0,1,2,3,4,5]}}" />

  </view>
</view>