<view class="amcontainer">
  <view class='head' hidden='true'>
    <view class='black'></view>
    <view class='white'></view>
    <view class='h-content'>
      <view class='h-in'>
        <!-- <view class='h-time' >{{order.preTime}}</view> -->
        <view class='h-time' >10分钟</view>
        <view class='h-desc'>预计所需时间</view>
      </view>
    </view>
   
  </view>
  <view class='orderstatus'  hidden='true'>已接单,准备中...</view>
  <view class='orderfast'  hidden='true'><text>催单</text></view>
  
   <view class="nav" hidden='false'>
      <view bindtap='toorder'>再来一单</view>
      <navigator url='../detail/detail' open-type="redirect" hover-class="none">
        <view>评价</view>
      </navigator>
  </view>

  <view class='line'></view>

   <view class='content'>
    <view class='c-head'>
        <image class='c-img' src="{{storeimg}}"> </image>
         {{store.store_name}}
        <image class='c-img1' src="{{toright}}"> </image>
    </view>
    <view class='c-list' >
        <view class='c-item'  wx:for="{{order[0].taskjson.arr}}"   wx:key="c-id">
            <image class='i-img' src = "{{goods[item.ServiceItemNo].picurl[0]?showImgUrl+goods[item.ServiceItemNo].picurl[0]:fooddefpic}}"></image>
            <view class='i-name'>{{item.ServiceItemName}}</view>
            <view class="i-num">x {{item.ServiceNum}}</view>
            <view class="i-total">￥{{item.NMoney}}</view>
        </view>
    </view>
    <view class='c-foot'>
        <view class='f-all'>共{{order[0].taskjson.Count}}件商品</view>
        <view class='f-pay '>实付：<text class='f-money'>￥{{order[0].taskjson.PayMoney}}</text></view>
    </view>
  </view>

   <view class='line'></view>

  <view class='order-info'>
    <view class='o-head'>订单信息</view>
    <view class='o-content'>
        <view class='o-left'>
          <view>订单状态：</view>
          <view>手机号码：</view>
          <view>房间名称：</view>
          <view>订 单 号：</view>
          <view>支付方式：</view>
          <view>下单时间：</view>
          <view>订单备注：</view>
        </view>
         <view class='o-right'>
          <view>{{order[0].taskresult?order[0].taskresult:"正在处理..."}}</view>
          <view>{{order[0].phoneno}}</view>
          <view>{{order[0].taskjson.RoomNa?order[0].taskjson.RoomNa:order[0].taskjson.RoomNo}}</view>
          <view>{{order[0].mutexsign}}</view>
          <view>{{order[0].taskjson.PayType?"会员卡支付":"微信支付"}}</view>
          <view>{{order[0].tasktime}}</view>
          <view>{{order[0].taskjson.Note}}</view>
        </view>
    </view>
  </view>

    <!-- 返回首页 -->
  <view class="back-box">
    <navigator url='../../../index/index' open-type="redirect"  hover-class="other-navigator-hover">
    <view class='back'>返回首页</view>
    </navigator>
  </view>

</view>
      