<view class="top-head">
  <view class="head-img">
    <image src="https://iservice.daqisoft.cn/Public/Home/images/pos.png" lazy-load></image>
  </view>
</view>

<view class="star">
  <view class="flex-wrp">
    <view class="star-title">评价项目</view>
    <view class="stars">
      <block wx:for="{{star}}">
        <image src="{{item}}" data-idx="{{index}}" bindtap="star"></image>
      </block>
      <text>{{starStatus}}</text>
    </view>
  </view>
</view>

<view class="textarea">
  <textarea></textarea>
</view>

<view class="push-img clear">
  <view class="push-img-btn" bindtap="pushImg">
    <view>添加图片</view>
  </view>
  <block wx:for="{{pushImg}}">
    <view class="img-item">
      <image src="{{item}}"></image>
      <view class="close" bindtap="closeImg" data-idx="{{index}}">×</view>
    </view>
  </block>
</view>

<view class="assess-btn">提交</view>