var common = require('../../../../common.js')
,phone = ''
,names = ''
,verify = ''
,openid = '';
var app = getApp();
Page({

  /**
   * 页面的初始数据
   */
  data: {
    
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    wx.showLoading({
      title: '加载中',
    });
    openid = wx.getStorageSync('openid');
    var _this = this;
    wx.request({
      url: common.config.host + '/index.php/Api/Base/getUserInfo',
      data: {
        'openid': openid,
        'field': 'names,phone'
      },
      method: 'POST',
      header: {
        'content-type': 'application/json'
      },
      success: function (res) {
        wx.hideLoading();
        if (res.statusCode == 200 && res.data.status == 1){
          names = res.data.info.names;
          phone = res.data.info.phone;
          _this.setData({
            names: res.data.info.names,
            phone: res.data.info.phone
          });
        }
      }
    });
  },
  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {
    
  },

  /**
   * 手机输入框input事件
   */
  phoneVal: function(ev){
    phone = ev.detail.value.trim();
  },

  /**
   * 姓名input 事件
   */
  namesVal: function (ev) {
    names = ev.detail.value.trim();
  },

  /**
   * 验证码
   */
  verifyVal: function (ev) {
    verify = ev.detail.value.trim();
  },

  /**
   * 获取验证码
   */
  getVerify: function(){
    if (phone == ''){
      wx.showModal({
        title: '提示',
        content: '请输入手机号',
        showCancel: false
      });
      return false;
    }
    if (!common.ismobile(phone)){
      wx.showModal({
        title: '提示',
        content: '手机号格式错误',
        showCancel: false
      });
      return false;
    }

    wx.showModal({
      title: '验证码',
      content: '请随意输入验证码',
      showCancel: false
    });
  },

  /**
   * 点击保存信息
   */
  infoSave: function(){
    if (names == '') {
      wx.showModal({
        title: '提示',
        content: '请输入姓名',
        showCancel: false
      });
      return false;
    }
    if (phone == '') {
      wx.showModal({
        title: '提示',
        content: '请输入手机号',
        showCancel: false
      });
      return false;
    }
    if (!common.ismobile(phone)) {
      wx.showModal({
        title: '提示',
        content: '手机号格式错误',
        showCancel: false
      });
      return false;
    }
    if (verify == '') {
      wx.showModal({
        title: '提示',
        content: '请输入验证码',
        showCancel: false
      });
      return false;
    }

    wx.request({
      url: common.config.host + '/index.php/Api/Base/saveUserInfo',
      data: {
        'openid': openid,
        'names': names,
        'phone': phone,
        'verify': verify,
        'authorizerId': app.globalData.authorizerId,
        'type': 2
      },
      method: 'POST',
      header: {
        'content-type': 'application/json'
      },
      success: function (res) {
        if (res.statusCode == 200) {
          if (res.data.status == 1){
            wx.showModal({
              title: '提示',
              content: res.data.info,
              showCancel: false,
              success: function (res) {
                if (res.confirm) {
                  wx.reLaunch({
                    url: '../../../ucenter/ucenter',
                  });
                }
              }
            });
          }else{
            wx.showModal({
              title: '提示',
              content: res.data.info,
              showCancel: false
            });
          }
        }else{
          wx.showModal({
            title: '提示',
            content: '请求失败',
            showCancel: false
          });
        }
      }
    });
  },

  /**
   * 获取用户微信绑定的手机号
   */
  getPhoneNumber: function(e){
    if (!e.detail.encryptedData){
      wx.showModal({
        title: '获取手机号失败',
        content: '该小程序没有权限获取',
        showCancel: false
      });
    }
  }
})