<template name="amount">
  <view class="amount-t">
    <text>*</text>{{amountTitle}}</view>
  <view class="amount-b">
    <view class="clear">
      <view class="amount-item {{amountIdx == 0 ? 'active' : ''}}" data-idx="0" bindtap="changeAmount">500元
        <view></view>
      </view>
      <view class="amount-item {{amountIdx == 1 ? 'active' : ''}}" data-idx="1" bindtap="changeAmount">1000元
        <view></view>
      </view>
      <view class="amount-item {{amountIdx == 2 ? 'active' : ''}}" data-idx="2" bindtap="changeAmount">2000元
        <view></view>
      </view>
      <view class="amount-item {{amountIdx == 3 ? 'active' : ''}}" data-idx="3" bindtap="changeAmount">500元
        <view></view>
      </view>
      <view class="amount-item {{amountIdx == 4 ? 'active' : ''}}" data-idx="4" bindtap="changeAmount">1000元
        <view></view>
      </view>
      <view class="amount-item {{amountIdx == 5 ? 'active' : ''}}">
        <input type="digit" class="{{amountIdx == 5 ? 'active' : ''}}" data-idx="5" bindfocus="changeAmountFocus" />
        <view></view>
      </view>
    </view>
  </view>
</template>