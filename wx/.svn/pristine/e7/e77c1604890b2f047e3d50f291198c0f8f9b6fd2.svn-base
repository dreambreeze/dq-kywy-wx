<import src="../../../common/assess.wxml" />
<view class="top-nav">
  <view class="flex-wrp">
    <view class="nav-item">
      <navigator url="../all-assess/all-assess?type=&nodeid={{nodeid}}&pid={{pid}}" hover-class="none" open-type="redirect">
        <text class="{{!navType ? 'active' : ''}}">全部</text>
      </navigator>
    </view>
    <view class="nav-item">
      <navigator url="../all-assess/all-assess?type=1&nodeid={{nodeid}}&pid={{pid}}" hover-class="none" open-type="redirect">
        <text class="{{navType == '1' ? 'active' : ''}}">好评</text>
      </navigator>
    </view>
    <view class="nav-item">
      <navigator url="../all-assess/all-assess?type=2&nodeid={{nodeid}}&pid={{pid}}" hover-class="none" open-type="redirect">
        <text class="{{navType == '2' ? 'active' : ''}}">中评</text>
      </navigator>
    </view>
    <view class="nav-item">
      <navigator url="../all-assess/all-assess?type=3&nodeid={{nodeid}}&pid={{pid}}" hover-class="none" open-type="redirect">
        <text class="{{navType == '3' ? 'active' : ''}}">差评</text>
      </navigator>
    </view>
  </view>
</view>

<view class="container">
  <block wx:if="{{assesData}}">
    <view class="assess">
      <!-- 评论模版 -->
      <template is="assess" data="{{assess: assesData}}" />

      <!-- 上拉加载提示 -->
      <view class="load-more">{{loadMtext}}</view>
    </view>
  </block>
  <block wx:else>
    <view class="empty-assess">无评价内容</view>
  </block>
</view>