.amcontainer{
  font-size:28rpx;
}
.head{
  display:flex;
  padding: 26rpx;
  align-items: center;
  font-size: 28rpx;
}
.head .h-img {
  display: flex;
  align-items: center;
}
.h-img image {
  width: 190rpx;
  height: 199rpx;
  margin-right: 42rpx;
}
.head .h-content{
  flex: 1;
}
.h-content .c-head{
  font-weight: bold;
  font-size: 34rpx;
}
.h-content image{
  width: 24rpx;
  height: 24rpx;
  margin-right: 12rpx;
}
.h-content .c-pname{
  font-size: 30rpx;
  padding-top:6rpx;
}
.h-content .c-time{
  font-size: 26rpx;
  color: #666;
  padding: 8rpx 0 0 0;
  display:flex;
  align-items:center;
}
.h-price view{
  text-align: center;
}
.h-price view:first-child{
color: #db0000;
font-weight: bold;
}
.h-price view:last-child{
font-size: 26rpx;
color: #999;
text-decoration: line-through;
}

.coupon{
  font-size: 30rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  padding: 20rpx;
}
.coupon .coupon-desc{
  height: 56rpx;
  line-height: 56rpx;
  flex: 1;
}
.coupon .coupon-num{
  display: flex;
  align-items: center;
  color: #999;
}
.coupon .coupon-num view{
  font-size: 22rpx;
  color: #fff;
  background-color: #ec7206;
  padding: 2rpx 4rpx;
  border-radius: 4rpx;
  margin-right: 18rpx;
}

.input{
  z-index: -1;
  position: relative;
  margin: 46rpx 36rpx 32rpx;
}
.input textarea{
  border: 1rpx solid rgba(0,0,0,0.1);
  background-color: #efefef;
  height: 158rpx;
  padding: 18rpx 26rpx;
  width: auto;
  color: #333;
  font-size: 26rpx;
  line-height: 36rpx;
}
.input .p-class{
  color: #999;
  font-size: 26rpx;
}
.input .talength{
position: absolute;
right:26rpx;
bottom: 18rpx;
font-size: 24rpx;
color: #999;
}

.payorder {
  border-top: 1rpx solid rgba(0,0,0,0.1);
  width: 100%;
  position: fixed;
  bottom:0;
  display: flex;
  height: 100rpx;
  align-items: center;
  flex-direction: row;
}
.payorder .total{
  flex:1;
  text-align: right;
  padding: 0 20rpx;
  font-size: 28rpx;
  
}
.payorder .total text{
  color: #db0000;
}
.payorder .topay{
  height: 100rpx;
  width: 240rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #353535;
  font-size: 34rpx;
  font-weight: bold;
  color: #caa876;
}

/*选择支付方式  */
.payway{z-index: 999;}
.payway, .payway .mask {
	position: fixed;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
}
.payway .mask {
	background: rgba(0,0,0,0.7);
}
.payway .list {
	position: fixed;
	left: 0;
	bottom: 0rpx;
	width: 100%;
	background: #f7f7f7;
	padding: 0rpx 0 50rpx 0;
  z-index: 2;

}
.list .l-head{
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom:1rpx solid rgba(0,0,0,0.1);
}
.l-head .ximg{
  width: 22rpx;
  height: 22rpx;
  position:absolute;
left:34rpx;
line-height:80rpx;
}
.l-head .desc{
  font-size:32rpx;
  color: #333;
}

.list .price{
  height:210rpx;
display:flex;
align-items:center;
justify-content:center;
font-size:62rpx;
color:#333;
} 
.list .item{
display: flex;
display: -webkit-flex;
align-items: center;
height: 100rpx;
border-bottom: 1rpx solid rgba(0,0,0,0.1);
margin: 0 20rpx;
font-size: 30rpx;
color: #333;
}
.item .pwl-name{
  flex: 2;
}
.item .pwl-img{
  width: 62rpx;
  height: 48rpx;
  padding: 0 28rpx 0 12rpx;
}
.item .pwl-lightimg{
  width: 12rpx;
  height: 18rpx;
  position: absolute;
  right: 38rpx;
}
.item .pwl-lightimg.seleted-img{
  width: 26rpx;
  height: 26rpx;
}
.payway .pw-sub{
  height: 96rpx;
  width: 100%;
  margin-top: 200rpx;
  display: flex;
  justify-content: center;
}
.pw-sub .blue{
width: 660rpx;
color: #fff;
font-size: 34rpx;
font-weight: bold;
background-image:-webkit-linear-gradient(to bottom right, #dfceb5 , #c59f68); 
background-image:linear-gradient(to bottom  right,#dfceb5 , #c59f68);
}
