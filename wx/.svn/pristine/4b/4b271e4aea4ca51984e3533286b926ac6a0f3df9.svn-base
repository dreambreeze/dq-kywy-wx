<import src="../../../common/store-address.wxml" />
<import src="../../../common/assess.wxml" />
<view class="container">
  <view class="banner">
    <swiper indicator-dots="true" autoplay="true" interval="3000" duration="400" indicator-color="rgba(255, 255, 255, .5)" indicator-active-color="#caa876">
      <block wx:for="{{banner}}">
        <swiper-item>
          <image src="{{item}}" class="item-image" mode="aspectFill" />
        </swiper-item>
      </block>
    </swiper>
  </view>

  <view class="project-info" wx:for="{{storeProject[0].project}}" wx:key="">
    <view class="project-name">
      <text class='peoples'>{{item.nums}}人成团</text>
      <text>{{item.project}}</text>
    </view>
    <view class="project-price">
        <text><text>¥</text>{{item.groupprice}}</text>
        <text>门市价 ¥ {{item.marketprice}}</text>

      <text>已拼 {{item.count}} 件</text>
    </view>
  </view>

  <view wx:if="{{ordersData}}" class='orders {{mutiple==1?"oneorder":""}}'>
    <swiper indicator-dots="{{indicator}}" circular="{{true}}" display-multiple-items="{{mutiple}}"
      autoplay="{{true}}" interval="2000" duration="800" vertical="true" >
      <block wx:for="{{ordersData}}" wx:key="">
        <swiper-item class="oitem flex" item-id="{{item.groupno}}">
          <!-- <image src="{{item.pavatar}}" class="slide-image" width="355" height="150"/> -->

          <view class='left'>
            <block wx:for="{{item.pavatar}}" wx:key="" wx:for-item="avatar">
              <image src="{{avatar}}" class="avatar-image" width="32" height="32"/>
            </block>
          </view>
          <view class='mid'>
            <view class='mtop'>还差 <text>{{item.nums}}</text> 人拼成</view>
            <view class='mbottom '>剩余 {{item.difftime}}</view>
          </view>
          <view class='right flex' bindtap='buys' data-buytype="3" data-groupno="{{item.groupno}}">
            <view class='gobuy flex'>去参团</view>
          </view>
        </swiper-item>
      </block>
    </swiper>
  </view>

  <!-- 门店地址模版 -->
  <template is="store-address" data="{{storename: storeProject[0].store_name,storeaddress: storeProject[0].address, tel: storeProject[0].tel}}" />

  <view class="project-dil">
    <view class="dil-title">项目介绍</view>
    <view class="dil-content">
      <text>{{storeProject[0].project[0].tips}}</text>
    </view>
  </view>

  <view class="project-dil totips techdetail"  wx:for="{{storeProject[0].project}}" wx:key="">
    <view class="dil-title">购买须知</view>

    <view class='td-intro'>
      <view class='td-head'>
        <view></view>
        有效期
      </view>
      <view class='td-desc'>{{item.validate}}至{{item.validateend}}</view>
    </view>
     <view class='td-intro'>
      <view class='td-head'>
        <view></view>
        除外日期
      </view>
      <view class='td-desc'>{{item.exceptdate}}</view>
    </view>
    <view class='td-intro dil-content'>
      <view class='td-head'>
        <view></view>
        预约信息
      </view>
      <text class='td-desc'>{{item.reservation}}</text>
    </view>
    <view class='td-intro dil-content'>
      <view class='td-head'>
        <view></view>
        规则提醒
      </view>
      <text class='td-desc'>{{item.remind}}</text>
    </view>
    <view class='td-intro dil-content'>
      <view class='td-head'>
        <view></view>
        商家服务
      </view>
      <text class='td-desc'>{{item.services}}</text>
    </view>

  </view>

  <view class="assess">
  
    <block wx:if="{{assesData}}">
      <view class="assess-title clear">
        <text>用户评论</text>
        <view bindtap="lookAllAssess">查看全部
          <image src="https://iservice.daqisoft.cn/Public/Home/images/arrowright1.png"></image>
        </view>
      </view>
      <!-- 评论模版 -->
      <template is="assess" data="{{assess: assesData}}" />

      <view class="look-all" bindtap="lookAllAssess">查看全部</view>
    </block>
    <block wx:else>
      <view class="empty-assess">无评价内容</view>
    </block>

  </view>

  <!-- 分享按钮 -->
  <view class="share-box">
    <button hover-class="none" open-type="share">
      <text>分享</text>
    </button>
  </view>

  <view class="buy-bar">
    <view class="flex-wrp">
      <view class="index flex" bindtap="goindex">
        <view class='goindex'>
          <view>
            <image src="https://iservice.daqisoft.cn/Public/Home/images/home_check_icon.png"></image>
          </view>
          <view>首页</view>
        </view>
      </view>
      <view class="onebuy btn-gradient" bindtap="buys" data-buytype="1">
        <view>
          <view wx:if="{{storeProject[0].project[0].issingle}}">￥{{storeProject[0].project[0].singleprice}}</view>
          <view>单独购买</view>
        </view>
      </view>
      <view class="buys" bindtap="buys" data-buytype="2">
        <view>
          <view>￥{{storeProject[0].project[0].groupprice}}</view>
          <view>一键开团</view>
        </view>
      </view>
    </view>
  </view>

 
</view>