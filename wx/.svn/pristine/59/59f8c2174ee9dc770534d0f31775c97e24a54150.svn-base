Page({

  /**
   * 页面的初始数据
   */
  data: {
    inputLimit: '0/50',
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {

  },
  /**
   * 监听页面加载输入备注事件
   */
  remarks: function (e) {
    var val = e.detail.value;

    this.setData({
      inputLimit: val.length + '/50'
    });
  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  },
  /**
   * 购买成功
   */
  toSuccess: function () {
    wx.redirectTo({
      url: '../pay-success/pay-success',
    });
  }
})