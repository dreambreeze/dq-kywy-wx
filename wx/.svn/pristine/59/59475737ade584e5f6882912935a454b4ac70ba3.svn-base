@import "../../../common/reserve-stime.wxss";

.container {
  background: #e5e5e5;
}

.top-store {
  background-color: #fff;
  padding: 22rpx 0 22rpx 22rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #ccc;
}

.store-img {
  width: 117rpx;
  height: 116rpx;
  margin-right: 28rpx;
}

.store-name {
  width: 392rpx;
}

.s-name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  padding: 6rpx 0;
}

.s-coupon {
  width: 350rpx;
  height: 52rpx;
  line-height: 52rpx;
  background-color: #faebeb;
  font-size: 24rpx;
  color: #f46262;
  border: 1rxp solid #f1c5c5;
  margin-top: 8rpx;
}

.s-coupon image {
  width: 27rpx;
  height: 27rpx;
  margin: -4rpx 17rpx 0 10rpx;
  vertical-align: middle;
}

.change-store {
  flex: 1;
  text-align: right;
}

.change-store-btn {
  display: inline-block;
  width: 192rpx;
  height: 67rpx;
  line-height: 67rpx;
  border-radius: 80rpx 0 0 80rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(199, 156, 98, 0.5);
  margin-top: 24rpx;
}

.change-store-btn image {
  width: 16rpx;
  height: 17rpx;
  margin-left: 12rpx;
  vertical-align: middle;
}

.top-store-address {
  line-height: 36rpx;
  font-size: 24rpx;
  color: #666;
  padding: 22rpx 0 22rpx 22rpx;
  background: #fff;
  border-bottom: 22rpx solid #e5e5e5;
}

.address {
  width: 420rpx;
}

.address image {
  width: 18rpx;
  height: 24rpx;
  margin-right: 10rpx;
  vertical-align: middle;
  margin-top: -6rpx;
}

.location {
  padding: 0 20rpx;
  border-right: 1rpx solid #e5e5e5;
  border-left: 1rpx solid #e5e5e5;
}

.location image {
  width: 40rpx;
  height: 36rpx;
}

.telphone {
  flex: 1;
  text-align: center;
}

.telphone image {
  width: 34rpx;
  height: 36rpx;
}

/* 选择房间类型 */

.room-people {
  height: 92rpx;
  line-height: 92rpx;
  background: #353535;
  box-sizing: border-box;
  position: relative;
}

.room-num {
  flex: 1;
  overflow: hidden;
}

.room-num-more {
  width: 95rpx;
  background: #434343 url(https://iservice.daqisoft.cn/Public/Home/images/arrowdown3.png) no-repeat center center;
  box-shadow: -1rpx 1rpx 6rpx rgba(67, 67, 67, 0.2);
  background-size: 34%;
}

.room-num-more.active{
  background: #434343 url(https://iservice.daqisoft.cn/Public/Home/images/arrowup3.png) no-repeat center center;
  background-size: 34%;
}

.room-box {
  width: 1120rpx;
  position: relative;
  left: 0;
}

.room-box view {
  float: left;
  font-size: 26rpx;
  color: #fff;
  padding: 0 32rpx;
  position: relative;
}

.room-box view.active, .room-type .room-box view.active {
  color: #be9e70;
}

.room-box text {
  position: absolute;
  left: 50%;
  bottom: 0;
  width: 40rpx;
  height: 8rpx;
  border-radius: 10rpx;
  margin-left: -20rpx;
}

.room-box view.active text {
  background: #be9e70;
}

.room-type {
  height: 70rpx;
  line-height: 70rpx;
  background: #f0f0f0;
  position: relative;
}

.room-type .room-box view {
  color: #666;
}

.room-type .room-box text {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-left: -6rpx;
}

.room-type .room-num-more {
  box-shadow: -1rpx 1rpx 6rpx rgba(240, 240, 240, 0.2);
  background: #f0f0f0 url(https://iservice.daqisoft.cn/Public/Home/images/arrowdown2.png) no-repeat center center;
  background-size: 34%;
}

.room-type .room-num-more.active{
  background: #f0f0f0 url(https://iservice.daqisoft.cn/Public/Home/images/arrowup2.png) no-repeat center center;
  background-size: 34%;
}

.room-people-more, .room-type-more {
  height: 300rpx;
  width: 100%;
  position: absolute;
  bottom: -300rpx;
  left: 0;
  background: #353535;
  z-index: 999;
  box-shadow: 0 2rpx 6rpx rgba(67, 67, 67, 0.4);
}

.room-type-more {
  background: #f0f0f0;
}

.room-people-more-con {
  padding-top: 30rpx;
}

.room-people-more-con view {
  float: left;
  line-height: 1;
  padding: 12rpx 30rpx;
  font-size: 26rpx;
  border: 1rpx solid #fff;
  color: #fff;
  margin: 0 42rpx 30rpx;
  border-radius: 30rpx;
}

.room-type-more .room-people-more-con view {
  border: 1rpx solid #353535;
  color: #353535;
}

.room-content {
  padding-top: 34rpx;
  background: #fff;
}

.room-item {
  float: left;
  margin: 0 26rpx 48rpx;
}

.room-img {
  width: 322rpx;
  height: 238rpx;
  position: relative;
  border-radius: 8rpx;
}

.room-img image {
  width: 322rpx;
  height: 238rpx;
  border-radius: 8rpx;
}

.room-info{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: rgba(200, 165, 114, 0.8);
  font-size: 24rpx;
  color: #333;
  border-radius: 0 0 8rpx 8rpx;
}

.room-info text{
  display: block;
  padding: 12rpx 8rpx;
}

.reserve-room-btn{
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 10rpx;
  text-align: center;
  margin: 20rpx auto 0;
  font-size: 28rpx;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(199, 156, 98, 0.5);
}