<view class="info-input">
  <view class="input-item">
    <view class="flex-wrp">
      <view class="i-label">
        <text>*</text>姓名</view>
      <view class="i-input">
        <input type="text" value="{{names}}" bindinput="namesVal" />
      </view>
    </view>
  </view>
  <view class="input-item">
    <view class="flex-wrp">
      <view class="i-label">
        <text>*</text>手机</view>
      <view class="phone-input">
        <input type="number" value="{{phone}}" bindinput="phoneVal" />
      </view>
      <view class="getPhoneNumber">
        <button open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">自动输入</button>
      </view>
    </view>
  </view>
  <view class="input-item">
    <view class="flex-wrp">
      <view class="i-label">
        <text>*</text>验证码</view>
      <view class="verify-input">
        <input type="number" bindinput="verifyVal" />
      </view>
      <block wx:if="{{!seconds}}">
        <view class="get-verify btn-gradient" bindtap="getVerify" data-phone="{{transCard.phone}}">发送验证码</view>
      </block>
      <block wx:else>
        <view class="get-verify seconds">{{seconds}}秒重新获取</view>
      </block>
    </view>
  </view>

  <view class="dc-btn btn-gradient" bindtap="infoSave">确定</view>
</view>