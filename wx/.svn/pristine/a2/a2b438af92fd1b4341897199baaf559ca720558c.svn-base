<view class="contianer">

  <block wx:if="{{receiveCard}}">
    <view class="top-card" wx:for="{{receiveCard}}">
      <view class="card">
        <image src="{{!item.picurl ? cardPicUrl : showImgUrl + item.picurl}}" lazy-load></image>
      </view>

      <view class="card-info">
        <text space="nbsp" decode>{{item.membershiptypename}}     卡号: {{item.cardno}}     余额: {{item.Balance}}元</text>
      </view>

      <view class="again-reserve">
        <view bindtap="cardReturn" data-rguid="{{item.rguid}}">退回</view>
        <view class="active" bindtap="cardReceive" data-rguid="{{item.rguid}}">领取</view>
      </view>
    </view>
  </block>

  <form bindsubmit="formSubmit" report-submit="report-submit" style="{{!receiveCard ? 'display:block' : 'display:none'}}">
    <view class="info-input">
      <view class="input-item">
        <view class="flex-wrp">
          <view class="i-label">
            <text>*</text>姓名</view>
          <view class="i-input">
            <input type="text" name="names" value="{{names}}" />
          </view>
        </view>
      </view>

      <view class="input-item">
        <view class="flex-wrp">
          <view class="i-label">
            <text>*</text>手机</view>
          <view class="i-input">
            <input type="number" name="phone" value="{{phone}}" bindinput="inputPhone" />
          </view>
          <view class="getPhoneNumber">
            <button open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">自动输入</button>
          </view>
        </view>
      </view>

      <view class="input-item">
        <view class="flex-wrp">
          <view class="i-label">
            <text>*</text>验证码</view>
          <view class="verify-input">
            <input type="number" name="verify" />
          </view>
          <block wx:if="{{!seconds}}">
            <view class="get-verify btn-gradient" bindtap="getVerify" data-phone="{{phone}}">发送验证码</view>
          </block>
          <block wx:else>
            <view class="get-verify seconds">{{seconds}}秒重新获取</view>
          </block>
        </view>
      </view>

      <button class="dc-btn btn-gradient" form-type="submit">确定</button>
    </view>
  </form>

  <view class="goHome" bindtap="goHome">返回首页</view>
</view>