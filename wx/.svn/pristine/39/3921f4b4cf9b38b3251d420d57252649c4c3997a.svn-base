  //           wx.navigateTo({
  //             url: '/' + res.path,
  //           });
  //         } catch (e) {
  //           wx.showModal({
  //             title: '提示',
  //             content: '获取地址失败，无法跳转',
  //             showCancel: false
  //           })
  //         }
  //       }
  //     },
  //     fail: function (res) {
  //       wx.showModal({
  //         title: '提示',
  //         content: '调起客户端扫码界面失败',
  //         showCancel: false
  //       })
  //     }
  //   });
  // }

  }

});