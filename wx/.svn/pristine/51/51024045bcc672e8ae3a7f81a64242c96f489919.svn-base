<import src="../../../common/storelist.wxml" />
<view class="dc-title">
  <view></view>选择要充值的会员卡
</view>
<view class="do-card clear" style="height:{{height}}px">
  <!-- 门店列表模版 -->
  <template is="storelist" data="{{height: height,dcStore: dcStore,storeIdx: storeIdx}}" />

  <view class="dc-select" style="height:{{height}}px">
    <view class="d-cards" style="height:{{dcSHeight}}px">
      <scroll-view scroll-y enable-back-to-top style="height:{{dcSHeight}}px">
        <view class="select-c">
          <block wx:for="{{cardType}}">
            <view class="cards" data-url="../../pages/recharge-amount/recharge-amount?cardno={{item.CardNo}}&shopno={{item.ShopNo}}" bindtap="jumpurl">
              <image src="{{!item.PicUrl ? cardPicUrl : showImgUrl + item.PicUrl}}" lazy-load></image>
              <block wx:if="{{item.IsFyr == 1}}">
                <view class="is-fyr"></view>
              </block>
              <view class="balance">余额：¥{{item.Balance}}</view>
              <view class="card-type">{{item.MembershipTypeName}}</view>
              <view class="card-num">{{item.CardNo}}</view>
              <block wx:if="{{item.CardState != 0}}">
                <view class="card-state">{{item.CardState == 1 ? '已锁定': item.CardState == 2 ? '已挂失' : ''}}</view>
              </block>
            </view>
          </block>
        </view>
      </scroll-view>
    </view>
    
    <block wx:if="{{shopInfo.shoptel != '' || shopInfo.address != ''}}">
      <view class="s-info">
        <view class="s-info-c">
          <view class="s-info-b">
            <!-- <view>名称：和毅足道体育新城店</view> -->
            <block wx:if="{{shopInfo.shoptel != ''}}">
              <view data-tel="{{shopInfo.shoptel}}" bindtap="callphone">电话：{{shopInfo.shoptel}}</view>
            </block>

            <block wx:if="{{shopInfo.address != ''}}">
              <view data-address="{{shopInfo.address}}" data-sname="{{shopInfo.storename}}" bindtap="location">地址：{{shopInfo.address}}</view>
            </block>
          </view>
        </view>
      </view>
    </block>
  </view>
</view>

<!-- 返回首页按钮 -->
<view class="backhome-btn">
  <view>
    <navigator url="/pages/index/index" hover-class="none" open-type="reLaunch">
      <text>返回首页</text>
    </navigator>
  </view>
</view>