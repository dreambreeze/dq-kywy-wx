<view class='amcontainer'>
  <view class='input'>
      <textarea  bindinput='bindinput' show-confirm-bar="false" class='ta'
       placeholder='请输入备注信息' maxlength='50' placeholder-class='p-class' value="{{content}}">
   
      </textarea>
      <text class='talength'>{{talength}}/50</text>
  </view>
  <view class='auto'>
      <text class='a-title'>快捷标签</text>
      <view class='items'>
        <block  wx:for="{{autoList}}" wx:for-index="id" wx:for-item="sign" wx:key="a-id">
        <!-- <block  wx:for="{{autodone}}" wx:for-index="adid" wx:for-item="adone" wx:key="ad-id"> -->
              <view class="a-item " hover-class="active" hover-stay-time="50000" data-id="{{id}}"   bindtap='getinfo'>{{sign.name}}</view>
           <!-- </block> -->
        </block>
      </view>
  </view>
  <view class='complete' bindtap='bindcomplete'>
      <view class='c-name'>完成</view>
  </view>

</view>
