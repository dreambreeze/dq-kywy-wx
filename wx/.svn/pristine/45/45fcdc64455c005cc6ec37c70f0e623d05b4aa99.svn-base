.container{
  font-size: 26rpx;
}
.swiper swiper{
  width: 100%;
  height: 340rpx;
}
.swiper swiper-item image{
  width: 750rpx;
  height: 340rpx;
}

.prinfo{
padding:20rpx;
font-size:34rpx;
font-weight:bold;
}
.prinfo .pname{
  height: 56rpx;
  line-height: 56rpx;
}
.prinfo .pprice{
  height: 56rpx;
  display: flex;
  color: #db0000;
  align-items: center;
}
.pprice view{
  font-size: 26rpx;
  text-decoration: line-through;
  color: #999;
  font-weight: 300;
  margin:  0 16rpx;
}

.pr-intro{
  padding: 30rpx;
}
.pr-intro .pr-head{
  font-size: 28rpx;
  font-weight: bold;
  padding-bottom: 20rpx;
}
.pr-desc .d-item{
  display: flex;
  padding: 6rpx 0;
}
.pr-desc .d-item view{
  flex: 1;
  line-height: 42rpx;
  margin-top: -1rpx;
}