  /**
   * 房间人数类型拖拽开始
   */
  roomPStart: function (ev) {
    downX = ev.touches[0].pageX;
    var query = wx.createSelectorQuery();
    query.select('.room-people-touch').boundingClientRect(function (rect) {
      oUlLeft = rect.left;
